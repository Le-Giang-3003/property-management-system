@model PropertyManagementSystem.Web.ViewModels.Application.CreateRentalApplicationViewModel
@{
    ViewData["Title"] = "Apply for Rental";
    Layout = "_AuthLayout";
}

<div class="apply-container">
    <!-- Page Header -->
    <div class="apply-header">
        <div class="apply-header-content">
            <a asp-action="SearchProperties" asp-controller="Property" class="apply-back-link">
                <i class="bi bi-arrow-left"></i>
                Back to Properties
            </a>
            <h1 class="apply-title">Apply for Rental</h1>
            <p class="apply-subtitle">Complete the form below to submit your rental application</p>
        </div>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="apply-alert apply-alert-error">
            <i class="bi bi-exclamation-triangle-fill"></i>
            <span>@TempData["Error"]</span>
            <button type="button" class="apply-alert-close" onclick="this.parentElement.remove()">
                <i class="bi bi-x"></i>
            </button>
        </div>
    }

    @if (TempData["Warning"] != null)
    {
        <div class="apply-alert apply-alert-warning">
            <i class="bi bi-exclamation-circle-fill"></i>
            <span>@TempData["Warning"]</span>
            <button type="button" class="apply-alert-close" onclick="this.parentElement.remove()">
                <i class="bi bi-x"></i>
            </button>
        </div>
    }

    <form asp-action="Create" method="post" id="applicationForm" class="apply-form">
        @Html.AntiForgeryToken()

        <div class="apply-grid">
            <!-- Left Column - Main Form -->
            <div class="apply-main">
                <!-- Property Selection Card -->
                <div class="apply-card">
                    <div class="apply-card-header">
                        <div class="apply-card-icon">
                            <i class="bi bi-building"></i>
                        </div>
                        <h3>Select Property</h3>
                    </div>
                    <div class="apply-card-body">
                        @if (!string.IsNullOrEmpty(Model.PropertyName))
                        {
                            <div class="apply-selected-property">
                                <div class="apply-property-preview">
                                    <h4>@Model.PropertyName</h4>
                                    <p><i class="bi bi-geo-alt"></i> @Model.PropertyAddress</p>
                                    <div class="apply-property-rent">
                                        <span class="apply-rent-amount">@Model.MonthlyRent.ToString("N0") VND</span>
                                        <span class="apply-rent-period">/ month</span>
                                    </div>
                                </div>
                                <input type="hidden" asp-for="PropertyId" />
                            </div>
                        }
                        else
                        {
                            <div class="apply-form-group">
                                <label class="apply-label">Property <span class="required">*</span></label>
                                <select asp-for="PropertyId" asp-items="Model.AvailableProperties" class="apply-select" id="propertySelect">
                                    <option value="">-- Select a property --</option>
                                </select>
                                <span asp-validation-for="PropertyId" class="apply-error"></span>
                            </div>
                        }
                    </div>
                </div>

                <!-- Employment Information Card -->
                <div class="apply-card">
                    <div class="apply-card-header">
                        <div class="apply-card-icon">
                            <i class="bi bi-briefcase"></i>
                        </div>
                        <h3>Employment Information</h3>
                    </div>
                    <div class="apply-card-body">
                        <div class="apply-form-row">
                            <div class="apply-form-group">
                                <label class="apply-label">Employment Status <span class="required">*</span></label>
                                <select asp-for="EmploymentStatus" class="apply-select">
                                    <option value="">-- Select status --</option>
                                    <option value="Full-time">Full-time</option>
                                    <option value="Part-time">Part-time</option>
                                    <option value="Self-employed">Self-employed</option>
                                    <option value="Contract">Contract</option>
                                    <option value="Retired">Retired</option>
                                    <option value="Student">Student</option>
                                    <option value="Unemployed">Unemployed</option>
                                </select>
                                <span asp-validation-for="EmploymentStatus" class="apply-error"></span>
                            </div>
                            <div class="apply-form-group">
                                <label class="apply-label">Employer / Company</label>
                                <input asp-for="Employer" class="apply-input" placeholder="e.g., ABC Corporation" />
                                <span asp-validation-for="Employer" class="apply-error"></span>
                            </div>
                        </div>
                        <div class="apply-form-group">
                            <label class="apply-label">Monthly Income</label>
                            <div class="apply-input-group">
                                <input asp-for="MonthlyIncome" type="number" class="apply-input" placeholder="e.g., 15000000" />
                                <span class="apply-input-suffix">VND</span>
                            </div>
                            <span class="apply-hint">Your monthly income helps landlords assess your ability to pay rent</span>
                            <span asp-validation-for="MonthlyIncome" class="apply-error"></span>
                        </div>
                    </div>
                </div>

                <!-- Previous Residence Card -->
                <div class="apply-card">
                    <div class="apply-card-header">
                        <div class="apply-card-icon">
                            <i class="bi bi-house-door"></i>
                        </div>
                        <h3>Previous Residence</h3>
                    </div>
                    <div class="apply-card-body">
                        <div class="apply-form-group">
                            <label class="apply-label">Previous Address</label>
                            <input asp-for="PreviousAddress" class="apply-input" placeholder="e.g., 123 Main St, District 1, HCMC" />
                            <span asp-validation-for="PreviousAddress" class="apply-error"></span>
                        </div>
                        <div class="apply-form-row">
                            <div class="apply-form-group">
                                <label class="apply-label">Previous Landlord Name</label>
                                <input asp-for="PreviousLandlord" class="apply-input" placeholder="e.g., John Smith" />
                                <span asp-validation-for="PreviousLandlord" class="apply-error"></span>
                            </div>
                            <div class="apply-form-group">
                                <label class="apply-label">Previous Landlord Phone</label>
                                <input asp-for="PreviousLandlordPhone" class="apply-input" placeholder="e.g., 0901234567" />
                                <span class="apply-hint">Format: 0xxx xxx xxx</span>
                                <span asp-validation-for="PreviousLandlordPhone" class="apply-error"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Occupancy Details Card -->
                <div class="apply-card">
                    <div class="apply-card-header">
                        <div class="apply-card-icon">
                            <i class="bi bi-people"></i>
                        </div>
                        <h3>Occupancy Details</h3>
                    </div>
                    <div class="apply-card-body">
                        <div class="apply-form-row">
                            <div class="apply-form-group">
                                <label class="apply-label">Number of Occupants <span class="required">*</span></label>
                                <input asp-for="NumberOfOccupants" type="number" min="1" max="20" class="apply-input" />
                                <span class="apply-hint">Total number of people who will live in the property</span>
                                <span asp-validation-for="NumberOfOccupants" class="apply-error"></span>
                            </div>
                            <div class="apply-form-group">
                                <label class="apply-label">Desired Move-in Date <span class="required">*</span></label>
                                <input asp-for="DesiredMoveInDate" type="date" class="apply-input" id="DesiredMoveInDate" />
                                <span asp-validation-for="DesiredMoveInDate" class="apply-error"></span>
                            </div>
                        </div>

                        <div class="apply-form-group">
                            <div class="apply-checkbox-group">
                                <input asp-for="HasPets" type="checkbox" class="apply-checkbox" id="HasPets" />
                                <label for="HasPets" class="apply-checkbox-label">
                                    <span class="apply-checkbox-box">
                                        <i class="bi bi-check"></i>
                                    </span>
                                    <span>I have pets that will live with me</span>
                                </label>
                            </div>
                        </div>

                        <div class="apply-form-group" id="petDetailsDiv" style="display: none;">
                            <label class="apply-label">Pet Details</label>
                            <textarea asp-for="PetDetails" class="apply-textarea" rows="2" id="PetDetails"
                                      placeholder="e.g., 1 Corgi dog (3 years old), 2 Persian cats"></textarea>
                            <span class="apply-hint">Please provide details about type, breed, age, and number of pets</span>
                            <span asp-validation-for="PetDetails" class="apply-error"></span>
                        </div>
                    </div>
                </div>

                <!-- Additional Notes Card -->
                <div class="apply-card">
                    <div class="apply-card-header">
                        <div class="apply-card-icon">
                            <i class="bi bi-chat-text"></i>
                        </div>
                        <h3>Additional Information</h3>
                    </div>
                    <div class="apply-card-body">
                        <div class="apply-form-group">
                            <label class="apply-label">Additional Notes</label>
                            <textarea asp-for="AdditionalNotes" class="apply-textarea" rows="4"
                                      placeholder="e.g., I work night shifts, need parking space, looking for long-term lease..."></textarea>
                            <span class="apply-hint">Any additional information that might help the landlord understand your needs</span>
                            <span asp-validation-for="AdditionalNotes" class="apply-error"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Column - Summary -->
            <div class="apply-sidebar">
                <div class="apply-card apply-summary-card">
                    <div class="apply-card-header">
                        <div class="apply-card-icon">
                            <i class="bi bi-file-text"></i>
                        </div>
                        <h3>Application Summary</h3>
                    </div>
                    <div class="apply-card-body">
                        <div class="apply-summary-notice">
                            <i class="bi bi-info-circle"></i>
                            <p>Your application will be sent to the property owner for review. Please ensure all information is accurate and truthful.</p>
                        </div>

                        <div class="apply-summary-checklist">
                            <h4>Required Information:</h4>
                            <ul>
                                <li class="checklist-item" data-field="PropertyId">
                                    <i class="bi bi-circle"></i>
                                    <span>Property selection</span>
                                </li>
                                <li class="checklist-item" data-field="EmploymentStatus">
                                    <i class="bi bi-circle"></i>
                                    <span>Employment status</span>
                                </li>
                                <li class="checklist-item" data-field="NumberOfOccupants">
                                    <i class="bi bi-circle"></i>
                                    <span>Number of occupants</span>
                                </li>
                                <li class="checklist-item" data-field="DesiredMoveInDate">
                                    <i class="bi bi-circle"></i>
                                    <span>Move-in date</span>
                                </li>
                            </ul>
                        </div>

                        <div class="apply-actions">
                            <button type="submit" class="apply-btn-primary">
                                <i class="bi bi-send"></i>
                                Submit Application
                            </button>
                            <a asp-controller="Property" asp-action="SearchProperties" class="apply-btn-secondary">
                                <i class="bi bi-x"></i>
                                Cancel
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Styles {
    <style>
        .apply-container {
            padding: 24px 32px;
            max-width: 1200px;
            margin: 0 auto;
        }

        /* Header */
        .apply-header {
            margin-bottom: 24px;
        }

        .apply-back-link {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            color: #64748b;
            text-decoration: none;
            font-size: 14px;
            margin-bottom: 12px;
            transition: color 0.2s;
        }

        .apply-back-link:hover {
            color: #3b82f6;
        }

        .apply-title {
            font-size: 28px;
            font-weight: 700;
            color: #1e293b;
            margin: 0 0 4px 0;
        }

        .apply-subtitle {
            font-size: 15px;
            color: #64748b;
            margin: 0;
        }

        /* Alerts */
        .apply-alert {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 14px 16px;
            border-radius: 10px;
            margin-bottom: 20px;
            font-size: 14px;
        }

        .apply-alert-error {
            background: #fef2f2;
            color: #991b1b;
            border: 1px solid #fecaca;
        }

        .apply-alert-warning {
            background: #fefce8;
            color: #854d0e;
            border: 1px solid #fde047;
        }

        .apply-alert-close {
            margin-left: auto;
            background: none;
            border: none;
            cursor: pointer;
            color: inherit;
            opacity: 0.7;
        }

        /* Grid Layout */
        .apply-grid {
            display: grid;
            grid-template-columns: 1fr 380px;
            gap: 24px;
            align-items: start;
        }

        /* Cards */
        .apply-card {
            background: white;
            border: 1px solid #e2e8f0;
            border-radius: 12px;
            overflow: hidden;
            margin-bottom: 20px;
        }

        .apply-card-header {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 16px 20px;
            background: #f8fafc;
            border-bottom: 1px solid #e2e8f0;
        }

        .apply-card-icon {
            width: 40px;
            height: 40px;
            background: #eff6ff;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #3b82f6;
            font-size: 18px;
        }

        .apply-card-header h3 {
            font-size: 16px;
            font-weight: 600;
            color: #1e293b;
            margin: 0;
        }

        .apply-card-body {
            padding: 20px;
        }

        /* Selected Property */
        .apply-selected-property {
            background: #f0fdf4;
            border: 1px solid #86efac;
            border-radius: 10px;
            padding: 16px;
        }

        .apply-property-preview h4 {
            font-size: 16px;
            font-weight: 600;
            color: #1e293b;
            margin: 0 0 8px 0;
        }

        .apply-property-preview p {
            font-size: 14px;
            color: #64748b;
            margin: 0 0 12px 0;
            display: flex;
            align-items: center;
            gap: 6px;
        }

        .apply-property-rent {
            display: flex;
            align-items: baseline;
            gap: 4px;
        }

        .apply-rent-amount {
            font-size: 20px;
            font-weight: 700;
            color: #16a34a;
        }

        .apply-rent-period {
            font-size: 13px;
            color: #64748b;
        }

        /* Form Elements */
        .apply-form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 16px;
        }

        .apply-form-group {
            margin-bottom: 16px;
        }

        .apply-form-group:last-child {
            margin-bottom: 0;
        }

        .apply-label {
            display: block;
            font-size: 14px;
            font-weight: 500;
            color: #374151;
            margin-bottom: 6px;
        }

        .apply-label .required {
            color: #ef4444;
        }

        .apply-input,
        .apply-select,
        .apply-textarea {
            width: 100%;
            padding: 12px 14px;
            font-size: 14px;
            border: 1px solid #e2e8f0;
            border-radius: 8px;
            transition: all 0.2s;
            box-sizing: border-box;
        }

        .apply-input:focus,
        .apply-select:focus,
        .apply-textarea:focus {
            outline: none;
            border-color: #3b82f6;
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
        }

        .apply-input-group {
            display: flex;
            align-items: stretch;
        }

        .apply-input-group .apply-input {
            border-radius: 8px 0 0 8px;
        }

        .apply-input-suffix {
            padding: 12px 16px;
            background: #f1f5f9;
            border: 1px solid #e2e8f0;
            border-left: none;
            border-radius: 0 8px 8px 0;
            font-size: 14px;
            color: #64748b;
            font-weight: 500;
        }

        .apply-hint {
            display: block;
            font-size: 12px;
            color: #94a3b8;
            margin-top: 4px;
        }

        .apply-error {
            display: block;
            font-size: 12px;
            color: #ef4444;
            margin-top: 4px;
        }

        /* Checkbox */
        .apply-checkbox-group {
            display: flex;
            align-items: center;
        }

        .apply-checkbox {
            display: none;
        }

        .apply-checkbox-label {
            display: flex;
            align-items: center;
            gap: 12px;
            cursor: pointer;
            font-size: 14px;
            color: #374151;
        }

        .apply-checkbox-box {
            width: 24px;
            height: 24px;
            border: 2px solid #e2e8f0;
            border-radius: 6px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.2s;
        }

        .apply-checkbox-box i {
            display: none;
            color: white;
            font-size: 14px;
        }

        .apply-checkbox:checked + .apply-checkbox-label .apply-checkbox-box {
            background: #3b82f6;
            border-color: #3b82f6;
        }

        .apply-checkbox:checked + .apply-checkbox-label .apply-checkbox-box i {
            display: block;
        }

        /* Summary Card */
        .apply-summary-card {
            position: sticky;
            top: 94px;
        }

        .apply-summary-notice {
            display: flex;
            gap: 12px;
            padding: 14px;
            background: #fef3c7;
            border-radius: 8px;
            margin-bottom: 20px;
        }

        .apply-summary-notice i {
            color: #d97706;
            font-size: 18px;
            flex-shrink: 0;
        }

        .apply-summary-notice p {
            font-size: 13px;
            color: #92400e;
            margin: 0;
            line-height: 1.5;
        }

        .apply-summary-checklist h4 {
            font-size: 14px;
            font-weight: 600;
            color: #374151;
            margin: 0 0 12px 0;
        }

        .apply-summary-checklist ul {
            list-style: none;
            padding: 0;
            margin: 0 0 20px 0;
        }

        .checklist-item {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 8px 0;
            font-size: 14px;
            color: #64748b;
        }

        .checklist-item i {
            font-size: 16px;
        }

        .checklist-item.completed {
            color: #16a34a;
        }

        .checklist-item.completed i::before {
            content: "\F26B";
        }

        /* Buttons */
        .apply-actions {
            display: flex;
            flex-direction: column;
            gap: 12px;
        }

        .apply-btn-primary {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            padding: 14px 24px;
            background: #3b82f6;
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 15px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s;
        }

        .apply-btn-primary:hover {
            background: #2563eb;
        }

        .apply-btn-secondary {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            padding: 12px 24px;
            background: white;
            color: #64748b;
            border: 1px solid #e2e8f0;
            border-radius: 8px;
            font-size: 14px;
            font-weight: 500;
            text-decoration: none;
            transition: all 0.2s;
        }

        .apply-btn-secondary:hover {
            background: #f8fafc;
            color: #374151;
        }

        /* Responsive */
        @@media (max-width: 1024px) {
            .apply-grid {
                grid-template-columns: 1fr;
            }

            .apply-summary-card {
                position: static;
            }
        }

        @@media (max-width: 768px) {
            .apply-container {
                padding: 16px;
            }

            .apply-form-row {
                grid-template-columns: 1fr;
            }
        }
    </style>
}

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@4.0.0/dist/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        $(document).ready(function() {
            // Show/hide pet details
            function togglePetDetails() {
                if ($('#HasPets').is(':checked')) {
                    $('#petDetailsDiv').slideDown();
                    $('#PetDetails').focus();
                } else {
                    $('#petDetailsDiv').slideUp();
                    $('#PetDetails').val('');
                }
            }

            $('#HasPets').on('change', togglePetDetails);
            togglePetDetails();

            // Set minimum date to today
            var today = new Date().toISOString().split('T')[0];
            $('#DesiredMoveInDate').attr('min', today);

            // Update checklist based on form values
            function updateChecklist() {
                $('[data-field]').each(function() {
                    var field = $(this).data('field');
                    var $input = $('[name="' + field + '"]');
                    var hasValue = $input.val() && $input.val().trim() !== '';

                    if (hasValue) {
                        $(this).addClass('completed');
                    } else {
                        $(this).removeClass('completed');
                    }
                });
            }

            $('input, select, textarea').on('change keyup', updateChecklist);
            updateChecklist();

            // Form submit
            $('#applicationForm').on('submit', function(e) {
                if (!$(this).valid()) {
                    e.preventDefault();
                    Swal.fire({
                        icon: 'warning',
                        title: 'Incomplete Form',
                        text: 'Please fill in all required fields',
                        confirmButtonColor: '#3b82f6'
                    });
                }
            });
        });

        @if (TempData["Success"] != null)
        {
            <text>
            Swal.fire({
                icon: 'success',
                title: 'Success!',
                text: @Html.Raw(Json.Serialize(TempData["Success"])),
                timer: 3000,
                showConfirmButton: false
            });
            </text>
        }
    </script>
}
