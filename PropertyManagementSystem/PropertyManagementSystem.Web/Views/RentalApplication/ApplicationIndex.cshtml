@model IEnumerable<PropertyManagementSystem.DAL.Entities.RentalApplication>

@{
    ViewData["Title"] = "Quản lý đơn xin thuê";
    var selectedStatus = ViewBag.SelectedStatus as string;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-clipboard-list"></i> Quản lý đơn xin thuê</h2>
        <div>
            <span class="badge bg-primary fs-6">Tổng: @Model.Count() đơn</span>
        </div>
    </div>

    <!-- ✅ STATISTICS - 3 Cards Đẹp -->
    <div class="row mb-4 g-3">
        <!-- Chờ xử lý -->
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100" style="background: linear-gradient(135deg, #f6d365 0%, #fda085 100%);">
                <div class="card-body text-center text-white py-4">
                    <div class="mb-2">
                        <i class="fas fa-clock fa-3x opacity-75"></i>
                    </div>
                    <h2 class="fw-bold mb-1">@Model.Count(a => a.Status == "Pending")</h2>
                    <p class="mb-0 text-uppercase fw-semibold">Chờ xử lý</p>
                </div>
            </div>
        </div>

        <!-- Đã duyệt -->
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100" style="background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);">
                <div class="card-body text-center text-white py-4">
                    <div class="mb-2">
                        <i class="fas fa-check-circle fa-3x opacity-75"></i>
                    </div>
                    <h2 class="fw-bold mb-1">@Model.Count(a => a.Status == "Approved")</h2>
                    <p class="mb-0 text-uppercase fw-semibold">Đã duyệt</p>
                </div>
            </div>
        </div>

        <!-- Từ chối -->
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100" style="background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);">
                <div class="card-body text-center text-white py-4">
                    <div class="mb-2">
                        <i class="fas fa-times-circle fa-3x opacity-75"></i>
                    </div>
                    <h2 class="fw-bold mb-1">@Model.Count(a => a.Status == "Rejected")</h2>
                    <p class="mb-0 text-uppercase fw-semibold">Từ chối</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Filter -->
    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label class="form-label fw-semibold">
                        <i class="fas fa-filter text-primary"></i> Lọc theo trạng thái
                    </label>
                    <select name="status" class="form-select" onchange="this.form.submit()">
                        <option value="">Tất cả</option>
                        <option value="Pending" selected="@(selectedStatus == "Pending")">Chờ xử lý</option>
                        <option value="Approved" selected="@(selectedStatus == "Approved")">Đã duyệt</option>
                        <option value="Rejected" selected="@(selectedStatus == "Rejected")">Từ chối</option>
                        <option value="Withdrawn" selected="@(selectedStatus == "Withdrawn")">Đã rút</option>
                    </select>
                </div>
                <div class="col-md-4">
                    @if (!string.IsNullOrEmpty(selectedStatus))
                    {
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-redo"></i> Xóa bộ lọc
                        </a>
                    }
                </div>
            </form>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center py-5">
            <i class="fas fa-inbox fa-3x mb-3"></i>
            <h4>Không có đơn xin thuê nào</h4>
            <p class="text-muted">@(string.IsNullOrEmpty(selectedStatus) ? "Chưa có đơn xin thuê nào được gửi" : "Không có đơn với trạng thái này")</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Mã đơn</th>
                        <th>Người thuê</th>
                        <th>Bất động sản</th>
                        <th>Ngày gửi</th>
                        <th>Thu nhập</th>
                        <th class="text-center">Trạng thái</th>
                        <th class="text-center">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var app in Model.OrderByDescending(a => a.CreatedAt))
                    {
                        <tr>
                            <td><strong class="text-primary">@app.ApplicationNumber</strong></td>
                            <td>
                                <div><strong>@app.Applicant?.FullName</strong></div>
                                <small class="text-muted">@app.Applicant?.Email</small><br />
                                <small class="text-muted"><i class="fas fa-phone"></i> @app.Applicant?.PhoneNumber</small>
                            </td>
                            <td>
                                <div><strong>@app.Property?.Name</strong></div>
                                <small class="text-muted">@app.Property?.Address</small>
                            </td>
                            <td>
                                <div>@app.CreatedAt.ToString("dd/MM/yyyy")</div>
                                <small class="text-muted">@app.CreatedAt.ToString("HH:mm")</small>
                            </td>
                            <td>
                                @if (app.MonthlyIncome.HasValue)
                                {
                                    <span class="fw-semibold text-success">@app.MonthlyIncome.Value.ToString("N0") VNĐ</span>
                                }
                                else
                                {
                                    <span class="text-muted">Chưa cung cấp</span>
                                }
                            </td>
                            <td class="text-center">
                                @switch (app.Status)
                                {
                                    case "Pending":
                                        <span class="badge bg-warning text-dark">Chờ xử lý</span>
                                        break;
                                    case "Approved":
                                        <span class="badge bg-success">Đã duyệt</span>
                                        break;
                                    case "Rejected":
                                        <span class="badge bg-danger">Từ chối</span>
                                        break;
                                    case "Withdrawn":
                                        <span class="badge bg-secondary">Đã rút</span>
                                        break;
                                }
                            </td>
                            <td class="text-center">
                                <a asp-action="Details" asp-route-id="@app.ApplicationId"
                                   class="btn btn-sm btn-primary">
                                    <i class="fas fa-eye"></i> Xem
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>