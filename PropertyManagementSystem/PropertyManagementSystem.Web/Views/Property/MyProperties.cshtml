                grid-template-columns: repeat(2, 1fr);
            }

            .properties-grid {
                grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            }
        }

        @@media (max-width: 768px) {
            .my-properties-container {
                padding: 20px;
            }

            .page-header {
                flex-direction: column;
                gap: 16px;
            }

            .btn-create {
                width: 100%;
                justify-content: center;
            }

            .stats-grid {
                grid-template-columns: 1fr;
            }

            .properties-grid {
                grid-template-columns: 1fr;
            }

            .status-options {
                grid-template-columns: 1fr;
            }
        }
    </style>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function showStatusModal(propertyId, currentStatus) {
            $('#modalPropertyId').val(propertyId);
            $('#modalCurrentStatus').val(currentStatus);

            // Highlight current status
            $('.status-option').removeClass('active');
            $(`.status-option[data-status="${currentStatus}"]`).addClass('active');

            new bootstrap.Modal(document.getElementById('statusModal')).show();
        }

        $('.status-option').on('click', async function() {
            const newStatus = $(this).data('status');
            const propertyId = $('#modalPropertyId').val();
            const currentStatus = $('#modalCurrentStatus').val();

            if (newStatus === currentStatus) {
                Swal.fire({
                    icon: 'info',
                    title: 'Notice',
                    text: 'Status unchanged',
                    timer: 2000,
                    showConfirmButton: false
                });
                bootstrap.Modal.getInstance(document.getElementById('statusModal')).hide();
                return;
            }

            try {
                const response = await fetch('@Url.Action("QuickStatusUpdate", "Property")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    body: `propertyId=${propertyId}&newStatus=${newStatus}`
                });

                const result = await response.json();

                if (result.success) {
                    await Swal.fire({
                        icon: 'success',
                        title: 'Success!',
                        text: result.message,
                        timer: 2000,
                        showConfirmButton: false
                    });
                    location.reload();
                } else {
                    throw new Error(result.message);
                }
            } catch (error) {
                Swal.fire({
                    icon: 'error',
                    title: 'Error!',
                    text: error.message
                });
            }

            bootstrap.Modal.getInstance(document.getElementById('statusModal')).hide();
        });
    </script>
}

@functions {
    string GetStatusClass(string status) => status switch
    {
        "Available" => "available",
        "Rented" => "rented",
        "Maintenance" => "maintenance",
        _ => "unavailable"
    };

    string GetStatusDisplay(string status) => status switch
    {
        "Available" => "Available",
        "Rented" => "Rented",
        "Maintenance" => "Maintenance",
        "Unavailable" => "Unavailable",
        _ => status
    };

    string FormatVNCurrency(decimal amount)
    {
        return "$" + amount.ToString("#,##0", new System.Globalization.CultureInfo("en-US"));
    }
}
