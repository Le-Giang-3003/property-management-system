@model IEnumerable<PropertyManagementSystem.DAL.Entities.Property>

@{
    ViewData["Title"] = "My Properties";
    Layout = "_AuthLayout";
    ViewData["PortalMode"] = "Landlord";
    var totalProperties = ViewBag.TotalProperties as int? ?? 0;
    var availableCount = ViewBag.AvailableCount as int? ?? 0;
    var rentedCount = ViewBag.RentedCount as int? ?? 0;
    var maintenanceCount = ViewBag.MaintenanceCount as int? ?? 0;
}

<div class="my-properties-container">
    <!-- Header -->
    <div class="page-header">
        <div class="header-content">
            <h1 class="page-title">
                <i class="bi bi-building"></i>
                My Properties
            </h1>
            <p class="page-subtitle">Manage all your properties</p>
        </div>
        <div class="header-actions">
            <a asp-action="Create" class="btn-create">
                <i class="bi bi-plus-circle"></i>
                Add New Property
            </a>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="stats-grid">
        <div class="stat-card total">
            <div class="stat-icon">
                <i class="bi bi-buildings"></i>
            </div>
            <div class="stat-info">
                <h3>@totalProperties</h3>
                <p>Total</p>
            </div>
        </div>

        <div class="stat-card available">
            <div class="stat-icon">
                <i class="bi bi-check-circle"></i>
            </div>
            <div class="stat-info">
                <h3>@availableCount</h3>
                <p>Available</p>
            </div>
        </div>

        <div class="stat-card rented">
            <div class="stat-icon">
                <i class="bi bi-house-check"></i>
            </div>
            <div class="stat-info">
                <h3>@rentedCount</h3>
                <p>Rented</p>
            </div>
        </div>

        <div class="stat-card maintenance">
            <div class="stat-icon">
                <i class="bi bi-tools"></i>
            </div>
            <div class="stat-info">
                <h3>@maintenanceCount</h3>
                <p>Maintenance</p>
            </div>
        </div>
    </div>

    <!-- Properties List -->
    @if (Model.Any())
    {
        <div class="properties-grid">
            @foreach (var property in Model)
            {
                var thumbnail = property.Images?.FirstOrDefault(i => i.IsThumbnail)
                ?? property.Images?.FirstOrDefault();
                var imageUrl = thumbnail?.ImageUrl ?? "/images/no-image.jpg";

                <div class="property-card" data-property-id="@property.PropertyId">
                    <div class="property-image">
                        <img src="@imageUrl" alt="@property.Name">
                        <div class="status-badge @GetStatusClass(property.Status)">
                            @GetStatusDisplay(property.Status)
                        </div>
                        @if (thumbnail?.IsThumbnail == true)
                        {
                            <div class="thumbnail-badge">
                                <i class="bi bi-star-fill"></i>
                            </div>
                        }
                    </div>

                    <div class="property-content">
                        <h3 class="property-name">@property.Name</h3>

                        <div class="property-meta">
                            <span class="property-type">
                                <i class="bi bi-house-door"></i>
                                @property.PropertyType
                            </span>
                            <span class="property-location">
                                <i class="bi bi-geo-alt"></i>
                                @property.City
                            </span>
                        </div>

                        <div class="property-specs">
                            <span>
                                <i class="bi bi-door-closed"></i>
                                @property.Bedrooms BD
                            </span>
                            <span>
                                <i class="bi bi-droplet"></i>
                                @property.Bathrooms BA
                            </span>
                            <span>
                                <i class="bi bi-rulers"></i>
                                @property.SquareFeet.ToString("N0") ftÂ²
                            </span>
                        </div>

                        <div class="property-price">
                            <span class="price-amount">@FormatVNCurrency(property.RentAmount)</span>
                            <span class="price-period">/month</span>
                        </div>

                        <div class="property-footer">
                            <div class="property-images-info">
                                <i class="bi bi-images"></i>
                                <span>@(property.Images?.Count ?? 0) photos</span>
                            </div>
                            <div class="property-date">
                                <i class="bi bi-clock"></i>
                                @property.CreatedAt.ToString("dd/MM/yyyy")
                            </div>
                        </div>

                        <div class="property-actions">
                            <div class="action-row">
                                <a asp-action="Details" asp-route-id="@property.PropertyId"
                                   class="btn-action view" title="View Details">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@property.PropertyId"
                                   class="btn-action edit" title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="ManageImages" asp-route-id="@property.PropertyId"
                                   class="btn-action images" title="Manage Images">
                                    <i class="bi bi-images"></i>
                                </a>
                                <button type="button" class="btn-action status"
                                        onclick="showStatusModal(@property.PropertyId, '@property.Status')"
                                        title="Change Status">
                                    <i class="bi bi-arrow-repeat"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <i class="bi bi-building-add"></i>
            <h3>No properties yet</h3>
            <p>Start by adding your first property</p>
            <a asp-action="Create" class="btn-create-large">
                <i class="bi bi-plus-circle"></i>
                Add First Property
            </a>
        </div>
    }
</div>

<!-- Quick Status Update Modal -->
<div class="modal fade" id="statusModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5><i class="bi bi-arrow-repeat"></i> Change Status</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="modalPropertyId">
                <input type="hidden" id="modalCurrentStatus">

                <div class="status-options">
                    <button type="button" class="status-option available" data-status="Available">
                        <i class="bi bi-check-circle"></i>
                        <span>Available</span>
                    </button>
                    <button type="button" class="status-option rented" data-status="Rented">
                        <i class="bi bi-house-check"></i>
                        <span>Rented</span>
                    </button>
                    <button type="button" class="status-option maintenance" data-status="Maintenance">
                        <i class="bi bi-tools"></i>
                        <span>Maintenance</span>
                    </button>
                    <button type="button" class="status-option unavailable" data-status="Unavailable">
                        <i class="bi bi-x-circle"></i>
                        <span>Unavailable</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.AntiForgeryToken()

@section Styles {
    <style>
