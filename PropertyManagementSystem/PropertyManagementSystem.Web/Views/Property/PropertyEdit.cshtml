@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        const propertyId = @Model.PropertyId;
        // Quick upload handler
        function handleQuickUpload(input) {
            if (input.files && input.files.length > 0) {
                const modal = new bootstrap.Modal(document.getElementById('uploadModal'));
                const modalFileInput = document.getElementById('fileInput');

                const dataTransfer = new DataTransfer();
                for (let file of input.files) {
                    dataTransfer.items.add(file);
                }
                modalFileInput.files = dataTransfer.files;

                const event = new Event('change');
                modalFileInput.dispatchEvent(event);

                modal.show();
            }
        }

        //  Upload form
        document.getElementById('uploadForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            const btn = document.getElementById('uploadBtn');
            btn.disabled = true;
            btn.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Đang upload...';

            try {
                const formData = new FormData(this);
                const response = await fetch('@Url.Action("UploadImages", "Property")', {
                    method: 'POST',
                    headers: { 'X-Requested-With': 'XMLHttpRequest' },
                    body: formData
                });

                const result = await response.json();

                if (result.success) {
                    await Swal.fire({
                        icon: 'success',
                        title: 'Thành công!',
                        text: result.message,
                        timer: 2000,
                        showConfirmButton: false
                    });
                    location.reload();
                } else {
                    throw new Error(result.message);
                }
            } catch (error) {
                Swal.fire({
                    icon: 'error',
                    title: 'Lỗi!',
                    text: error.message || 'Có lỗi xảy ra'
                });
                btn.disabled = false;
                btn.innerHTML = '<i class="bi bi-upload"></i> Upload';
            }
        });

        // Preview multiple images
        document.getElementById('fileInput').addEventListener('change', function(e) {
            const preview = document.getElementById('imagePreview');
            preview.innerHTML = '';

            if (this.files.length > 0) {
                preview.innerHTML = '<div class="preview-grid" style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 10px; margin-top: 15px;"></div>';
                const grid = preview.querySelector('.preview-grid');

                Array.from(this.files).forEach((file, index) => {
                    if (file.type.startsWith('image/')) {
                        const reader = new FileReader();
                        reader.onload = (e) => {
                            const div = document.createElement('div');
                            div.innerHTML = `
                                <img src="${e.target.result}" class="img-thumbnail" style="width: 100%; height: 100px; object-fit: cover;">
                                <small class="d-block text-center mt-1">${file.name}</small>
                            `;
                            grid.appendChild(div);
                        };
                        reader.readAsDataURL(file);
                    }
                });
            }
        });

        // Show image
        function showImage(url, caption) {
            document.getElementById('imageTitle').textContent = caption;
            document.getElementById('imageView').src = url;
            new bootstrap.Modal(document.getElementById('imageModal')).show();
        }

        // Set thumbnail
        async function setThumbnail(imageId) {
            try {
                const response = await fetch('@Url.Action("SetThumbnail", "Property")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: `imageId=${imageId}&propertyId=${propertyId}`
                });

                const result = await response.json();

                if (result.success) {
                    await Swal.fire({
                        icon: 'success',
                        title: 'Thành công!',
                        text: result.message,
                        timer: 1500,
                        showConfirmButton: false
                    });
                    location.reload();
                } else {
                    throw new Error(result.message);
                }
            } catch (error) {
                Swal.fire({
                    icon: 'error',
                    title: 'Lỗi!',
                    text: error.message
                });
            }
        }

        // Delete image
        function deleteImage(imageId, caption) {
            Swal.fire({
                title: 'Xóa hình ảnh?',
                text: `Xóa "${caption}"?`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc2626',
                confirmButtonText: 'Xóa',
                cancelButtonText: 'Hủy'
            }).then(async (result) => {
                if (result.isConfirmed) {
                    try {
                        const response = await fetch('@Url.Action("DeleteImage", "Property")', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/x-www-form-urlencoded',
                                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                            },
                            body: `imageId=${imageId}&propertyId=${propertyId}`
                        });

                        const data = await response.json();

                        if (data.success) {
                            await Swal.fire({
                                icon: 'success',
                                title: 'Đã xóa!',
                                text: data.message,
                                timer: 1500,
                                showConfirmButton: false
                            });
                            location.reload();
                        } else {
                            throw new Error(data.message);
                        }
                    } catch (error) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Lỗi!',
                            text: error.message
                        });
                    }
                }
            });
        }

        // Drag and drop
        document.addEventListener('DOMContentLoaded', function() {
            const dropZone = document.getElementById('dropZone');

            if (dropZone) {
                ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
                    dropZone.addEventListener(eventName, preventDefaults, false);
                });

                function preventDefaults(e) {
                    e.preventDefault();
                    e.stopPropagation();
                }

                ['dragenter', 'dragover'].forEach(eventName => {
                    dropZone.addEventListener(eventName, () => {
                        dropZone.classList.add('drag-over');
                    });
                });

                ['dragleave', 'drop'].forEach(eventName => {
                    dropZone.addEventListener(eventName, () => {
                        dropZone.classList.remove('drag-over');
                    });
                });

                dropZone.addEventListener('drop', function(e) {
                    const files = e.dataTransfer.files;
                    if (files.length > 0) {
                        const input = document.getElementById('quickUploadInput');
                        input.files = files;
                        handleQuickUpload(input);
                    }
                });
            }
        });

    </script>
}

