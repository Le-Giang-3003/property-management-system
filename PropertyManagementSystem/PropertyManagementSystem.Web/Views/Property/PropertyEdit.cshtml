@model PropertyManagementSystem.DAL.Entities.Property

@{
    ViewData["Title"] = "Edit Property";
    Layout = "_AuthLayout";
    ViewData["PortalMode"] = "Landlord";
    
    // Get property types from ViewBag with null safety
    var propertyTypes = ViewBag.PropertyTypes as List<SelectListItem> ?? new();
}

<div class="create-property-container">
    <!-- Page Header -->
    <div class="page-header">
        <div class="header-content">
            <h1 class="page-title">
                <i class="bi bi-pencil-square"></i>
                Edit Property: @Model.Name
            </h1>
            <p class="page-subtitle">
                @switch (Model.Status)
                {
                    case "Available":
                        <span class="badge" style="background: #dcfce7; color: #166534; padding: 4px 12px; border-radius: 12px; font-size: 12px;">Available</span>
                        break;
                    case "Rented":
                        <span class="badge" style="background: #fef3c7; color: #92400e; padding: 4px 12px; border-radius: 12px; font-size: 12px;">Rented</span>
                        break;
                    case "Maintenance":
                        <span class="badge" style="background: #dbeafe; color: #1e40af; padding: 4px 12px; border-radius: 12px; font-size: 12px;">Maintenance</span>
                        break;
                    case "Unavailable":
                        <span class="badge" style="background: #f1f5f9; color: #475569; padding: 4px 12px; border-radius: 12px; font-size: 12px;">Unavailable</span>
                        break;
                }
                <span style="color: #64748b;">@Model.PropertyType • @Model.SquareFeet.ToString("N0") ft²</span>
            </p>
        </div>
        <div style="display: flex; gap: 12px;">
            <a asp-action="Details" asp-route-id="@Model.PropertyId" class="btn-back">
                <i class="bi bi-eye"></i>
                View Details
            </a>
            <a asp-action="Index" class="btn-back">
                <i class="bi bi-arrow-left"></i>
                Back
            </a>
        </div>
    </div>

    <!-- Alerts -->
    @if (TempData["Success"] != null)
    {
        <div class="validation-summary" style="background: #dcfce7; border-color: #86efac; color: #166534;">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="validation-summary">
            <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
        </div>
    }
    @if (TempData["Warning"] != null)
    {
        <div class="validation-summary" style="background: #fef3c7; border-color: #fde68a; color: #92400e;">
            <i class="bi bi-exclamation-triangle"></i> @TempData["Warning"]
        </div>
    }

    <!-- Form -->
    <form asp-action="Edit" method="post" class="property-form">
        <input type="hidden" asp-for="PropertyId" />
        <input type="hidden" asp-for="LandlordId" />
        <input type="hidden" asp-for="CreatedAt" />
        
        <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

        <!-- Section 1: Basic Info -->
        <div class="form-section">
            <div class="section-title">
                <h3>Basic Information</h3>
                <span class="section-badge">Step 1/4</span>
            </div>
            <div class="form-card">
                <div class="form-group">
                    <label asp-for="Name" class="form-label">
                        Property Name
                        <span class="required">*</span>
                    </label>
                    <input asp-for="Name" class="form-input" placeholder="E.g: 2BR Premium Apartment District 7" 
                           required maxlength="200" aria-describedby="name-error" />
                    <span asp-validation-for="Name" class="form-error" id="name-error"></span>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="PropertyType" class="form-label">
                            Property Type
                            <span class="required">*</span>
                        </label>
                        <select asp-for="PropertyType" class="form-select" asp-items="propertyTypes" 
                                required aria-describedby="propertytype-error">
                            <option value="">-- Select type --</option>
                        </select>
                        <span asp-validation-for="PropertyType" class="form-error" id="propertytype-error"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="AvailableFrom" class="form-label">Available From</label>
                        <input asp-for="AvailableFrom" type="date" class="form-input" 
                               aria-describedby="availablefrom-error" />
                        <span asp-validation-for="AvailableFrom" class="form-error" id="availablefrom-error"></span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Section 2: Location -->
        <div class="form-section">
            <div class="section-title">
                <h3>Address</h3>
                <span class="section-badge">Step 2/4</span>
            </div>
            <div class="form-card">
                <div class="form-group">
                    <label asp-for="Address" class="form-label">
                        Detailed Address
                        <span class="required">*</span>
                    </label>
                    <input asp-for="Address" class="form-input" placeholder="123 ABC Street, XYZ Ward" />
                    <span asp-validation-for="Address" class="form-error"></span>
                </div>

                <div class="form-row-3">
                    <div class="form-group">
                        <label asp-for="City" class="form-label">City</label>
                        <input asp-for="City" class="form-input" placeholder="Ho Chi Minh City" />
                        <span asp-validation-for="City" class="form-error"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="District" class="form-label">District</label>
                        <input asp-for="District" class="form-input" placeholder="District 7" />
                        <span asp-validation-for="District" class="form-error"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ZipCode" class="form-label">Zip Code</label>
                        <input asp-for="ZipCode" class="form-input" placeholder="70000" />
                        <span asp-validation-for="ZipCode" class="form-error"></span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Section 3: Details & Pricing -->
        <div class="form-section">
            <div class="section-title">
                <h3>Specifications & Pricing</h3>
                <span class="section-badge">Step 3/4</span>
            </div>
            <div class="form-card">
                <div class="form-row-4">
                    <div class="form-group">
                        <label asp-for="Bedrooms" class="form-label">
                            Bedrooms
                            <span class="required">*</span>
                        </label>
                        <div class="input-with-icon">
                            <i class="bi bi-door-closed"></i>
                            <input asp-for="Bedrooms" type="number" min="0" max="20" class="form-input" placeholder="2" />
                        </div>
                        <span asp-validation-for="Bedrooms" class="form-error"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Bathrooms" class="form-label">
                            Bathrooms
                            <span class="required">*</span>
                        </label>
                        <div class="input-with-icon">
                            <i class="bi bi-droplet"></i>
                            <input asp-for="Bathrooms" type="number" min="0" max="10" class="form-input" placeholder="2" />
                        </div>
                        <span asp-validation-for="Bathrooms" class="form-error"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SquareFeet" class="form-label">
                            Area (ft²)
                            <span class="required">*</span>
                        </label>
                        <div class="input-with-icon">
                            <i class="bi bi-rulers"></i>
                            <input asp-for="SquareFeet" type="number" step="0.01" min="1" class="form-input" placeholder="850" />
                        </div>
                        <span asp-validation-for="SquareFeet" class="form-error"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Status" class="form-label">Status</label>
                        <select asp-for="Status" class="form-select">
                            <option value="Available">Available</option>
                            <option value="Rented">Rented</option>
                            <option value="Maintenance">Maintenance</option>
                            <option value="Unavailable">Unavailable</option>
                        </select>
                        <span asp-validation-for="Status" class="form-error"></span>
                    </div>
                </div>

                <div class="divider"></div>

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="RentAmount" class="form-label">
                            Rent/Month (₫)
                            <span class="required">*</span>
                        </label>
                        <div class="input-with-icon">
                            <i class="bi bi-currency-dollar" aria-label="Vietnamese Dong"></i>
                            <input asp-for="RentAmount" type="number" step="100000" min="100000" class="form-input money-input" 
                                   placeholder="5,000,000" aria-describedby="rentamount-error" />
                        </div>
                        <span asp-validation-for="RentAmount" class="form-error" id="rentamount-error"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DepositAmount" class="form-label">Deposit (₫)</label>
                        <div class="input-with-icon">
                            <i class="bi bi-piggy-bank" aria-hidden="true"></i>
                            <input asp-for="DepositAmount" type="number" step="100000" min="0" class="form-input money-input" 
                                   placeholder="10,000,000" aria-describedby="depositamount-error" />
                        </div>
                        <span asp-validation-for="DepositAmount" class="form-error"></span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Section 4: Description & Amenities -->
        <div class="form-section">
            <div class="section-title">
                <h3>Description & Amenities</h3>
                <span class="section-badge">Step 4/4</span>
            </div>
            <div class="form-card">
                <div class="form-group">
                    <label asp-for="Description" class="form-label">Detailed Description</label>
                    <textarea asp-for="Description" rows="5" class="form-textarea"
                              placeholder="Detailed description of the apartment, convenient location, surrounding amenities..."></textarea>
                    <span asp-validation-for="Description" class="form-error"></span>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="Amenities" class="form-label">Amenities</label>
                        <textarea asp-for="Amenities" rows="3" class="form-textarea"
                                  placeholder="E.g: Pool, Gym, Parking, 24/7 Security"></textarea>
                        <small class="form-hint">Separate with commas</small>
                        <span asp-validation-for="Amenities" class="form-error"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UtilitiesIncluded" class="form-label">Utilities Included</label>
                        <textarea asp-for="UtilitiesIncluded" rows="3" class="form-textarea"
                                  placeholder="E.g: Electricity, Water, Internet, Cable TV"></textarea>
                        <small class="form-hint">Separate with commas</small>
                        <span asp-validation-for="UtilitiesIncluded" class="form-error"></span>
                    </div>
                </div>

                <div class="checkbox-group">
                    <label class="checkbox-label">
                        <input asp-for="IsFurnished" type="checkbox" class="checkbox-input">
                        <span class="checkbox-text">
                            <i class="bi bi-check-circle"></i>
                            Fully Furnished
                        </span>
                    </label>
                    <label class="checkbox-label">
                        <input asp-for="PetsAllowed" type="checkbox" class="checkbox-input">
                        <span class="checkbox-text">
                            <i class="bi bi-check-circle"></i>
                            Pets Allowed
                        </span>
                    </label>
                </div>
            </div>
        </div>

        <!-- Form Actions -->
        <div class="form-actions">
            <button type="submit" class="btn-submit">
                <i class="bi bi-check-lg"></i>
                Update Property
            </button>
            <a asp-action="Index" class="btn-cancel">
                Cancel
            </a>
        </div>
    </form>
</div>

@section Styles {
    <style>
        .create-property-container {
            padding: 30px;
            max-width: 1200px;
            margin: 0 auto;
        }

        /* Page Header */
        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 32px;
        }

        .page-title {
            font-size: 28px;
            font-weight: 700;
            color: #1e293b;
            margin: 0 0 8px 0;
            display: flex;
            align-items: center;
            gap: 12px;
        }

            .page-title i {
                color: #3b82f6;
            }

        .page-subtitle {
            font-size: 14px;
            color: #64748b;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .btn-back {
            display: flex;
            align-items: center;
            gap: 8px;
            padding: 10px 20px;
            background: #f1f5f9;
            border: none;
            border-radius: 8px;
            font-size: 14px;
            font-weight: 500;
            color: #475569;
            text-decoration: none;
            transition: all 0.2s;
        }

            .btn-back:hover {
                background: #e2e8f0;
                color: #1e293b;
            }

        /* Form Sections */
        .form-section {
            margin-bottom: 32px;
        }

        .section-title {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 16px;
        }

            .section-title h3 {
                font-size: 18px;
                font-weight: 600;
                color: #1e293b;
                margin: 0;
            }

        .section-badge {
            font-size: 12px;
            font-weight: 500;
            color: #64748b;
            background: #f1f5f9;
            padding: 4px 12px;
            border-radius: 12px;
        }

        .form-card {
            background: white;
            border: 1px solid #e2e8f0;
            border-radius: 12px;
            padding: 24px;
        }

        /* Form Groups */
        .form-group {
            margin-bottom: 20px;
        }

        .form-label {
            display: block;
            font-size: 14px;
            font-weight: 500;
            color: #334155;
            margin-bottom: 8px;
        }

        .required {
            color: #ef4444;
        }

        .tooltip-icon {
            color: #94a3b8;
            cursor: help;
            margin-left: 4px;
        }

        .form-input,
        .form-select,
        .form-textarea {
            width: 100%;
            padding: 12px 16px;
            font-size: 14px;
            color: #1e293b;
            background: white;
            border: 1px solid #cbd5e1;
            border-radius: 8px;
            transition: all 0.2s;
        }

            .form-input:focus,
            .form-select:focus,
            .form-textarea:focus {
                outline: none;
                border-color: #3b82f6;
                box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
            }

            .form-input::placeholder,
            .form-textarea::placeholder {
                color: #94a3b8;
            }

        .input-with-icon {
            position: relative;
        }

            .input-with-icon i {
                position: absolute;
                left: 16px;
                top: 50%;
                transform: translateY(-50%);
                color: #94a3b8;
                font-size: 16px;
            }

            .input-with-icon .form-input {
                padding-left: 44px;
            }

        .form-hint {
            display: block;
            font-size: 12px;
            color: #64748b;
            margin-top: 6px;
        }

        .form-error {
            display: block;
            font-size: 12px;
            color: #ef4444;
            margin-top: 6px;
        }

        /* Form Rows */
        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
        }

        .form-row-3 {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 20px;
        }

        .form-row-4 {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 20px;
        }

        /* Checkbox Group */
        .checkbox-group {
            display: flex;
            gap: 24px;
            flex-wrap: wrap;
            margin-top: 20px;
        }

        .checkbox-label {
            display: flex;
            align-items: center;
            cursor: pointer;
        }

        .checkbox-input {
            display: none;
        }

        .checkbox-text {
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: 14px;
            font-weight: 500;
            color: #64748b;
            padding: 10px 16px;
            background: #f8fafc;
            border: 2px solid #e2e8f0;
            border-radius: 8px;
            transition: all 0.2s;
        }

            .checkbox-text i {
                color: #cbd5e1;
                transition: color 0.2s;
            }

        .checkbox-input:checked + .checkbox-text {
            background: #eff6ff;
            border-color: #3b82f6;
            color: #1e293b;
        }

            .checkbox-input:checked + .checkbox-text i {
                color: #3b82f6;
            }

        /* Divider */
        .divider {
            height: 1px;
            background: #e2e8f0;
            margin: 24px 0;
        }

        /* Form Actions */
        .form-actions {
            display: flex;
            gap: 16px;
            justify-content: flex-end;
            padding: 24px;
            background: white;
            border: 1px solid #e2e8f0;
            border-radius: 12px;
            position: sticky;
            bottom: 20px;
        }

        .btn-submit {
            display: flex;
            align-items: center;
            gap: 8px;
            padding: 12px 32px;
            background: #3b82f6;
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s;
        }

            .btn-submit:hover {
                background: #2563eb;
                transform: translateY(-1px);
                box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
            }

        .btn-cancel {
            padding: 12px 24px;
            background: transparent;
            color: #64748b;
            border: none;
            border-radius: 8px;
            font-size: 14px;
            font-weight: 500;
            cursor: pointer;
            text-decoration: none;
            transition: all 0.2s;
        }

            .btn-cancel:hover {
                background: #f1f5f9;
                color: #334155;
            }

        .validation-summary {
            background: #fef2f2;
            border: 1px solid #fecaca;
            border-radius: 8px;
            padding: 16px;
            margin-bottom: 24px;
            color: #991b1b;
            font-size: 14px;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .create-property-container {
                padding: 20px;
            }

            .page-header {
                flex-direction: column;
                align-items: flex-start;
                gap: 16px;
            }

            .form-row,
            .form-row-3,
            .form-row-4 {
                grid-template-columns: 1fr;
            }

            .form-actions {
                flex-direction: column-reverse;
            }

            .btn-submit,
            .btn-cancel {
                width: 100%;
                justify-content: center;
            }
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Auto-hide alerts
        setTimeout(() => {
            document.querySelectorAll('.validation-summary').forEach(alert => {
                alert.style.transition = 'opacity 0.3s';
                alert.style.opacity = '0';
                setTimeout(() => alert.remove(), 300);
            });
        }, 5000);

        // Money input
        $('.money-input').on('input', function() {
            this.value = this.value.replace(/[^0-9]/g, '');
        });

        // Keyboard navigation support
        document.addEventListener('keydown', function(e) {
            // ESC to close modals
            if (e.key === 'Escape') {
                const modals = document.querySelectorAll('.modal.show');
                modals.forEach(modal => {
                    const bsModal = bootstrap.Modal.getInstance(modal);
                    if (bsModal) bsModal.hide();
                });
            }

            // Ctrl+S to save form
            if ((e.ctrlKey || e.metaKey) && e.key === 's') {
                e.preventDefault();
                const submitBtn = document.querySelector('form button[type="submit"]');
                if (submitBtn) submitBtn.click();
            }
        });
    </script>
}
