@* 
    Property Edit View
    Allows landlords to edit property details, upload images, and manage property information
    Includes drag-and-drop image upload, form validation, and error handling
*@
@model PropertyManagementSystem.DAL.Entities.Property

@{
    ViewData["Title"] = "Chỉnh sửa BDS";
    Layout = "_AuthLayout";
    
    // Get property types from ViewBag with null safety
    var propertyTypes = ViewBag.PropertyTypes as List<SelectListItem> ?? new();
    
    // Get documents and filter for images only (with null safety check)
    var documents = ViewBag.Documents as IEnumerable<PropertyManagementSystem.DAL.Entities.Document> 
        ?? new List<PropertyManagementSystem.DAL.Entities.Document>();
    var images = documents.Where(d => !string.IsNullOrEmpty(d.FileType) && 
        d.FileType.ToLower() is "jpg" or "jpeg" or "png" or "webp").ToList();
}

<div class="container mt-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1>Chỉnh sửa: @Model.Name</h1>
            <p class="text-muted">
                <span class="badge badge-info">@Model.Status</span>
                <span>@Model.PropertyType • @Model.SquareFeet.ToString("N0") ft²</span>
            </p>
        </div>
        <div>
            <a asp-action="Details" asp-route-id="@Model.PropertyId" class="btn btn-primary">
                <i class="fas fa-eye"></i> Xem chi tiết
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-list"></i> Danh sách
            </a>
        </div>
    </div>

    <!-- Alerts -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["Error"]
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
    }
    @if (TempData["Warning"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show">
            @TempData["Warning"]
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
    }

    <!-- Edit Form -->
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="PropertyId" />
        <input type="hidden" asp-for="LandlordId" />
        <input type="hidden" asp-for="CreatedAt" />

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                <strong>Vui lòng sửa các lỗi sau:</strong>
                <div asp-validation-summary="All" class="mb-0"></div>
            </div>
        }

        <!-- Basic Info -->
        <div class="card mb-3">
            <div class="card-header"><h5 class="mb-0">Thông tin cơ bản</h5></div>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-8">
                        <div class="form-group">
                            <label asp-for="Name">
                                Tên BDS <span class="text-danger">*</span>
                                <i class="bi bi-info-circle text-muted" 
                                   data-bs-toggle="tooltip" 
                                   data-bs-placement="top" 
                                   title="Enter a descriptive name for your property (e.g., '2BR Premium Apartment District 7')"
                                   aria-label="Property name help"></i>
                            </label>
                            <input asp-for="Name" class="form-control" required maxlength="200" 
                                   aria-describedby="name-error" aria-required="true" />
                            <span asp-validation-for="Name" class="text-danger" id="name-error"></span>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label asp-for="PropertyType">Loại BDS <span class="text-danger">*</span></label>
                            <select asp-for="PropertyType" class="form-control" asp-items="propertyTypes" 
                                    required aria-describedby="propertytype-error" aria-required="true"></select>
                            <span asp-validation-for="PropertyType" class="text-danger" id="propertytype-error"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Location -->
        <div class="card mb-3">
            <div class="card-header"><h5 class="mb-0">Địa chỉ</h5></div>
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="Address">Địa chỉ chi tiết <span class="text-danger">*</span></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="City">Thành phố</label>
                            <input asp-for="City" class="form-control" />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="District">Quận</label>
                            <input asp-for="District" class="form-control" />
                            <span asp-validation-for="District" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="ZipCode">Mã bưu điện</label>
                            <input asp-for="ZipCode" class="form-control" />
                            <span asp-validation-for="ZipCode" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Latitude">Latitude</label>
                            <input asp-for="Latitude" type="number" step="0.000001" class="form-control" />
                            <span asp-validation-for="Latitude" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Longitude">Longitude</label>
                            <input asp-for="Longitude" type="number" step="0.000001" class="form-control" />
                            <span asp-validation-for="Longitude" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Specs & Status -->
        <div class="card mb-3">
            <div class="card-header"><h5 class="mb-0">Thông số & Trạng thái</h5></div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="Bedrooms">Phòng ngủ</label>
                            <input asp-for="Bedrooms" type="number" min="0" max="20" class="form-control" />
                            <span asp-validation-for="Bedrooms" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="Bathrooms">Phòng tắm</label>
                            <input asp-for="Bathrooms" type="number" min="0" max="10" class="form-control" />
                            <span asp-validation-for="Bathrooms" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="SquareFeet">Diện tích (ft²)</label>
                            <input asp-for="SquareFeet" type="number" step="0.01" class="form-control" />
                            <span asp-validation-for="SquareFeet" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="Status">Trạng thái</label>
                            <select asp-for="Status" class="form-control">
                                <option value="Available">Có sẵn</option>
                                <option value="Rented">Đã thuê</option>
                                <option value="Maintenance">Bảo trì</option>
                                <option value="Unavailable">Không khả dụng</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="RentAmount">Giá thuê/tháng (₫) <span class="text-danger">*</span></label>
                            <input asp-for="RentAmount" type="number" min="0" class="form-control money-input" />
                            <span asp-validation-for="RentAmount" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="DepositAmount">Tiền cọc (₫)</label>
                            <input asp-for="DepositAmount" type="number" min="0" class="form-control money-input" />
                            <span asp-validation-for="DepositAmount" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Description & Features -->
        <div class="card mb-3">
            <div class="card-header"><h5 class="mb-0">Mô tả & Tiện ích</h5></div>
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="Description">Mô tả chi tiết</label>
                    <textarea asp-for="Description" rows="4" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label asp-for="Amenities">Tiện ích</label>
                            <textarea asp-for="Amenities" rows="3" class="form-control"></textarea>
                            <small class="form-text text-muted">Phân cách bằng dấu phẩy</small>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label asp-for="UtilitiesIncluded">Tiện ích đi kèm</label>
                            <textarea asp-for="UtilitiesIncluded" rows="3" class="form-control"></textarea>
                            <small class="form-text text-muted">Phân cách bằng dấu phẩy</small>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-check mb-2">
                            <input asp-for="IsFurnished" class="form-check-input" type="checkbox" />
                            <label class="form-check-label" asp-for="IsFurnished">Nội thất đầy đủ</label>
                        </div>
                        <div class="form-check">
                            <input asp-for="PetsAllowed" class="form-check-input" type="checkbox" />
                            <label class="form-check-label" asp-for="PetsAllowed">Cho phép thú cưng</label>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label asp-for="AvailableFrom">Có sẵn từ ngày</label>
                            <input asp-for="AvailableFrom" type="date" class="form-control" />
                            <span asp-validation-for="AvailableFrom" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="text-right mb-4">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-times"></i> Hủy
            </a>
            <a asp-action="Details" asp-route-id="@Model.PropertyId" class="btn btn-info">
                <i class="fas fa-eye"></i> Xem trước
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Lưu thay đổi
            </button>
        </div>
    </form>
</div>

<!-- Image Modal -->
<div class="modal fade" id="imageModal" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="imageModalTitle"></h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body text-center p-0">
                <img id="imageModalImg" src="" class="img-fluid" alt="">
            </div>
        </div>
    </div>
</div>

@Html.AntiForgeryToken()

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Auto-hide alerts
        setTimeout(() => $('.alert').fadeOut('slow'), 5000);

        // Money input
        $('.money-input').on('input', function() {
            this.value = this.value.replace(/[^0-9]/g, '');
        });

        // Initialize tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });

        // Keyboard navigation support
        document.addEventListener('keydown', function(e) {
            // ESC to close modals
            if (e.key === 'Escape') {
                const modals = document.querySelectorAll('.modal.show');
                modals.forEach(modal => {
                    const bsModal = bootstrap.Modal.getInstance(modal);
                    if (bsModal) bsModal.hide();
                });
            }

            // Ctrl+S to save form
            if ((e.ctrlKey || e.metaKey) && e.key === 's') {
                e.preventDefault();
                const submitBtn = document.querySelector('form button[type="submit"]');
                if (submitBtn) submitBtn.click();
            }
        });
    </script>
}
