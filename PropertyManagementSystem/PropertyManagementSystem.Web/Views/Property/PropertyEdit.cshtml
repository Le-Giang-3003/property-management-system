@model PropertyManagementSystem.DAL.Entities.Property

@{
    ViewData["Title"] = "Chỉnh sửa BDS";
    var propertyTypes = ViewBag.PropertyTypes as List<SelectListItem> ?? new();
    var statuses = new List<SelectListItem>
    {
        new() { Value = "Available", Text = "Có sẵn" },
        new() { Value = "Rented", Text = "Đã thuê" },
        new() { Value = "Maintenance", Text = "Bảo trì" },
        new() { Value = "Unavailable", Text = "Không khả dụng" }
    };
    var images = ViewBag.PropertyImages as List<PropertyManagementSystem.DAL.Entities.PropertyImage>
                 ?? new List<PropertyManagementSystem.DAL.Entities.PropertyImage>();
    Layout = "_AuthLayout";
}

<div class="edit-property-container">
    <!-- Page Header -->
    <div class="page-header">
        <div class="header-content">
            <h1 class="page-title">
                <i class="bi bi-pencil-square"></i>
                Chỉnh sửa bất động sản
            </h1>
            <div class="property-info">
                <span class="property-name">@Model.Name</span>
                <span class="status-badge @GetStatusClass(Model.Status)">@GetStatusDisplay(Model.Status)</span>
                <span class="property-meta">@Model.PropertyType • @Model.SquareFeet.ToString("N0") ft²</span>
            </div>
        </div>
        <div class="header-actions">
            <a asp-action="Details" asp-route-id="@Model.PropertyId" class="btn-action preview">
                <i class="bi bi-eye"></i>
                Xem chi tiết
            </a>
            <a asp-action="Index" class="btn-action back">
                <i class="bi bi-arrow-left"></i>
                Danh sách
            </a>
        </div>
    </div>

    <!-- Images Section -->
    <div class="images-section">
        <div class="section-header">
            <h3>
                <i class="bi bi-images"></i>
                Hình ảnh
                @if (images.Any())
                {
                    <span class="count-badge">@images.Count</span>
                }
            </h3>
            <button type="button" class="btn-upload-header" data-bs-toggle="modal" data-bs-target="#uploadModal">
                <i class="bi bi-cloud-upload"></i>
                Upload hình ảnh
            </button>
        </div>

        @if (images.Any())
        {
            <div class="images-grid">
                @foreach (var image in images.OrderBy(i => i.DisplayOrder))
                {
                    <div class="image-card" data-image-id="@image.ImageId">
                        <div class="image-preview" onclick="showImage('@image.ImageUrl', '@(image.Caption ?? Model.Name)')">
                            <img src="@image.ImageUrl" alt="@image.Caption">
                            @if (image.IsThumbnail)
                            {
                                <div class="thumbnail-badge">
                                    <i class="bi bi-star-fill"></i> Thumbnail
                                </div>
                            }
                            <div class="image-overlay">
                                <i class="bi bi-eye"></i>
                            </div>
                        </div>
                        <div class="image-info">
                            <span class="image-name" title="@image.Caption">
                                @(string.IsNullOrEmpty(image.Caption) ? $"Ảnh {image.DisplayOrder + 1}" : image.Caption)
                            </span>
                            <div class="image-actions">
                                @if (!image.IsThumbnail)
                                {
                                    <button type="button" class="btn-icon star"
                                            onclick="setThumbnail(@image.ImageId)"
                                            title="Đặt làm ảnh đại diện">
                                        <i class="bi bi-star"></i>
                                    </button>
                                }
                                <button type="button" class="btn-icon delete"
                                        onclick="deleteImage(@image.ImageId, '@(image.Caption ?? "Ảnh")')"
                                        title="Xóa">
                                    <i class="bi bi-trash3"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="upload-empty-state">
                <div class="upload-drop-zone" id="dropZone">
                    <div class="upload-icon">
                        <i class="bi bi-cloud-upload"></i>
                    </div>
                    <h4>Chưa có hình ảnh nào</h4>
                    <p>Kéo thả file vào đây hoặc click để chọn file</p>
                    <button type="button" class="btn-choose-file" onclick="document.getElementById('quickUploadInput').click()">
                        <i class="bi bi-folder2-open"></i>
                        Chọn file từ máy
                    </button>
                    <small>JPG, PNG, WEBP • Tối đa 5MB mỗi file</small>
                </div>
                <input type="file" id="quickUploadInput" accept="image/*" multiple style="display: none;" onchange="handleQuickUpload(this)">
            </div>
        }
    </div>

    <!-- Edit Form -->
    <form asp-action="Edit" method="post" class="edit-form">
        <input type="hidden" asp-for="PropertyId" />
        <input type="hidden" asp-for="LandlordId" />
        <input type="hidden" asp-for="CreatedAt" />

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="validation-alert">
                <i class="bi bi-exclamation-triangle"></i>
                <div>
                    <strong>Vui lòng kiểm tra lại thông tin</strong>
                    <div asp-validation-summary="All"></div>
                </div>
            </div>
        }

        <!-- Section 1: Basic Info -->
        <div class="form-section">
            <h3>Thông tin cơ bản</h3>
            <div class="form-grid">
                <div class="form-group full-width">
                    <label asp-for="Name">Tên bất động sản <span class="required">*</span></label>
                    <input asp-for="Name" class="form-input" />
                    <span asp-validation-for="Name" class="form-error"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PropertyType">Loại bất động sản <span class="required">*</span></label>
                    <select asp-for="PropertyType" class="form-select">
                        @foreach (var type in propertyTypes)
                        {
                            <option value="@type.Value" selected="@(type.Value == Model.PropertyType)">
                                @type.Text
                            </option>
                        }
                    </select>
                    <span asp-validation-for="PropertyType" class="form-error"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Status">Trạng thái <span class="required">*</span></label>
                    <select asp-for="Status" class="form-select">
                        @foreach (var status in statuses)
                        {
                            <option value="@status.Value" selected="@(status.Value == Model.Status)">
                                @status.Text
                            </option>
                        }
                    </select>
                    <span asp-validation-for="Status" class="form-error"></span>
                </div>
            </div>
        </div>

        <!-- Section 2: Location -->
        <div class="form-section">
            <h3>Địa chỉ</h3>
            <div class="form-grid">
                <div class="form-group full-width">
                    <label asp-for="Address">Địa chỉ chi tiết <span class="required">*</span></label>
                    <input asp-for="Address" class="form-input" />
                    <span asp-validation-for="Address" class="form-error"></span>
                </div>
                <div class="form-group">
                    <label asp-for="City">Thành phố</label>
                    <input asp-for="City" class="form-input" />
                    <span asp-validation-for="City" class="form-error"></span>
                </div>
                <div class="form-group">
                    <label asp-for="District">Quận / Huyện</label>
                    <input asp-for="District" class="form-input" />
                    <span asp-validation-for="District" class="form-error"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ZipCode">Mã bưu điện</label>
                    <input asp-for="ZipCode" class="form-input" />
                    <span asp-validation-for="ZipCode" class="form-error"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Latitude">Latitude</label>
                    <input asp-for="Latitude" type="number" step="0.000001" class="form-input" />
                    <span asp-validation-for="Latitude" class="form-error"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Longitude">Longitude</label>
                    <input asp-for="Longitude" type="number" step="0.000001" class="form-input" />
                    <span asp-validation-for="Longitude" class="form-error"></span>
                </div>
            </div>
        </div>

        <!-- Section 3: Specs -->
        <div class="form-section">
            <h3>Thông số</h3>
            <div class="form-grid">
                <div class="form-group">
                    <label asp-for="Bedrooms">Phòng ngủ <span class="required">*</span></label>
                    <div class="input-with-icon">
                        <i class="bi bi-door-closed"></i>
                        <input asp-for="Bedrooms" type="number" min="0" max="20" class="form-input" />
                    </div>
                    <span asp-validation-for="Bedrooms" class="form-error"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Bathrooms">Phòng tắm <span class="required">*</span></label>
                    <div class="input-with-icon">
                        <i class="bi bi-droplet"></i>
                        <input asp-for="Bathrooms" type="number" min="0" max="10" class="form-input" />
                    </div>
                    <span asp-validation-for="Bathrooms" class="form-error"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SquareFeet">Diện tích (ft²) <span class="required">*</span></label>
                    <div class="input-with-icon">
                        <i class="bi bi-rulers"></i>
                        <input asp-for="SquareFeet" type="number" step="0.01" class="form-input" />
                    </div>
                    <span asp-validation-for="SquareFeet" class="form-error"></span>
                </div>
            </div>
        </div>

        <!-- Section 4: Pricing -->
        <div class="form-section">
            <h3>Giá cả</h3>
            <div class="form-grid">
                <div class="form-group">
                    <label asp-for="RentAmount">Giá thuê/tháng (₫) <span class="required">*</span></label>
                    <div class="input-with-icon">
                        <i class="bi bi-currency-dollar"></i>
                        <input asp-for="RentAmount" type="number" min="0" class="form-input" />
                    </div>
                    <span asp-validation-for="RentAmount" class="form-error"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DepositAmount">Tiền cọc (₫)</label>
                    <div class="input-with-icon">
                        <i class="bi bi-piggy-bank"></i>
                        <input asp-for="DepositAmount" type="number" min="0" class="form-input" />
                    </div>
                    <span asp-validation-for="DepositAmount" class="form-error"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AvailableFrom">Có sẵn từ ngày</label>
                    <input asp-for="AvailableFrom" type="date" class="form-input" />
                    <span asp-validation-for="AvailableFrom" class="form-error"></span>
                </div>
            </div>
        </div>

        <!-- Section 5: Description & Amenities -->
        <div class="form-section">
            <h3>Mô tả & Tiện ích</h3>
            <div class="form-grid">
                <div class="form-group full-width">
                    <label asp-for="Description">Mô tả chi tiết</label>
                    <textarea asp-for="Description" rows="5" class="form-textarea"></textarea>
                    <span asp-validation-for="Description" class="form-error"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Amenities">Tiện ích</label>
                    <textarea asp-for="Amenities" rows="3" class="form-textarea"></textarea>
                    <small class="form-hint">Phân cách bằng dấu phẩy</small>
                    <span asp-validation-for="Amenities" class="form-error"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UtilitiesIncluded">Tiện ích đi kèm</label>
                    <textarea asp-for="UtilitiesIncluded" rows="3" class="form-textarea"></textarea>
                    <small class="form-hint">Phân cách bằng dấu phẩy</small>
                    <span asp-validation-for="UtilitiesIncluded" class="form-error"></span>
                </div>
            </div>

            <div class="checkbox-group">
                <label class="checkbox-label">
                    <input asp-for="IsFurnished" type="checkbox" class="checkbox-input">
                    <span class="checkbox-text">
                        <i class="bi bi-check-circle"></i>
                        Nội thất đầy đủ
                    </span>
                </label>
                <label class="checkbox-label">
                    <input asp-for="PetsAllowed" type="checkbox" class="checkbox-input">
                    <span class="checkbox-text">
                        <i class="bi bi-check-circle"></i>
                        Cho phép nuôi thú cưng
                    </span>
                </label>
            </div>
        </div>

        <!-- Form Actions -->
        <div class="form-actions">
            <button type="submit" class="btn-submit">
                <i class="bi bi-check-lg"></i>
                Cập nhật bất động sản
            </button>
            <a asp-action="Details" asp-route-id="@Model.PropertyId" class="btn-preview">
                <i class="bi bi-eye"></i>
                Xem trước
            </a>
            <a asp-action="Index" class="btn-cancel">
                Hủy bỏ
            </a>
        </div>
    </form>
</div>

<!-- Upload Modal -->
<div class="modal fade" id="uploadModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5><i class="bi bi-cloud-upload"></i> Upload hình ảnh</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="uploadForm" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <input type="hidden" name="propertyId" value="@Model.PropertyId" />

                <div class="modal-body">
                    <div class="form-group">
                        <label>Chọn hình ảnh <span class="text-danger">*</span></label>
                        <input type="file" name="files" id="fileInput" class="form-input"
                               accept="image/*" multiple required />
                        <small class="form-hint">Có thể chọn nhiều ảnh. JPG, PNG, WEBP. Tối đa 5MB/file</small>
                    </div>

                    <div id="imagePreview" class="image-preview-container"></div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary" id="uploadBtn">
                        <i class="bi bi-upload"></i> Upload
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- View Image Modal -->
<div class="modal fade" id="imageModal" tabindex="-1">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="imageTitle"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-0">
                <img id="imageView" src="" class="w-100" alt="">
            </div>
        </div>
    </div>
</div>

<form id="deleteForm" method="post" style="display:none;">
    @Html.AntiForgeryToken()
</form>

