@model PropertyManagementSystem.DAL.Entities.Property

@{
    ViewData["Title"] = "Chỉnh sửa BDS";
    var propertyTypes = ViewBag.PropertyTypes as List<SelectListItem> ?? new();
    var documents = ViewBag.Documents as IEnumerable<PropertyManagementSystem.DAL.Entities.Document> ?? new List<PropertyManagementSystem.DAL.Entities.Document>();
    var images = documents.Where(d => d.FileType.ToLower() is "jpg" or "jpeg" or "png" or "webp").ToList();
    Layout = "_AuthLayout";
}

<div class="container mt-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1>Chỉnh sửa: @Model.Name</h1>
            <p class="text-muted">
                <span class="badge badge-info">@Model.Status</span>
                <span>@Model.PropertyType • @Model.SquareFeet.ToString("N0") ft²</span>
            </p>
        </div>
        <div>
            <a asp-action="Details" asp-route-id="@Model.PropertyId" class="btn btn-primary">
                <i class="fas fa-eye"></i> Xem chi tiết
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-list"></i> Danh sách
            </a>
        </div>
    </div>

    <!-- Alerts -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["Error"]
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
    }
    @if (TempData["Warning"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show">
            @TempData["Warning"]
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
    }

    <!-- Images Section -->
    <div class="card mb-4">
        <div class="card-header bg-light">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="fas fa-images"></i> Hình ảnh BDS
                    @if (images.Any())
                    {
                        <span class="badge badge-info">@images.Count</span>
                    }
                </h5>
                <button type="button" class="btn btn-sm btn-primary" onclick="document.getElementById('quickUploadInput').click()">
                    <i class="fas fa-cloud-upload"></i> Upload hình ảnh
                </button>
            </div>
        </div>
        <div class="card-body">
            @if (images.Any())
            {
                <div class="row">
                    @foreach (var doc in images.OrderByDescending(d => d.UploadedAt))
                    {
                        <div class="col-md-2 col-sm-3 col-4 mb-3">
                            <div class="card h-100 shadow-sm">
                                <img src="@doc.FileUrl" class="card-img-top" alt="@doc.FileName"
                                     style="height: 150px; object-fit: cover; cursor: pointer;"
                                     onclick="showImage('@doc.FileUrl', '@doc.FileName')">
                                <div class="card-body p-2">
                                    <small class="text-muted d-block text-truncate" title="@doc.FileName">
                                        @doc.FileName
                                    </small>
                                    <div class="btn-group btn-group-sm w-100 mt-1">
                                        <a href="@Url.Action("Download", "Document", new { id = doc.DocumentId })"
                                           class="btn btn-outline-primary btn-sm" title="Tải xuống">
                                            <i class="fas fa-download"></i>
                                        </a>
                                        <button type="button" class="btn btn-outline-danger btn-sm"
                                                onclick="deleteImage(@doc.DocumentId, '@doc.FileName')" title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-4 text-muted" id="dropZone">
                    <i class="fas fa-images" style="font-size: 3rem;"></i>
                    <p class="mt-2">Chưa có hình ảnh nào</p>
                    <p class="small">Kéo thả file vào đây hoặc click để chọn</p>
                    <button type="button" class="btn btn-primary" onclick="document.getElementById('quickUploadInput').click()">
                        <i class="fas fa-cloud-upload"></i> Upload hình ảnh
                    </button>
                </div>
            }

            <!-- Hidden file input -->
            <input type="file" id="quickUploadInput" accept="image/*" multiple style="display: none;"
                   onchange="handleQuickUpload(this)">
        </div>
    </div>

    <!-- Edit Form -->
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="PropertyId" />
        <input type="hidden" asp-for="LandlordId" />
        <input type="hidden" asp-for="CreatedAt" />

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                <strong>Vui lòng sửa các lỗi sau:</strong>
                <div asp-validation-summary="All" class="mb-0"></div>
            </div>
        }

        <!-- Basic Info -->
        <div class="card mb-3">
            <div class="card-header"><h5 class="mb-0">Thông tin cơ bản</h5></div>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-8">
                        <div class="form-group">
                            <label asp-for="Name">Tên BDS <span class="text-danger">*</span></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label asp-for="PropertyType">Loại BDS <span class="text-danger">*</span></label>
                            <select asp-for="PropertyType" class="form-control" asp-items="propertyTypes"></select>
                            <span asp-validation-for="PropertyType" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Location -->
        <div class="card mb-3">
            <div class="card-header"><h5 class="mb-0">Địa chỉ</h5></div>
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="Address">Địa chỉ chi tiết <span class="text-danger">*</span></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="City">Thành phố</label>
                            <input asp-for="City" class="form-control" />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="District">Quận</label>
                            <input asp-for="District" class="form-control" />
                            <span asp-validation-for="District" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="ZipCode">Mã bưu điện</label>
                            <input asp-for="ZipCode" class="form-control" />
                            <span asp-validation-for="ZipCode" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Latitude">Latitude</label>
                            <input asp-for="Latitude" type="number" step="0.000001" class="form-control" />
                            <span asp-validation-for="Latitude" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Longitude">Longitude</label>
                            <input asp-for="Longitude" type="number" step="0.000001" class="form-control" />
                            <span asp-validation-for="Longitude" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Specs & Status -->
        <div class="card mb-3">
            <div class="card-header"><h5 class="mb-0">Thông số & Trạng thái</h5></div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="Bedrooms">Phòng ngủ</label>
                            <input asp-for="Bedrooms" type="number" min="0" max="20" class="form-control" />
                            <span asp-validation-for="Bedrooms" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="Bathrooms">Phòng tắm</label>
                            <input asp-for="Bathrooms" type="number" min="0" max="10" class="form-control" />
                            <span asp-validation-for="Bathrooms" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="SquareFeet">Diện tích (ft²)</label>
                            <input asp-for="SquareFeet" type="number" step="0.01" class="form-control" />
                            <span asp-validation-for="SquareFeet" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="Status">Trạng thái</label>
                            <select asp-for="Status" class="form-control">
                                <option value="Available">Có sẵn</option>
                                <option value="Rented">Đã thuê</option>
                                <option value="Maintenance">Bảo trì</option>
                                <option value="Unavailable">Không khả dụng</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="RentAmount">Giá thuê/tháng (₫) <span class="text-danger">*</span></label>
                            <input asp-for="RentAmount" type="number" min="0" class="form-control money-input" />
                            <span asp-validation-for="RentAmount" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="DepositAmount">Tiền cọc (₫)</label>
                            <input asp-for="DepositAmount" type="number" min="0" class="form-control money-input" />
                            <span asp-validation-for="DepositAmount" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Description & Features -->
        <div class="card mb-3">
            <div class="card-header"><h5 class="mb-0">Mô tả & Tiện ích</h5></div>
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="Description">Mô tả chi tiết</label>
                    <textarea asp-for="Description" rows="4" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label asp-for="Amenities">Tiện ích</label>
                            <textarea asp-for="Amenities" rows="3" class="form-control"></textarea>
                            <small class="form-text text-muted">Phân cách bằng dấu phẩy</small>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label asp-for="UtilitiesIncluded">Tiện ích đi kèm</label>
                            <textarea asp-for="UtilitiesIncluded" rows="3" class="form-control"></textarea>
                            <small class="form-text text-muted">Phân cách bằng dấu phẩy</small>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-check mb-2">
                            <input asp-for="IsFurnished" class="form-check-input" type="checkbox" />
                            <label class="form-check-label" asp-for="IsFurnished">Nội thất đầy đủ</label>
                        </div>
                        <div class="form-check">
                            <input asp-for="PetsAllowed" class="form-check-input" type="checkbox" />
                            <label class="form-check-label" asp-for="PetsAllowed">Cho phép thú cưng</label>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label asp-for="AvailableFrom">Có sẵn từ ngày</label>
                            <input asp-for="AvailableFrom" type="date" class="form-control" />
                            <span asp-validation-for="AvailableFrom" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="text-right mb-4">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-times"></i> Hủy
            </a>
            <a asp-action="Details" asp-route-id="@Model.PropertyId" class="btn btn-info">
                <i class="fas fa-eye"></i> Xem trước
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Lưu thay đổi
            </button>
        </div>
    </form>
</div>

<!-- Image Modal -->
<div class="modal fade" id="imageModal" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="imageModalTitle"></h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body text-center p-0">
                <img id="imageModalImg" src="" class="img-fluid" alt="">
            </div>
        </div>
    </div>
</div>

@Html.AntiForgeryToken()

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Auto-hide alerts
        setTimeout(() => $('.alert').fadeOut('slow'), 5000);

        // ✅ Quick upload handler - ONLY called from onchange
        function handleQuickUpload(input) {
            const files = input.files;
            if (files.length === 0) return;

            uploadFiles(files);

            // Reset input
            input.value = '';
        }

        // Upload files
        async function uploadFiles(files) {
            const formData = new FormData();

            for (let i = 0; i < files.length; i++) {
                formData.append('file', files[i]);
            }
            formData.append('entityType', 'Property');
            formData.append('entityId', '@Model.PropertyId');
            formData.append('documentType', 'Image');

            try {
                Swal.fire({
                    title: 'Đang upload...',
                    html: 'Vui lòng đợi',
                    allowOutsideClick: false,
                    didOpen: () => { Swal.showLoading(); }
                });

                const response = await fetch('@Url.Action("UploadAjax", "Document")', {
                    method: 'POST',
                    body: formData
                });

                const text = await response.text();

                if (response.ok) {
                    await Swal.fire({
                        icon: 'success',
                        title: 'Thành công!',
                        text: 'Upload hình ảnh thành công',
                        timer: 2000,
                        showConfirmButton: false
                    });
                    location.reload();
                } else {
                    throw new Error(text);
                }
            } catch (error) {
                console.error('Upload error:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'Lỗi!',
                    text: error.message
                });
            }
        }

        // Drag and drop
        const dropZone = document.getElementById('dropZone');
        if (dropZone) {
            ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
                dropZone.addEventListener(eventName, (e) => {
                    e.preventDefault();
                    e.stopPropagation();
                }, false);
            });

            ['dragenter', 'dragover'].forEach(eventName => {
                dropZone.addEventListener(eventName, () => {
                    dropZone.classList.add('border-primary', 'bg-light');
                }, false);
            });

            ['dragleave', 'drop'].forEach(eventName => {
                dropZone.addEventListener(eventName, () => {
                    dropZone.classList.remove('border-primary', 'bg-light');
                }, false);
            });

            dropZone.addEventListener('drop', (e) => {
                const files = e.dataTransfer.files;
                if (files.length > 0) {
                    uploadFiles(files);
                }
            });
        }

        // Show image
        function showImage(url, filename) {
            $('#imageModalTitle').text(filename);
            $('#imageModalImg').attr('src', url);
            $('#imageModal').modal('show');
        }

        // Delete image
        async function deleteImage(id, filename) {
            const result = await Swal.fire({
                title: 'Xóa hình ảnh?',
                text: `Xóa "${filename}"?`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                confirmButtonText: 'Xóa',
                cancelButtonText: 'Hủy'
            });

            if (result.isConfirmed) {
                try {
                    const response = await fetch('@Url.Action("Delete", "Document")/' + id + '?returnUrl=' + encodeURIComponent(window.location.pathname), {
                        method: 'POST',
                        headers: {
                            'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                        }
                    });

                    if (response.ok) {
                        await Swal.fire({
                            icon: 'success',
                            title: 'Đã xóa!',
                            timer: 1500,
                            showConfirmButton: false
                        });
                        location.reload();
                    } else {
                        throw new Error('Không thể xóa');
                    }
                } catch (error) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Lỗi!',
                        text: error.message
                    });
                }
            }
        }

        // Money input
        $('.money-input').on('input', function() {
            this.value = this.value.replace(/[^0-9]/g, '');
        });
    </script>
}
