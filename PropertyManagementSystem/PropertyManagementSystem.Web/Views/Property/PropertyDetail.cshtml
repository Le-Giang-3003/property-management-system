@model PropertyManagementSystem.DAL.Entities.Property

@{
    ViewData["Title"] = Model.Name;
    Layout = "_AuthLayout";
    var isFavorited = ViewBag.IsFavorited as bool? ?? false;
}

<div class="container mt-4">
    <!-- Header with Back Button and Favorite -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Quay lại danh sách
        </a>

        @if (User.Identity?.IsAuthenticated == true)
        {
            <button type="button"
                    class="btn btn-outline-danger favorite-detail-btn"
                    data-property-id="@Model.PropertyId"
                    data-is-favorited="@isFavorited.ToString().ToLower()">
                <i class="@(isFavorited ? "fas" : "far") fa-heart"></i>
                <span class="favorite-text">@(isFavorited ? "Đã yêu thích" : "Thêm yêu thích")</span>
            </button>
        }
    </div>

    <!-- Notifications -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Thành công!</strong> @TempData["Success"]
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Lỗi!</strong> @TempData["Error"]
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
    }

    <!-- Main Property Card -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">@Model.Name</h2>
            <div class="mt-2">
                <span class="badge badge-light mr-2">@Model.PropertyType</span>
                <span class="badge @GetStatusBadgeClass(Model.Status)">@GetStatusDisplay(Model.Status)</span>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <!-- Left Column: Main Info -->
                <div class="col-md-8">
                    <!-- Location -->
                    <div class="mb-4">
                        <h5><i class="fas fa-map-marker-alt text-danger"></i> Địa chỉ</h5>
                        <p class="lead mb-1">@Model.Address</p>
                        <p class="text-muted">
                            @if (!string.IsNullOrEmpty(Model.District))
                            {
                                <span>@Model.District, </span>
                            }
                            @Model.City
                            @if (!string.IsNullOrEmpty(Model.ZipCode))
                            {
                                <span> - @Model.ZipCode</span>
                            }
                        </p>
                    </div>

                    <!-- Description -->
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="mb-4">
                            <h5><i class="fas fa-info-circle text-info"></i> Mô tả</h5>
                            <p>@Model.Description</p>
                        </div>
                    }

                    <!-- Specifications -->
                    <div class="mb-4">
                        <h5><i class="fas fa-home text-primary"></i> Thông số</h5>
                        <div class="row">
                            <div class="col-sm-4 mb-3">
                                <div class="border rounded p-3 text-center">
                                    <i class="fas fa-bed fa-2x text-primary mb-2"></i>
                                    <h4 class="mb-0">@Model.Bedrooms</h4>
                                    <small class="text-muted">Phòng ngủ</small>
                                </div>
                            </div>
                            <div class="col-sm-4 mb-3">
                                <div class="border rounded p-3 text-center">
                                    <i class="fas fa-bath fa-2x text-info mb-2"></i>
                                    <h4 class="mb-0">@Model.Bathrooms</h4>
                                    <small class="text-muted">Phòng tắm</small>
                                </div>
                            </div>
                            <div class="col-sm-4 mb-3">
                                <div class="border rounded p-3 text-center">
                                    <i class="fas fa-ruler-combined fa-2x text-success mb-2"></i>
                                    <h4 class="mb-0">@Model.SquareFeet</h4>
                                    <small class="text-muted">ft²</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Features -->
                    <div class="mb-4">
                        <h5><i class="fas fa-star text-warning"></i> Tiện nghi & Đặc điểm</h5>
                        <div class="row">
                            <div class="col-md-6">
                                <ul class="list-unstyled">
                                    <li class="mb-2">
                                        <i class="fas @(Model.IsFurnished ? "fa-check-circle text-success" : "fa-times-circle text-danger")"></i>
                                        @(Model.IsFurnished ? "Có nội thất" : "Không nội thất")
                                    </li>
                                    <li class="mb-2">
                                        <i class="fas @(Model.PetsAllowed ? "fa-check-circle text-success" : "fa-times-circle text-danger")"></i>
                                        @(Model.PetsAllowed ? "Cho phép thú cưng" : "Không cho phép thú cưng")
                                    </li>
                                </ul>
                            </div>
                            <div class="col-md-6">
                                @if (!string.IsNullOrEmpty(Model.Amenities))
                                {
                                    <strong>Tiện ích:</strong>
                                    <p>@Model.Amenities</p>
                                }
                                @if (!string.IsNullOrEmpty(Model.UtilitiesIncluded))
                                {
                                    <strong>Dịch vụ bao gồm:</strong>
                                    <p>@Model.UtilitiesIncluded</p>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Right Column: Pricing & Actions -->
                <div class="col-md-4">
                    <!-- Pricing Card -->
                    <div class="card bg-light mb-4">
                        <div class="card-body">
                            <h5 class="card-title">Giá thuê</h5>
                            <h2 class="text-success">@Model.RentAmount.ToString("N0") ₫</h2>
                            <p class="text-muted mb-3">/tháng</p>

                            @if (Model.DepositAmount.HasValue)
                            {
                                <hr />
                                <div class="d-flex justify-content-between">
                                    <span>Tiền cọc:</span>
                                    <strong>@Model.DepositAmount.Value.ToString("N0") ₫</strong>
                                </div>
                            }

                            <hr />
                            <div class="d-flex justify-content-between">
                                <span>Có sẵn từ:</span>
                                <strong>@Model.AvailableFrom?.ToString("dd/MM/yyyy")</strong>
                            </div>
                        </div>
                    </div>

                    <!-- Landlord Info -->
                    @if (Model.Landlord != null)
                    {
                        <div class="card mb-4">
                            <div class="card-body">
                                <h5 class="card-title"><i class="fas fa-user"></i> Chủ nhà</h5>
                                <p class="mb-1"><strong>@Model.Landlord.FullName</strong></p>
                                <p class="mb-1 text-muted">
                                    <i class="fas fa-envelope"></i> @Model.Landlord.Email
                                </p>
                                @if (!string.IsNullOrEmpty(Model.Landlord.PhoneNumber))
                                {
                                    <p class="mb-0 text-muted">
                                        <i class="fas fa-phone"></i> @Model.Landlord.PhoneNumber
                                    </p>
                                }
                            </div>
                        </div>
                    }

                    <!-- Action Buttons -->
                    <div class="d-grid gap-2">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            var currentUserId = int.Parse(User.FindFirst("UserId")?.Value ?? "0");
                            if (Model.LandlordId == currentUserId || User.IsInRole("Admin"))
                            {
                                <a asp-action="Edit" asp-route-id="@Model.PropertyId"
                                   class="btn btn-warning btn-block mb-2">
                                    <i class="fas fa-edit"></i> Chỉnh sửa
                                </a>
                                <a asp-action="ChangeStatus" asp-route-id="@Model.PropertyId"
                                   class="btn btn-info btn-block mb-2">
                                    <i class="fas fa-toggle-on"></i> Đổi trạng thái
                                </a>
                                <a asp-action="Delete" asp-route-id="@Model.PropertyId"
                                   class="btn btn-danger btn-block">
                                    <i class="fas fa-trash"></i> Xóa BDS
                                </a>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer text-muted">
            <div class="row">
                <div class="col-md-6">
                    <small>
                        <i class="fas fa-calendar-plus"></i> Tạo: @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                    </small>
                </div>
                <div class="col-md-6 text-right">
                    <small>
                        <i class="fas fa-sync-alt"></i> Cập nhật: @Model.UpdatedAt?.ToString("dd/MM/yyyy HH:mm")
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-hide alerts
        setTimeout(() => {
            document.querySelectorAll('.alert').forEach(alert => {
                $(alert).alert('close');
            });
        }, 5000);

        // Favorite button in detail page
        const favoriteBtn = document.querySelector('.favorite-detail-btn');
        if (favoriteBtn) {
            favoriteBtn.addEventListener('click', async function() {
                const propertyId = this.dataset.propertyId;
                const icon = this.querySelector('i');
                const text = this.querySelector('.favorite-text');

                try {
                    const response = await fetch('@Url.Action("ToggleFavorite", "Property")', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded',
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                        },
                        body: `propertyId=${propertyId}`
                    });

                    const result = await response.json();

                    if (result.success) {
                        // Toggle button state
                        if (result.isFavorited) {
                            icon.classList.remove('far');
                            icon.classList.add('fas');
                            text.textContent = 'Đã yêu thích';
                            this.classList.remove('btn-outline-danger');
                            this.classList.add('btn-danger');
                        } else {
                            icon.classList.remove('fas');
                            icon.classList.add('far');
                            text.textContent = 'Thêm yêu thích';
                            this.classList.remove('btn-danger');
                            this.classList.add('btn-outline-danger');
                        }

                        // Show toast
                        showToast(result.message, 'success');
                    } else {
                        showToast(result.message || 'Có lỗi xảy ra', 'error');
                    }
                } catch (error) {
                    console.error('Error:', error);
                    showToast('Có lỗi xảy ra khi xử lý yêu thích', 'error');
                }
            });
        }

        // Toast notification
        function showToast(message, type) {
            const toastClass = type === 'success' ? 'alert-success' : 'alert-danger';
            const toast = `
                <div class="alert ${toastClass} alert-dismissible fade show position-fixed"
                     style="top: 20px; right: 20px; z-index: 9999; min-width: 300px;" role="alert">
                    ${message}
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                </div>
            `;

            $('body').append(toast);

            setTimeout(() => {
                $('.alert.position-fixed').alert('close');
            }, 3000);
        }
    </script>
}

@functions {
    string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Available" => "badge-success",
            "Rented" => "badge-warning",
            "Maintenance" => "badge-info",
            "Unavailable" => "badge-secondary",
            _ => "badge-secondary"
        };
    }

    string GetStatusDisplay(string status)
    {
        return status switch
        {
            "Available" => "Có sẵn",
            "Rented" => "Đã thuê",
            "Maintenance" => "Bảo trì",
            "Unavailable" => "Không khả dụng",
            _ => status
        };
    }
}