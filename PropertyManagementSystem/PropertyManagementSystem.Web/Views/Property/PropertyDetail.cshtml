@model PropertyManagementSystem.DAL.Entities.Property

@{
    ViewData["Title"] = $"{Model.Name} - Chi tiết";
    var statuses = new Dictionary<string, string>
    {
        ["Available"] = "Có sẵn",
        ["Rented"] = "Đã thuê",
        ["Maintenance"] = "Bảo trì",
        ["Unavailable"] = "Không khả dụng"
    };
}

<div class="container-fluid py-4 min-vh-100">
    <!-- Hero Header -->
    <div class="row g-4 mb-5">
        <div class="col-lg-8">
            <div class="card border-0 shadow-lg overflow-hidden h-100">
                <div class="bg-image" style="background-image: url('https://images.unsplash.com/photo-1564013799919-ab600027ffc6?w=1200');
                                              background-position: center; background-size: cover; height: 400px;">
                    <div class="bg-dark bg-opacity-60 d-flex align-items-end p-5 h-100">
                        <div>
                            <h1 class="display-4 fw-bold text-white mb-2 lh-1">@Model.Name</h1>
                            <div class="d-flex flex-wrap gap-2 mb-3">
                                <span class="badge bg-light text-dark fs-6 px-3 py-2 shadow-sm">
                                    <i class="fas fa-home me-1"></i>@Model.PropertyType
                                </span>
                                <span class="badge bg-success fs-6 px-3 py-2 shadow-sm">
                                    <i class="fas @GetStatusIcon(Model.Status) me-1"></i>
                                    @statuses.GetValueOrDefault(Model.Status, Model.Status)
                                </span>
                                @if (Model.IsFurnished)
                                {
                                    <span class="badge bg-info fs-6 px-3 py-2 shadow-sm">
                                        <i class="fas fa-couch me-1"></i>Nội thất full
                                    </span>
                                }
                            </div>
                            <div class="hstack gap-3 text-white-50">
                                <span><i class="fas fa-bed me-1"></i>@Model.Bedrooms PN</span>
                                <span><i class="fas fa-bath me-1"></i>@Model.Bathrooms PT</span>
                                <span><i class="fas fa-ruler-combined me-1"></i>@Model.SquareFeet:N0 m²</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <!-- Price Card -->
            <div class="card shadow-lg border-0 h-100">
                <div class="card-body text-center p-4">
                    <div class="h1 fw-bold text-success mb-2">@Model.RentAmount:N0 ₫</div>
                    <div class="text-muted mb-3">/tháng</div>
                    @if (Model.DepositAmount.HasValue)
                    {
                        <div class="h5 text-warning mb-3">
                            Cọc: @Model.DepositAmount.Value:N0 ₫
                        </div>
                    }
                    <div class="hstack gap-2 justify-content-center mb-4">
                        <span class="badge bg-light text-dark px-3 py-2">
                            <i class="fas fa-calendar-day me-1"></i>
                            @Model.AvailableFrom?.ToString("dd/MM/yyyy")
                        </span>
                        @if (Model.PetsAllowed)
                        {
                            <span class="badge bg-success px-3 py-2">
                                <i class="fas fa-paw me-1"></i>Cho phép pet
                            </span>
                        }
                    </div>
                    <a asp-action="Edit" asp-route-id="@Model.PropertyId"
                       class="btn btn-warning btn-lg w-100 shadow-sm mb-2">
                        <i class="fas fa-edit me-2"></i>Sửa thông tin
                    </a>
                    <a asp-action="ChangeStatus" asp-route-id="@Model.PropertyId"
                       class="btn btn-outline-primary btn-lg w-100 shadow-sm">
                        <i class="fas fa-exchange-alt me-2"></i>Đổi trạng thái
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Main Details -->
        <div class="col-lg-8">
            <!-- Location -->
            <div class="card shadow-lg border-0 mb-4">
                <div class="card-header bg-primary bg-gradient text-white py-3 px-4">
                    <h5 class="mb-0">
                        <i class="fas fa-map-marker-alt me-2"></i>Địa chỉ
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <h6 class="fw-bold mb-2">@Model.Address</h6>
                            <p class="mb-1"><strong>@Model.City</strong>@(Model.District != null ? $", {Model.District}" : "")</p>
                            @if (!string.IsNullOrEmpty(Model.ZipCode))
                            {
                                <p class="text-muted mb-0">Mã bưu điện: @Model.ZipCode</p>
                            }
                        </div>
                        <div class="col-md-4 text-end">
                            @if (Model.Latitude.HasValue && Model.Longitude.HasValue)
                            {
                                <div class="btn-group-vertical btn-group-sm">
                                    <a href="https://maps.google.com/?q=@Model.Latitude,@Model.Longitude"
                                       target="_blank" class="btn btn-outline-primary">
                                        <i class="fas fa-map me-1"></i>Mở Google Maps
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Description & Amenities -->
            <div class="card shadow-lg border-0 mb-4">
                <div class="card-header bg-info bg-gradient text-white py-3 px-4">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>Mô tả & Tiện ích
                    </h5>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="mb-4">
                            <h6 class="fw-bold mb-3">Mô tả</h6>
                            <div class="text-muted">@Html.Raw(Model.Description.Replace("\n", "<br/>"))</div>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.Amenities))
                    {
                        <div>
                            <h6 class="fw-bold mb-3">Tiện ích</h6>
                            @{
                                var amenities = Model.Amenities.Split(',');
                            }
                            <div class="row g-2">
                                @foreach (var amenity in amenities)
                                {
                                    <div class="col-auto">
                                        <span class="badge bg-light text-dark px-3 py-2 shadow-sm border">
                                            @amenity.Trim()
                                        </span>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Landlord -->
            @if (Model.Landlord != null)
            {
                <div class="card shadow-lg border-0 mb-4">
                    <div class="card-header bg-secondary bg-gradient text-white py-3 px-4">
                        <h6 class="mb-0">
                            <i class="fas fa-user-circle me-2"></i>Chủ BDS
                        </h6>
                    </div>
                    <div class="card-body p-4">
                        <div class="text-center mb-3">
                            <i class="fas fa-user-circle fa-4x text-muted mb-3"></i>
                            <h6 class="fw-bold">@Model.Landlord.FullName</h6>
                        </div>
                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <i class="fas fa-envelope text-muted me-2"></i>
                                @Model.Landlord.Email
                            </li>
                            @if (!string.IsNullOrEmpty(Model.Landlord.PhoneNumber))
                            {
                                <li class="mb-2">
                                    <i class="fas fa-phone text-muted me-2"></i>
                                    @Model.Landlord.PhoneNumber
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            }

            <!-- System Info -->
            <div class="card shadow border-0">
                <div class="card-header py-3 px-4">
                    <h6 class="mb-0 fw-bold">Thông tin hệ thống</h6>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item px-0 border-0">
                            <small class="text-muted">ID:</small>
                            <strong class="float-end">#@Model.PropertyId</strong>
                        </li>
                        <li class="list-group-item px-0 border-0">
                            <small class="text-muted">Tạo ngày:</small>
                            <strong class="float-end">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</strong>
                        </li>
                        <li class="list-group-item px-0 border-0">
                            <small class="text-muted">Cập nhật:</small>
                            <strong class="float-end">@Model.UpdatedAt?.ToString("dd/MM/yyyy HH:mm")</strong>
                        </li>
                        <li class="list-group-item px-0">
                            <small class="text-muted">Tọa độ:</small>
                            <strong class="float-end">
                                @if (Model.Latitude.HasValue && Model.Longitude.HasValue)
                                {
                                    <span>@Model.Latitude:F6, @Model.Longitude:F6</span>
                                }
                                else
                                {
                                    <span class="text-muted">Chưa có</span>
                                }
                            </strong>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .bg-image {
            position: relative;
        }

        .hstack {
            display: flex;
            flex-direction: row;
            align-items: center;
            gap: 0.5rem;
        }

        .bg-gradient-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
        }

        .bg-gradient-info {
            background: linear-gradient(135deg, #74b9ff 0%, #0984e3 100%) !important;
        }

        .bg-gradient-secondary {
            background: linear-gradient(135deg, #a4b0be 0%, #74b9ff 100%) !important;
        }
    </style>
}

@section Scripts {
    <script>
        // Google Maps link
        document.querySelectorAll('a[href*="maps.google"]').forEach(link => {
            link.addEventListener('click', function(e) {
                e.preventDefault();
                const url = this.getAttribute('href');
                window.open(url, '_blank');
            });
        });
    </script>
}

@functions {
    string GetStatusIcon(string status)
    {
        return status switch
        {
            "Available" => "fa-check-circle",
            "Rented" => "fa-handshake",
            "Maintenance" => "fa-tools",
            "Unavailable" => "fa-ban",
            _ => "fa-question-circle"
        };
    }
}
