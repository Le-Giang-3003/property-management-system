@model PropertyManagementSystem.DAL.Entities.Property

@{
    ViewData["Title"] = Model.Name;
    Layout = "_AuthLayout";
    var isFavorited = ViewBag.IsFavorited as bool? ?? false;
    var documents = ViewBag.Documents as IEnumerable<PropertyManagementSystem.DAL.Entities.Document> ?? new List<PropertyManagementSystem.DAL.Entities.Document>();
    var images = documents.Where(d => d.FileType.ToLower() is "jpg" or "jpeg" or "png" or "webp").ToList();
}

<div class="container mt-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>
        @if (User.Identity?.IsAuthenticated == true)
        {
            <button type="button" class="btn @(isFavorited ? "btn-danger" : "btn-outline-danger") favorite-detail-btn"
                    data-property-id="@Model.PropertyId"
                    data-is-favorited="@isFavorited.ToString().ToLower()">
                <i class="@(isFavorited ? "fas" : "far") fa-heart"></i>
                <span class="favorite-text">@(isFavorited ? "Đã yêu thích" : "Thêm yêu thích")</span>
            </button>
        }
    </div>

    <!-- Alerts -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <strong>Thành công!</strong> @TempData["Success"]
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <strong>Lỗi!</strong> @TempData["Error"]
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
    }

    <!-- Image Gallery -->
    @if (images.Any())
    {
        <div class="card mb-4">
            <div class="card-header bg-light">
                <h5 class="mb-0">
                    <i class="fas fa-images"></i> Hình ảnh BDS
                    <span class="badge badge-info">@images.Count</span>
                </h5>
            </div>
            <div class="card-body p-0">
                @if (images.Count == 1)
                {
                    <img src="@images.First().FileUrl" class="img-fluid w-100" alt="@Model.Name"
                         onclick="showImageModal('@images.First().FileUrl', '@Model.Name')"
                         style="max-height: 500px; object-fit: cover; cursor: pointer;">
                }
                else
                {
                    <!-- Carousel -->
                    <div id="propertyCarousel" class="carousel slide" data-ride="carousel">
                        <!-- Indicators -->
                        <ol class="carousel-indicators">
                            @for (int i = 0; i < images.Count; i++)
                            {
                                <li data-target="#propertyCarousel" data-slide-to="@i" class="@(i == 0 ? "active" : "")"></li>
                            }
                        </ol>

                        <!-- Slides -->
                        <div class="carousel-inner">
                            @for (int i = 0; i < images.Count; i++)
                            {
                                var image = images[i];
                                <div class="carousel-item @(i == 0 ? "active" : "")">
                                    <img src="@image.FileUrl" class="d-block w-100" alt="@Model.Name"
                                         onclick="showImageModal('@image.FileUrl', '@Model.Name - Ảnh @(i + 1)')"
                                         style="height: 500px; object-fit: cover; cursor: pointer;">
                                    @if (!string.IsNullOrEmpty(image.Description))
                                    {
                                        <div class="carousel-caption d-none d-md-block">
                                            <div class="bg-dark rounded p-2" style="background-color: rgba(0,0,0,0.7) !important;">
                                                <p class="mb-0">@image.Description</p>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                        </div>

                        <!-- Controls -->
                        <a class="carousel-control-prev" href="#propertyCarousel" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#propertyCarousel" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>

                    <!-- Thumbnails -->
                    <div class="p-3">
                        <div class="row">
                            @for (int i = 0; i < Math.Min(images.Count, 6); i++)
                            {
                                var image = images[i];
                                var index = i;
                                <div class="col-2 mb-2">
                                    <img src="@image.FileUrl" class="img-thumbnail thumbnail-img @(i == 0 ? "active-thumb" : "")"
                                         data-slide-to="@i" data-target="#propertyCarousel"
                                         alt="@image.FileName"
                                         style="height: 80px; object-fit: cover; cursor: pointer;">
                                </div>
                            }
                            @if (images.Count > 6)
                            {
                                <div class="col-2 mb-2">
                                    <div class="img-thumbnail d-flex align-items-center justify-content-center bg-light"
                                         data-toggle="modal" data-target="#allImagesModal"
                                         style="height: 80px; cursor: pointer;">
                                        <strong class="text-muted">+@(images.Count - 6)</strong>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    }

    <!-- Main Property Card -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">@Model.Name</h2>
            <div class="mt-2">
                <span class="badge badge-light mr-2">@Model.PropertyType</span>
                <span class="badge @GetStatusBadgeClass(Model.Status)">@GetStatusDisplay(Model.Status)</span>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <!-- Left: Info -->
                <div class="col-md-8">
                    <div class="mb-4">
                        <h5><i class="fas fa-map-marker-alt text-danger"></i> Địa chỉ</h5>
                        <p class="lead mb-1">@Model.Address</p>
                        <p class="text-muted">
                            @if (!string.IsNullOrEmpty(Model.District))
                            {
                                <span>@Model.District, </span>
                            }
                            @Model.City
                            @if (!string.IsNullOrEmpty(Model.ZipCode))
                            {
                                <span> - @Model.ZipCode</span>
                            }
                        </p>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="mb-4">
                            <h5><i class="fas fa-info-circle text-info"></i> Mô tả</h5>
                            <p>@Model.Description</p>
                        </div>
                    }

                    <div class="mb-4">
                        <h5><i class="fas fa-home text-primary"></i> Thông số</h5>
                        <div class="row">
                            <div class="col-sm-4 mb-3">
                                <div class="border rounded p-3 text-center">
                                    <i class="fas fa-bed fa-2x text-primary mb-2"></i>
                                    <h4 class="mb-0">@Model.Bedrooms</h4>
                                    <small class="text-muted">Phòng ngủ</small>
                                </div>
                            </div>
                            <div class="col-sm-4 mb-3">
                                <div class="border rounded p-3 text-center">
                                    <i class="fas fa-bath fa-2x text-info mb-2"></i>
                                    <h4 class="mb-0">@Model.Bathrooms</h4>
                                    <small class="text-muted">Phòng tắm</small>
                                </div>
                            </div>
                            <div class="col-sm-4 mb-3">
                                <div class="border rounded p-3 text-center">
                                    <i class="fas fa-ruler-combined fa-2x text-success mb-2"></i>
                                    <h4 class="mb-0">@Model.SquareFeet</h4>
                                    <small class="text-muted">ft²</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <h5><i class="fas fa-star text-warning"></i> Tiện nghi</h5>
                        <div class="row">
                            <div class="col-md-6">
                                <ul class="list-unstyled">
                                    <li class="mb-2">
                                        <i class="fas @(Model.IsFurnished ? "fa-check-circle text-success" : "fa-times-circle text-danger")"></i>
                                        @(Model.IsFurnished ? "Có nội thất" : "Không nội thất")
                                    </li>
                                    <li class="mb-2">
                                        <i class="fas @(Model.PetsAllowed ? "fa-check-circle text-success" : "fa-times-circle text-danger")"></i>
                                        @(Model.PetsAllowed ? "Cho phép thú cưng" : "Không cho phép thú cưng")
                                    </li>
                                </ul>
                            </div>
                            <div class="col-md-6">
                                @if (!string.IsNullOrEmpty(Model.Amenities))
                                {
                                    <strong>Tiện ích:</strong>
                                    <p>@Model.Amenities</p>
                                }
                                @if (!string.IsNullOrEmpty(Model.UtilitiesIncluded))
                                {
                                    <strong>Dịch vụ:</strong>
                                    <p>@Model.UtilitiesIncluded</p>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Right: Pricing & Actions -->
                <div class="col-md-4">
                    <div class="card bg-light mb-4">
                        <div class="card-body">
                            <h5>Giá thuê</h5>
                            <h2 class="text-success">@Model.RentAmount.ToString("N0") ₫</h2>
                            <p class="text-muted mb-3">/tháng</p>
                            @if (Model.DepositAmount.HasValue)
                            {
                                <hr />
                                <div class="d-flex justify-content-between">
                                    <span>Tiền cọc:</span>
                                    <strong>@Model.DepositAmount.Value.ToString("N0") ₫</strong>
                                </div>
                            }
                            <hr />
                            <div class="d-flex justify-content-between">
                                <span>Có sẵn từ:</span>
                                <strong>@Model.AvailableFrom?.ToString("dd/MM/yyyy")</strong>
                            </div>
                        </div>
                    </div>

                    @if (Model.Landlord != null)
                    {
                        <div class="card mb-4">
                            <div class="card-body">
                                <h5><i class="fas fa-user"></i> Chủ nhà</h5>
                                <p class="mb-1"><strong>@Model.Landlord.FullName</strong></p>
                                <p class="mb-1 text-muted"><i class="fas fa-envelope"></i> @Model.Landlord.Email</p>
                                @if (!string.IsNullOrEmpty(Model.Landlord.PhoneNumber))
                                {
                                    <p class="mb-0 text-muted"><i class="fas fa-phone"></i> @Model.Landlord.PhoneNumber</p>
                                }
                            </div>
                        </div>
                    }

                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        var currentUserId = int.Parse(User.FindFirst("UserId")?.Value ?? "0");
                        if (Model.LandlordId == currentUserId || User.IsInRole("Admin"))
                        {
                            <a asp-action="Edit" asp-route-id="@Model.PropertyId" class="btn btn-warning btn-block mb-2">
                                <i class="fas fa-edit"></i> Chỉnh sửa
                            </a>
                            <a asp-action="ChangeStatus" asp-route-id="@Model.PropertyId" class="btn btn-info btn-block mb-2">
                                <i class="fas fa-toggle-on"></i> Đổi trạng thái
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.PropertyId" class="btn btn-danger btn-block">
                                <i class="fas fa-trash"></i> Xóa BDS
                            </a>
                        }
                    }
                </div>
            </div>
        </div>
        <div class="card-footer text-muted">
            <div class="row">
                <div class="col-md-6">
                    <small><i class="fas fa-calendar-plus"></i> Tạo: @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                </div>
                <div class="col-md-6 text-right">
                    <small><i class="fas fa-sync-alt"></i> Cập nhật: @Model.UpdatedAt?.ToString("dd/MM/yyyy HH:mm")</small>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Image Modal -->
<div class="modal fade" id="imageModal" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="imageModalTitle"></h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body text-center p-0">
                <img id="imageModalImg" src="" class="img-fluid" alt="">
            </div>
        </div>
    </div>
</div>

<!-- All Images Modal -->
@if (images.Count > 6)
{
    <div class="modal fade" id="allImagesModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5>Tất cả hình ảnh (@images.Count)</h5>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        @foreach (var image in images)
                        {
                            <div class="col-md-4 col-sm-6 mb-3">
                                <img src="@image.FileUrl" class="img-thumbnail" alt="@image.FileName"
                                     onclick="showImageModal('@image.FileUrl', '@image.FileName')"
                                     style="height: 200px; width: 100%; object-fit: cover; cursor: pointer;">
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@Html.AntiForgeryToken()

@section Styles {
    <style>
        .thumbnail-img {
            transition: all 0.3s;
        }

            .thumbnail-img:hover {
                transform: scale(1.05);
            }

        .active-thumb {
            border: 3px solid #007bff !important;
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // Auto-hide alerts
            setTimeout(() => $('.alert').fadeOut('slow'), 5000);

            // ✅ Initialize carousel
            $('#propertyCarousel').carousel({
                interval: 3000,
                wrap: true
            });

            // ✅ Highlight active thumbnail
            $('#propertyCarousel').on('slid.bs.carousel', function() {
                var currentIndex = $('.carousel-item.active').index();
                $('.thumbnail-img').removeClass('active-thumb');
                $('.thumbnail-img').eq(currentIndex).addClass('active-thumb');
            });

            // ✅ Click thumbnail to go to slide
            $('.thumbnail-img').on('click', function() {
                var slideTo = $(this).data('slide-to');
                $('#propertyCarousel').carousel(slideTo);
            });
        });

        // Show image modal
        function showImageModal(url, title) {
            $('#imageModalTitle').text(title);
            $('#imageModalImg').attr('src', url);
            $('#allImagesModal').modal('hide');
            $('#imageModal').modal('show');
        }

        // Favorite
        $('.favorite-detail-btn').on('click', async function() {
            const propertyId = $(this).data('property-id');
            const icon = $(this).find('i');
            const text = $(this).find('.favorite-text');
            const btn = $(this);

            try {
                const response = await fetch('@Url.Action("ToggleFavorite", "Property")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    body: `propertyId=${propertyId}`
                });

                const result = await response.json();

                if (result.success) {
                    if (result.isFavorited) {
                        icon.removeClass('far').addClass('fas');
                        text.text('Đã yêu thích');
                        btn.removeClass('btn-outline-danger').addClass('btn-danger');
                    } else {
                        icon.removeClass('fas').addClass('far');
                        text.text('Thêm yêu thích');
                        btn.removeClass('btn-danger').addClass('btn-outline-danger');
                    }
                    showToast(result.message, 'success');
                } else {
                    showToast(result.message || 'Có lỗi xảy ra', 'error');
                }
            } catch (error) {
                console.error('Error:', error);
                showToast('Có lỗi xảy ra', 'error');
            }
        });

        function showToast(message, type) {
            const toastClass = type === 'success' ? 'alert-success' : 'alert-danger';
            const toast = $(`
                <div class="alert ${toastClass} alert-dismissible fade show position-fixed"
                     style="top: 20px; right: 20px; z-index: 9999; min-width: 300px;">
                    ${message}
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                </div>
            `);
            $('body').append(toast);
            setTimeout(() => toast.alert('close'), 3000);
        }
    </script>
}

@functions {
    string GetStatusBadgeClass(string status) => status switch
    {
        "Available" => "badge-success",
        "Rented" => "badge-warning",
        "Maintenance" => "badge-info",
        _ => "badge-secondary"
    };

    string GetStatusDisplay(string status) => status switch
    {
        "Available" => "Có sẵn",
        "Rented" => "Đã thuê",
        "Maintenance" => "Bảo trì",
        "Unavailable" => "Không khả dụng",
        _ => status
    };
}
