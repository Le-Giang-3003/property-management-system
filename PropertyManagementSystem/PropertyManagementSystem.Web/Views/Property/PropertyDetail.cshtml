@using System.Security.Claims
@model PropertyManagementSystem.DAL.Entities.Property

@{
    ViewData["Title"] = Model.Name;
    Layout = "_AuthLayout";

    var isFavorited = ViewBag.IsFavorited as bool? ?? false;
    var images = ViewBag.PropertyImages as List<PropertyManagementSystem.DAL.Entities.PropertyImage>
                 ?? new List<PropertyManagementSystem.DAL.Entities.PropertyImage>();
    var sortedImages = images.OrderByDescending(i => i.IsThumbnail).ThenBy(i => i.DisplayOrder).ToList();

    var currentUserId = 0;
    if (User.Identity?.IsAuthenticated == true)
    {
        var userIdClaim = User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
        int.TryParse(userIdClaim, out currentUserId);
    }
    var isOwner = Model.LandlordId == currentUserId || User.IsInRole("Admin");
}

<div class="property-details-container">
    <!-- Header -->
    <div class="details-header">
        <a asp-controller="Property" asp-action="SearchProperties" class="btn-back" 
           aria-label="Back to properties list">
            <i class="bi bi-arrow-left" aria-hidden="true"></i>
            Back to Properties
        </a>
        @if (User.Identity?.IsAuthenticated == true)
        {
            <button type="button" class="btn-favorite @(isFavorited ? "active" : "")"
                    data-property-id="@Model.PropertyId"
                    aria-label="@(isFavorited ? "Remove from favorites" : "Add to favorites")">
                <i class="@(isFavorited ? "bi bi-heart-fill" : "bi bi-heart")" aria-hidden="true"></i>
                <span>@(isFavorited ? "Saved" : "Save")</span>
            </button>
        }
    </div>

    <!-- Gallery -->
    @if (sortedImages.Any())
    {
        <div class="gallery-section">
            @if (sortedImages.Count == 1)
            {
                <div class="single-image">
                    <img src="@sortedImages[0].ImageUrl"
                         alt="@Html.Raw(Html.Encode(sortedImages[0].Caption ?? Model.Name))"
                         onerror="this.onerror=null; this.src='/images/placeholder-property.jpg'; this.alt='Image not available';"
                         onclick="showImageModal('@Html.Raw(Html.Encode(sortedImages[0].ImageUrl))', '@Html.Raw(Html.Encode(sortedImages[0].Caption ?? Model.Name))')">
                    @if (sortedImages[0].IsThumbnail)
                    {
                        <div class="thumbnail-badge">
                            <i class="bi bi-star-fill"></i>
                            <span>Featured</span>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="gallery-grid">
                    <div class="gallery-main">
                        <img src="@sortedImages[0].ImageUrl"
                             alt="@Html.Raw(Html.Encode(sortedImages[0].Caption ?? Model.Name))"
                             onerror="this.onerror=null; this.src='/images/placeholder-property.jpg'; this.alt='Image not available';"
                             onclick="showImageModal('@Html.Raw(Html.Encode(sortedImages[0].ImageUrl))', '@Html.Raw(Html.Encode(sortedImages[0].Caption ?? Model.Name))')">
                        @if (sortedImages[0].IsThumbnail)
                        {
                            <div class="thumbnail-badge">
                                <i class="bi bi-star-fill"></i>
                                <span>Featured</span>
                            </div>
                        }
                    </div>
                    <div class="gallery-side">
                        @for (int i = 1; i < Math.Min(sortedImages.Count, 5); i++)
                        {
                            <div class="gallery-item">
                                <img src="@sortedImages[i].ImageUrl"
                                     alt="@Html.Raw(Html.Encode(sortedImages[i].Caption ?? Model.Name))"
                                     onerror="this.onerror=null; this.src='/images/placeholder-property.jpg'; this.alt='Image not available';"
                                     onclick="showImageModal('@Html.Raw(Html.Encode(sortedImages[i].ImageUrl))', '@Html.Raw(Html.Encode(sortedImages[i].Caption ?? Model.Name))')">
                                @if (i == 4 && sortedImages.Count > 5)
                                {
                                    <div class="more-overlay" data-bs-toggle="modal" data-bs-target="#allImagesModal">
                                        <i class="bi bi-images"></i>
                                        <span>+@(sortedImages.Count - 5)</span>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="no-images-section">
            <i class="bi bi-image"></i>
            <p>No images available</p>
            @if (isOwner)
            {
                <a asp-action="ManageImages" asp-route-id="@Model.PropertyId" class="btn-upload-first">
                    <i class="bi bi-cloud-upload"></i>
                    Upload Images
                </a>
            }
        </div>
    }

    <!-- Content -->
    <div class="details-grid">
        <div class="details-main">
            <!-- Title & Status -->
            <div class="property-header">
                <h1>@Model.Name</h1>
                <div class="property-meta">
                    <span class="property-type">@Model.PropertyType</span>
                    <span class="status-badge @GetStatusClass(Model.Status)">
                        @GetStatusDisplay(Model.Status)
                    </span>
                </div>
            </div>

            <!-- Location -->
            <div class="info-section">
                <div class="section-icon">
                    <i class="bi bi-geo-alt"></i>
                </div>
                <div class="section-content">
                    <h3>Location</h3>
                    <p class="address-main">@Model.Address</p>
                    <p class="address-sub">
                        @if (!string.IsNullOrEmpty(Model.District))
                        {
                            <span>@Model.District, </span>
                        }
                        @Model.City
                        @if (!string.IsNullOrEmpty(Model.ZipCode))
                        {
                            <span> - @Model.ZipCode</span>
                        }
                    </p>
                </div>
            </div>

            <!-- Specs -->
            <div class="info-section">
                <div class="section-icon">
                    <i class="bi bi-house-door"></i>
                </div>
                <div class="section-content">
                    <h3>Property Details</h3>
                    <div class="specs-grid">
                        <div class="spec-card">
                            <i class="bi bi-door-closed"></i>
                            <div>
                                <strong>@Model.Bedrooms</strong>
                                <span>Bedrooms</span>
                            </div>
                        </div>
                        <div class="spec-card">
                            <i class="bi bi-droplet"></i>
                            <div>
                                <strong>@Model.Bathrooms</strong>
                                <span>Bathrooms</span>
                            </div>
                        </div>
                        <div class="spec-card">
                            <i class="bi bi-rulers"></i>
                            <div>
                                <strong>@Model.SquareFeet.ToString("N0")</strong>
                                <span>sqft</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Description -->
            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <div class="info-section">
                    <div class="section-icon">
                        <i class="bi bi-card-text"></i>
                    </div>
                    <div class="section-content">
                        <h3>Description</h3>
                        <p class="description-text">@Html.Raw(Html.Encode(Model.Description))</p>
                    </div>
                </div>
            }

            <!-- Amenities -->
            <div class="info-section">
                <div class="section-icon">
                    <i class="bi bi-star"></i>
                </div>
                <div class="section-content">
                    <h3>Amenities</h3>
                    <div class="amenities-grid">
                        <div class="amenity-item @(Model.IsFurnished ? "available" : "unavailable")">
                            <i class="bi @(Model.IsFurnished ? "bi-check-circle-fill" : "bi-x-circle-fill")"></i>
                            <span>@(Model.IsFurnished ? "Furnished" : "Unfurnished")</span>
                        </div>
                        <div class="amenity-item @(Model.PetsAllowed ? "available" : "unavailable")">
                            <i class="bi @(Model.PetsAllowed ? "bi-check-circle-fill" : "bi-x-circle-fill")"></i>
                            <span>@(Model.PetsAllowed ? "Pets Allowed" : "No Pets")</span>
                        </div>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Amenities))
                    {
                        <div class="amenity-list">
                            <strong>Features:</strong>
                            <p>@Html.Raw(Html.Encode(Model.Amenities))</p>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.UtilitiesIncluded))
                    {
                        <div class="amenity-list">
                            <strong>Utilities Included:</strong>
                            <p>@Html.Raw(Html.Encode(Model.UtilitiesIncluded))</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Timestamps -->
            <div class="timestamps">
                <span><i class="bi bi-calendar-plus" aria-hidden="true"></i> Listed: @FormatDate(Model.CreatedAt)</span>
                @if (Model.UpdatedAt.HasValue)
                {
                    <span><i class="bi bi-clock-history" aria-hidden="true"></i> Updated: @FormatDate(Model.UpdatedAt)</span>
                }
            </div>
        </div>

        <!-- Sidebar -->
        <div class="details-sidebar">
            <!-- Pricing -->
            <div class="sidebar-card pricing-card">
                <div class="price-main">
                    <span class="price-amount">@FormatVNCurrency(Model.RentAmount)</span>
                    <span class="price-period">/month</span>
                </div>
                @if (Model.DepositAmount.HasValue)
                {
                    <div class="price-item">
                        <span>Security Deposit</span>
                        <strong>@FormatVNCurrency(Model.DepositAmount.Value)</strong>
                    </div>
                }
                <div class="price-item">
                    <span>Available From</span>
                    <strong>@FormatDate(Model.AvailableFrom)</strong>
                </div>
            </div>

            <!-- Landlord -->
            @if (Model.Landlord != null)
            {
                <div class="sidebar-card landlord-card">
                    <h4>Property Owner</h4>
                    <div class="landlord-info">
                        <div class="landlord-avatar">@(string.IsNullOrEmpty(Model.Landlord.FullName) ? "?" : Model.Landlord.FullName.Substring(0, Math.Min(1, Model.Landlord.FullName.Length)).ToUpper())</div>
                        <div class="landlord-details">
                            <strong>@(Model.Landlord.FullName ?? "N/A")</strong>
                            <span><i class="bi bi-envelope"></i> @Model.Landlord.Email</span>
                            @if (!string.IsNullOrEmpty(Model.Landlord.PhoneNumber))
                            {
                                <span><i class="bi bi-telephone"></i> @Model.Landlord.PhoneNumber</span>
                            }
                        </div>
                    </div>
                </div>
            }

            <!-- Actions for Owner -->
            @if (isOwner)
            {
                <div class="sidebar-card actions-card">
                    <h4>Management</h4>
                    <div class="action-buttons">
                        <a asp-action="Edit" asp-route-id="@Model.PropertyId" class="btn-action edit" 
                           aria-label="Edit property">
                            <i class="bi bi-pencil" aria-hidden="true"></i> Edit Property
                        </a>
                        <a asp-action="ManageImages" asp-route-id="@Model.PropertyId" class="btn-action images"
                           aria-label="Manage property images">
                            <i class="bi bi-images" aria-hidden="true"></i> Manage Images
                        </a>
                        <button type="button" class="btn-action status" 
                                data-bs-toggle="modal" data-bs-target="#changeStatusModal"
                                aria-label="Change property status">
                            <i class="bi bi-arrow-repeat" aria-hidden="true"></i> Change Status
                        </button>
                        <a asp-action="Delete" asp-route-id="@Model.PropertyId" class="btn-action delete"
                           aria-label="Delete property"
                           onclick="return confirmDeleteProperty(event, '@Html.Raw(Html.Encode(Model.Name ?? "this property"))');">
                            <i class="bi bi-trash3" aria-hidden="true"></i> Delete Property
                        </a>
                    </div>
                </div>
            }
            else if (User.Identity?.IsAuthenticated == true && Model.Status == "Available")
            {
                <!-- Apply Now for Tenants -->
                <div class="sidebar-card apply-card">
                    <h4>Interested in this property?</h4>
                    <p class="apply-card-text">Submit your rental application now and get a response within 24-48 hours.</p>
                    <a asp-controller="RentalApplication" asp-action="Create" asp-route-propertyId="@Model.PropertyId" class="btn-apply-now">
                        <i class="bi bi-send"></i>
                        Apply Now
                    </a>
                    <a asp-controller="PropertyViewing" asp-action="Request" asp-route-propertyId="@Model.PropertyId" class="btn-schedule-viewing">
                        <i class="bi bi-calendar-event"></i>
                        Schedule Viewing
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<!-- Image Modal -->
<div class="modal fade" id="imageModal" tabindex="-1">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="imageModalTitle"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-0">
                <img id="imageModalImg" src="" class="w-100" alt="">
            </div>
        </div>
    </div>
</div>

<!-- All Images Modal -->
@if (sortedImages.Count > 5)
{
    <div class="modal fade" id="allImagesModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5>All Images (@sortedImages.Count)</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="all-images-grid">
                        @foreach (var image in sortedImages)
                        {
                            <div class="image-item">
                                <img src="@image.ImageUrl" alt="@(image.Caption ?? Model.Name)"
                                     onclick="showImageModal('@image.ImageUrl', '@(image.Caption ?? Model.Name)')">
                                @if (image.IsThumbnail)
                                {
                                    <div class="thumbnail-badge-small">
                                        <i class="bi bi-star-fill"></i>
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(image.Caption))
                                {
                                    <div class="image-caption">@image.Caption</div>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<!-- Change Status Modal -->
<div class="modal fade" id="changeStatusModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5><i class="bi bi-arrow-repeat"></i> Change Status</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="ChangeStatus" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="PropertyId" value="@Model.PropertyId" />
                <input type="hidden" name="CurrentStatus" value="@Model.Status" />

                <div class="modal-body">
                    <div class="current-status-info">
                        <strong>Property:</strong> @Model.Name<br>
                        <strong>Current Status:</strong>
                        <span class="status-badge @GetStatusClass(Model.Status)">@GetStatusDisplay(Model.Status)</span>
                    </div>

                    <div class="form-group">
                        <label for="statusSelect">New Status <span class="text-danger">*</span></label>
                        <select name="NewStatus" id="statusSelect" class="form-select" required>
                            <option value="">-- Select Status --</option>
                            <option value="Available">Available</option>
                            <option value="Rented">Rented</option>
                            <option value="Maintenance">Under Maintenance</option>
                            <option value="Unavailable">Unavailable</option>
                        </select>
                    </div>

                    <div id="statusPreview" class="status-preview">
                        <p class="text-muted">Select a status to preview</p>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" id="submitBtn" class="btn btn-primary" disabled>Update Status</button>
                </div>
            </form>
        </div>
    </div>
</div>

