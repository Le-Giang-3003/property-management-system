@section Styles {
    <style>
        .property-details-container {
            padding: 30px;
            max-width: 1400px;
            margin: 0 auto;
        }

        /* Header */
        .details-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 24px;
        }

        .btn-back, .btn-favorite {
            display: flex;
            align-items: center;
            gap: 8px;
            padding: 10px 20px;
            border-radius: 8px;
            font-size: 14px;
            font-weight: 500;
            text-decoration: none;
            transition: all 0.2s;
            border: none;
            cursor: pointer;
        }

        .btn-back {
            background: #f1f5f9;
            color: #475569;
        }

            .btn-back:hover {
                background: #e2e8f0;
                color: #1e293b;
            }

        .btn-favorite {
            background: white;
            border: 2px solid #e2e8f0;
            color: #64748b;
        }

            .btn-favorite:hover {
                border-color: #ef4444;
                color: #ef4444;
            }

            .btn-favorite.active {
                background: #ef4444;
                border-color: #ef4444;
                color: white;
            }

        /* Gallery */
        .gallery-section {
            margin-bottom: 32px;
            border-radius: 12px;
            overflow: hidden;
        }

        .single-image, .gallery-main {
            position: relative;
        }

            .single-image img {
                width: 100%;
                height: 500px;
                object-fit: contain;
                object-position: center;
                background: #f8fafc;
                cursor: pointer;
                border-radius: 12px;
            }

        .gallery-grid {
            display: grid;
            grid-template-columns: 2fr 1fr;
            gap: 8px;
            height: 500px;
        }

        .gallery-main img {
            width: 100%;
            height: 100%;
            object-fit: contain;
            object-position: center;
            background: #f8fafc;
            cursor: pointer;
            border-radius: 12px 0 0 12px;
        }

        .gallery-side {
            display: grid;
            grid-template-rows: repeat(4, 1fr);
            gap: 8px;
        }

        .gallery-item {
            position: relative;
            overflow: hidden;
        }

            .gallery-item:first-child img {
                border-radius: 0 12px 0 0;
            }

            .gallery-item:last-child img {
                border-radius: 0 0 12px 0;
            }

            .gallery-item img {
                width: 100%;
                height: 100%;
                object-fit: contain;
                object-position: center;
                background: #f8fafc;
                cursor: pointer;
                transition: transform 0.3s;
            }

            .gallery-item:hover img {
                transform: scale(1.05);
            }

        /* Thumbnail Badge */
        .thumbnail-badge {
            position: absolute;
            top: 16px;
            left: 16px;
            background: linear-gradient(135deg, #fbbf24, #f59e0b);
            color: white;
            padding: 8px 16px;
            border-radius: 8px;
            font-size: 13px;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 6px;
            z-index: 10;
            box-shadow: 0 4px 12px rgba(251, 191, 36, 0.4);
        }

            .thumbnail-badge i {
                animation: pulse 2s infinite;
            }

        @@keyframes pulse {
            0%, 100% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.15);
            }
        }

        /* More Overlay */
        .more-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.75);
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            gap: 8px;
            color: white;
            font-size: 18px;
            font-weight: 600;
            cursor: pointer;
            transition: background 0.2s;
        }

            .more-overlay:hover {
                background: rgba(0, 0, 0, 0.85);
            }

            .more-overlay i {
                font-size: 32px;
            }

        /* No Images */
        .no-images-section {
            height: 400px;
            background: #f8fafc;
            border: 2px dashed #cbd5e1;
            border-radius: 12px;
            display: flex;
            flex-direction: column;
