@using System.Security.Claims
@model IEnumerable<PropertyManagementSystem.DAL.Entities.Property>

@{
    ViewData["Title"] = "Search Properties";
    Layout = "_AuthLayout";
    var city = ViewBag.City as string ?? "";
    var propertyType = ViewBag.PropertyType as string ?? "";
    var minRent = ViewBag.MinRent as decimal?;
    var maxRent = ViewBag.MaxRent as decimal?;
    var minBedrooms = ViewBag.MinBedrooms as int?;
    var propertyTypes = ViewBag.PropertyTypes as List<SelectListItem> ?? new();
    var hasFilters = !string.IsNullOrEmpty(city) || !string.IsNullOrEmpty(propertyType) || minRent.HasValue || maxRent.HasValue || minBedrooms.HasValue;
    var favoritePropertyIds = ViewBag.FavoritePropertyIds as HashSet<int> ?? new HashSet<int>();

    var currentUserId = 0;
    if (User.Identity?.IsAuthenticated == true)
    {
        var userIdClaim = User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
        int.TryParse(userIdClaim, out currentUserId);
    }
}

<div class="search-properties-container">
    <!-- Page Header -->
    <div class="sp-header">
        <h1 class="sp-title">Search Properties</h1>
        <p class="sp-subtitle">Find your perfect rental home</p>
    </div>

    <!-- Search & Filter Section -->
    <div class="sp-filter-card">
        <form asp-action="SearchProperties" method="get" class="sp-filter-form">
            <!-- Main Search Bar -->
            <div class="sp-search-row">
                <div class="sp-search-input-wrapper">
                    <i class="bi bi-search"></i>
                    <input type="text" name="city" class="sp-search-input"
                           placeholder="Search by location, property name..." value="@city" />
                </div>
                <button type="submit" class="sp-search-btn">
                    Search
                </button>
            </div>

            <!-- Filter Row -->
            <div class="sp-filter-row">
                <div class="sp-filter-group">
                    <input type="number" name="minRent" class="sp-filter-input"
                           placeholder="Min Price" min="0" step="100000" value="@minRent" />
                </div>
                <div class="sp-filter-group">
                    <input type="number" name="maxRent" class="sp-filter-input"
                           placeholder="Max Price" min="0" step="100000" value="@maxRent" />
                </div>
                <div class="sp-filter-group">
                    <select name="minBedrooms" class="sp-filter-select">
                        <option value="">All Bedrooms</option>
                        <option value="1" selected="@(minBedrooms == 1)">1+ Bedroom</option>
                        <option value="2" selected="@(minBedrooms == 2)">2+ Bedrooms</option>
                        <option value="3" selected="@(minBedrooms == 3)">3+ Bedrooms</option>
                        <option value="4" selected="@(minBedrooms == 4)">4+ Bedrooms</option>
                    </select>
                </div>
                <div class="sp-filter-group">
                    <select name="propertyType" class="sp-filter-select">
                        <option value="">All Types</option>
                        @foreach (var type in propertyTypes)
                        {
                            <option value="@type.Value" selected="@(type.Value == propertyType)">
                                @type.Text
                            </option>
                        }
                    </select>
                </div>
            </div>
        </form>
    </div>

    <!-- Properties Grid -->
    @if (Model != null && Model.Any())
    {
        <div class="sp-properties-grid">
            @foreach (var item in Model)
            {
                var isFavorited = favoritePropertyIds.Contains(item.PropertyId);
                var thumbnailImage = item.Images?.FirstOrDefault(i => i.IsThumbnail) ?? item.Images?.FirstOrDefault();
                var imageUrl = thumbnailImage?.ImageUrl ?? "/images/property-placeholder.svg";

                // Parse amenities if available
                var amenitiesList = new List<string>();
                if (!string.IsNullOrEmpty(item.Amenities))
                {
                    try
                    {
                        amenitiesList = System.Text.Json.JsonSerializer.Deserialize<List<string>>(item.Amenities) ?? new List<string>();
                    }
                    catch
                    {
                        amenitiesList = item.Amenities.Split(',').Select(a => a.Trim()).Take(3).ToList();
                    }
                }

                <div class="sp-property-card">
                    <!-- Card Image -->
                    <div class="sp-card-image">
                        <img src="@imageUrl" alt="@item.Name" onerror="this.src='/images/property-placeholder.svg'" />

                        <!-- Status Badge -->
                        <span class="sp-status-badge @GetStatusClass(item.Status)">
                            @GetStatusDisplay(item.Status)
                        </span>

                        <!-- Favorite Button -->
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <button type="button" class="sp-favorite-btn @(isFavorited ? "active" : "")"
                                    data-property-id="@item.PropertyId">
                                <i class="bi @(isFavorited ? "bi-heart-fill" : "bi-heart")"></i>
                            </button>
                        }

                        <!-- Rating (if available) -->
                        @if (item.Viewings?.Any() == true)
                        {
                            <div class="sp-rating">
                                <i class="bi bi-star-fill"></i>
                                <span>4.5</span>
                            </div>
                        }
                    </div>

                    <!-- Card Content -->
                    <div class="sp-card-content">
                        <div class="sp-card-header">
                            <h3 class="sp-property-name">
                                <a asp-action="Details" asp-route-id="@item.PropertyId">@item.Name</a>
                            </h3>
                            @if (item.Viewings?.Any() == true || item.RentalApplications?.Any() == true)
                            {
                                <div class="sp-rating-badge">
                                    <i class="bi bi-star-fill"></i>
                                    <span>4.@(new Random().Next(0, 9))</span>
                                </div>
                            }
                        </div>

                        <div class="sp-property-address">
                            <i class="bi bi-geo-alt"></i>
                            <span>@item.Address@(!string.IsNullOrEmpty(item.City) ? $", {item.City}" : "")@(!string.IsNullOrEmpty(item.ZipCode) ? $" {item.ZipCode}" : "")</span>
                        </div>

                        <div class="sp-property-specs">
                            <div class="sp-spec">
                                <i class="bi bi-door-open"></i>
                                <span>@item.Bedrooms Beds</span>
                            </div>
                            <div class="sp-spec">
                                <i class="bi bi-droplet"></i>
                                <span>@item.Bathrooms Baths</span>
                            </div>
                            <div class="sp-spec">
                                <i class="bi bi-arrows-angle-expand"></i>
                                <span>@item.SquareFeet.ToString("N0") sqft</span>
                            </div>
                        </div>

                        <!-- Amenities Tags -->
                        @if (amenitiesList.Any())
                        {
                            <div class="sp-amenities">
                                @foreach (var amenity in amenitiesList.Take(3))
                                {
                                    <span class="sp-amenity-tag">@amenity</span>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="sp-amenities">
                                @if (item.IsFurnished)
                                {
                                    <span class="sp-amenity-tag">Furnished</span>
                                }
                                @if (item.PetsAllowed)
                                {
                                    <span class="sp-amenity-tag">Pet Friendly</span>
                                }
                                <span class="sp-amenity-tag">@item.PropertyType</span>
                            </div>
                        }

                        <!-- Price & Actions -->
                        <div class="sp-card-footer">
                            <div class="sp-price">
                                <span class="sp-price-amount">@item.RentAmount.ToString("N0") VND</span>
                                <span class="sp-price-period">per month</span>
                            </div>
                            <div class="sp-card-actions">
                                <a asp-action="Details" asp-route-id="@item.PropertyId" class="sp-btn-outline">
                                    View Details
                                </a>
                                @if (item.Status == "Available" && item.LandlordId != currentUserId)
                                {
                                    <a asp-controller="RentalApplication" asp-action="Create" asp-route-propertyId="@item.PropertyId" class="sp-btn-primary">
                                        Apply Now
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <!-- Empty State -->
        <div class="sp-empty-state">
            <div class="sp-empty-icon">
                <i class="bi bi-house-slash"></i>
            </div>
            <h3>No Properties Found</h3>
            <p>
                @if (hasFilters)
                {
                    <span>Try adjusting your search filters or </span>
                    <a asp-action="SearchProperties">clear all filters</a>
                }
                else
                {
                    <span>No properties available at the moment.</span>
                }
            </p>
        </div>
    }
</div>

@Html.AntiForgeryToken()

