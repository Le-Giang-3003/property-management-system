                grid-template-columns: 1fr;
            }
        }
    </style>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).ready(function() {
            // Toggle favorite
            $('.sp-favorite-btn').on('click', function(e) {
                e.preventDefault();
                var btn = $(this);
                var propertyId = btn.data('property-id');
                var icon = btn.find('i');
                btn.prop('disabled', true);

                $.ajax({
                    url: '@Url.Action("ToggleFavorite", "Property")',
                    type: 'POST',
                    data: {
                        propertyId: propertyId,
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function(response) {
                        btn.prop('disabled', false);
                        if (response.success) {
                            if (response.isFavorited) {
                                btn.addClass('active');
                                icon.removeClass('bi-heart').addClass('bi-heart-fill');
                            } else {
                                btn.removeClass('active');
                                icon.removeClass('bi-heart-fill').addClass('bi-heart');
                            }
                            Swal.fire({
                                toast: true,
                                position: 'top-end',
                                icon: 'success',
                                title: response.message,
                                showConfirmButton: false,
                                timer: 2000,
                                timerProgressBar: true
                            });
                        } else {
                            Swal.fire('Error', response.message, 'error');
                        }
                    },
                    error: function() {
                        btn.prop('disabled', false);
                        Swal.fire('Error', 'An error occurred', 'error');
                    }
                });
            });
        });

        // Success/Error messages
        @if (TempData["Success"] != null)
        {
            <text>
            Swal.fire({
                icon: 'success',
                title: 'Success!',
                text: @Html.Raw(Json.Serialize(TempData["Success"])),
                timer: 3000,
                showConfirmButton: false,
                toast: true,
                position: 'top-end'
            });
            </text>
        }

        @if (TempData["Error"] != null)
        {
            <text>
            Swal.fire({
                icon: 'error',
                title: 'Error!',
                text: @Html.Raw(Json.Serialize(TempData["Error"])),
                timer: 4000,
                showConfirmButton: false,
                toast: true,
                position: 'top-end'
            });
            </text>
        }
    </script>
}

@functions {
    string GetStatusClass(string status) => status switch
    {
        "Available" => "available",
        "Rented" => "rented",
        "Maintenance" => "maintenance",
        _ => "unavailable"
    };

    string GetStatusDisplay(string status) => status switch
    {
        "Available" => "Available",
        "Rented" => "Rented",
        "Maintenance" => "Maintenance",
        "Unavailable" => "Unavailable",
        _ => status
    };
}
