@model PropertyManagementSystem.Web.ViewModels.Property.CreatePropertyViewModel

@{
    ViewData["Title"] = "Tạo bất động sản mới";
    Layout = "_AuthLayout";
}

<div class="container mt-4">
    <h1>Tạo bất động sản mới</h1>

    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <!-- Thông tin cơ bản -->
        <h3>Thông tin cơ bản</h3>
        <div class="form-group">
            <label asp-for="Name">Tên BDS <span class="text-danger">*</span></label>
            <input asp-for="Name" class="form-control" placeholder="VD: Căn hộ 2PN cao cấp Quận 7" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!-- Địa chỉ -->
        <h3>Địa chỉ</h3>
        <div class="form-group">
            <label asp-for="Address">Địa chỉ chi tiết <span class="text-danger">*</span></label>
            <input asp-for="Address" class="form-control" placeholder="123 Đường ABC, Phường XYZ" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="City">Quận/Huyện</label>
                    <input asp-for="City" class="form-control" placeholder="Quận 7" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="District">Phường/Xã</label>
                    <input asp-for="District" class="form-control" placeholder="Phường Tân Phú" />
                    <span asp-validation-for="District" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="ZipCode">Mã bưu điện</label>
                    <input asp-for="ZipCode" class="form-control" placeholder="70000" />
                    <span asp-validation-for="ZipCode" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Latitude">Latitude</label>
                    <input asp-for="Latitude" type="number" step="0.000001" class="form-control" placeholder="10.762622" />
                    <span asp-validation-for="Latitude" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Longitude">Longitude</label>
                    <input asp-for="Longitude" type="number" step="0.000001" class="form-control" placeholder="106.660172" />
                    <span asp-validation-for="Longitude" class="text-danger"></span>
                </div>
            </div>
        </div>

        <!-- Thông số BDS -->
        <h3>Thông số BDS</h3>
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="PropertyType">Loại BDS <span class="text-danger">*</span></label>
                    <select asp-for="PropertyType" class="form-control">
                        <option value="">-- Chọn loại --</option>
                        @foreach (var type in Model.PropertyTypes ?? new())
                        {
                            <option value="@type.Value">@type.Text</option>
                        }
                    </select>
                    <span asp-validation-for="PropertyType" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="Bedrooms">Phòng ngủ <span class="text-danger">*</span></label>
                    <input asp-for="Bedrooms" type="number" min="0" max="20" class="form-control" />
                    <span asp-validation-for="Bedrooms" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="Bathrooms">Phòng tắm <span class="text-danger">*</span></label>
                    <input asp-for="Bathrooms" type="number" min="0" max="10" class="form-control" />
                    <span asp-validation-for="Bathrooms" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="SquareFeet">Diện tích (ft²) <span class="text-danger">*</span></label>
                    <input asp-for="SquareFeet" type="number" step="0.01" min="1" class="form-control" />
                    <span asp-validation-for="SquareFeet" class="text-danger"></span>
                </div>
            </div>
        </div>

        <!-- Giá cả -->
        <h3>Giá cả</h3>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="RentAmount">Giá thuê/tháng (₫) <span class="text-danger">*</span></label>
                    <input asp-for="RentAmount" type="number" step="100000" min="100000" class="form-control" placeholder="5000000" />
                    <span asp-validation-for="RentAmount" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="DepositAmount">Tiền cọc (₫)</label>
                    <input asp-for="DepositAmount" type="number" step="100000" min="0" class="form-control" placeholder="10000000" />
                    <span asp-validation-for="DepositAmount" class="text-danger"></span>
                </div>
            </div>
        </div>

        <!-- Mô tả & Tiện ích -->
        <h3>Mô tả & Tiện ích</h3>
        <div class="row">
            <div class="col-md-8">
                <div class="form-group">
                    <label asp-for="Description">Mô tả chi tiết</label>
                    <textarea asp-for="Description" rows="5" class="form-control"
                              placeholder="Mô tả chi tiết về căn hộ, vị trí thuận lợi, tiện ích xung quanh..."></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label>Tiện nghi</label>
                    <div class="form-check">
                        <input asp-for="IsFurnished" class="form-check-input" type="checkbox">
                        <label class="form-check-label" asp-for="IsFurnished">Nội thất đầy đủ</label>
                    </div>
                    <div class="form-check">
                        <input asp-for="PetsAllowed" class="form-check-input" type="checkbox">
                        <label class="form-check-label" asp-for="PetsAllowed">Cho phép nuôi thú cưng</label>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="AvailableFrom">Có sẵn từ ngày</label>
                    <input asp-for="AvailableFrom" type="date" class="form-control" />
                    <span asp-validation-for="AvailableFrom" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Amenities">Tiện ích</label>
                    <textarea asp-for="Amenities" rows="3" class="form-control"
                              placeholder="VD: Hồ bơi, Gym, Parking, Security 24/7"></textarea>
                    <small class="form-text text-muted">Phân cách bằng dấu phẩy</small>
                    <span asp-validation-for="Amenities" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="UtilitiesIncluded">Tiện ích đi kèm</label>
                    <textarea asp-for="UtilitiesIncluded" rows="3" class="form-control"
                              placeholder="VD: Điện, Nước, Internet, Cable TV"></textarea>
                    <small class="form-text text-muted">Phân cách bằng dấu phẩy</small>
                    <span asp-validation-for="UtilitiesIncluded" class="text-danger"></span>
                </div>
            </div>
        </div>

        <!-- Buttons -->
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Tạo BDS mới</button>
            <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Set default date to today
        document.addEventListener('DOMContentLoaded', function() {
            const dateInput = document.getElementById('AvailableFrom');
            if (dateInput && !dateInput.value) {
                const today = new Date().toISOString().split('T')[0];
                dateInput.value = today;
            }
        });

        // Form validation on submit
        document.querySelector('form')?.addEventListener('submit', function(e) {
            let valid = true;
            const requiredFields = this.querySelectorAll('[required], input[type="number"][min]');

            requiredFields.forEach(field => {
                if (!field.value || (field.type === 'number' && parseFloat(field.value) < parseFloat(field.min))) {
                    field.classList.add('is-invalid');
                    valid = false;
                } else {
                    field.classList.remove('is-invalid');
                    field.classList.add('is-valid');
                }
            });

            if (!valid) {
                e.preventDefault();
                alert('Vui lòng điền đầy đủ thông tin bắt buộc!');
            }
        });

        // Number formatting for currency fields
        ['RentAmount', 'DepositAmount'].forEach(id => {
            const input = document.getElementById(id);
            if (input) {
                input.addEventListener('blur', function() {
                    if (this.value) {
                        const value = parseFloat(this.value);
                        if (!isNaN(value)) {
                            this.value = Math.round(value);
                        }
                    }
                });
            }
        });
    </script>
}
