@model PropertyManagementSystem.Web.ViewModels.Property.CreatePropertyViewModel

@{
    ViewData["Title"] = "Tạo bất động sản mới";
    var propertyTypes = ViewBag.PropertyTypes as List<SelectListItem> ?? new List<SelectListItem>();
}

<div class="container-fluid py-5 bg-gradient-light min-vh-100">
    <div class="row justify-content-center">
        <div class="col-xl-10 col-xxl-9">
            <!-- Hero Header -->
            <div class="text-center mb-5">
                <div class="display-4 mb-4 text-primary">
                    <i class="fas fa-building fa-2x me-3"></i>
                    Thêm BDS mới
                </div>
                <p class="lead text-muted mb-0">Tạo listing chuyên nghiệp để cho thuê nhanh chóng</p>
            </div>

            <!-- Main Form Card -->
            <div class="card shadow-lg border-0 overflow-hidden">
                <div class="card-header bg-primary text-white py-4 px-5">
                    <h2 class="mb-0 fw-bold">
                        <i class="fas fa-cog me-3"></i>Thông tin chi tiết
                    </h2>
                </div>
                <div class="card-body p-5">
                    <form asp-action="Create" method="post" enctype="multipart/form-data">

                        <!-- Section 1: Basic Info -->
                        <div class="row g-4 mb-5">
                            <div class="col-lg-8">
                                <label asp-for="Name" class="form-label fw-bold fs-5"></label>
                                <input asp-for="Name" class="form-control form-control-lg shadow-sm"
                                       placeholder="VD: Căn hộ 2PN cao cấp Quận 7" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Section 2: Location -->
                        <div class="row g-4 mb-5">
                            <div class="col-lg-6">
                                <label asp-for="Address" class="form-label fw-bold fs-5"></label>
                                <input asp-for="Address" class="form-control form-control-lg shadow-sm"
                                       placeholder="123 Đường ABC, Phường XYZ" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                            <div class="col-lg-3">
                                <label asp-for="City" class="form-label fw-bold"></label>
                                <input asp-for="City" class="form-control form-control-lg shadow-sm"
                                       placeholder="Quận 7" />
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>
                            <div class="col-lg-3">
                                <label asp-for="ZipCode" class="form-label fw-bold"></label>
                                <input asp-for="ZipCode" class="form-control form-control-lg shadow-sm"
                                       placeholder="70000" />
                                <span asp-validation-for="ZipCode" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Section 3: Property Specs -->
                        <div class="row g-4 mb-5">
                            <div class="col-md-3">
                                <label asp-for="PropertyType" class="form-label fw-bold"></label>
                                <select asp-for="PropertyType" class="form-select form-select-lg shadow-sm">
                                    @foreach (var type in Model.PropertyTypes ?? new())
                                    {
                                        <option value="@type.Value">@type.Text</option>
                                    }
                                </select>
                                <span asp-validation-for="PropertyType" class="text-danger"></span>
                            </div>
                            <div class="col-md-2">
                                <label asp-for="Bedrooms" class="form-label fw-bold text-center d-block">Phòng ngủ</label>
                                <input asp-for="Bedrooms" type="number" min="0" max="20"
                                       class="form-control form-control-lg shadow-sm text-center fs-4" />
                                <span asp-validation-for="Bedrooms" class="text-danger text-center d-block"></span>
                            </div>
                            <div class="col-md-2">
                                <label asp-for="Bathrooms" class="form-label fw-bold text-center d-block">Phòng tắm</label>
                                <input asp-for="Bathrooms" type="number" min="0" max="10"
                                       class="form-control form-control-lg shadow-sm text-center fs-4" />
                                <span asp-validation-for="Bathrooms" class="text-danger text-center d-block"></span>
                            </div>
                            <div class="col-md-5">
                                <label asp-for="SquareFeet" class="form-label fw-bold"></label>
                                <div class="input-group input-group-lg">
                                    <input asp-for="SquareFeet" type="number" step="0.1" min="1"
                                           class="form-control shadow-sm text-end fs-5" />
                                    <span class="input-group-text bg-white border-start-0 fs-5">ft²</span>
                                </div>
                                <span asp-validation-for="SquareFeet" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Section 4: Pricing -->
                        <div class="row g-4 mb-5 p-4 bg-light rounded-3">
                            <div class="col-md-6">
                                <label asp-for="RentAmount" class="form-label fw-bold fs-5"></label>
                                <div class="input-group input-group-lg">
                                    <span class="input-group-text bg-white fs-5">$</span>
                                    <input asp-for="RentAmount" type="number" step="0.01" min="100"
                                           class="form-control shadow-sm text-end fs-5" />
                                    <span class="input-group-text bg-white fs-5">/tháng</span>
                                </div>
                                <span asp-validation-for="RentAmount" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="DepositAmount" class="form-label fw-bold fs-5"></label>
                                <div class="input-group input-group-lg">
                                    <span class="input-group-text bg-white fs-5">$</span>
                                    <input asp-for="DepositAmount" type="number" step="0.01" min="0"
                                           class="form-control shadow-sm text-end fs-5" />
                                    <span class="input-group-text bg-white fs-5">/tháng (Optional)</span>
                                </div>
                                <span asp-validation-for="DepositAmount" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Section 5: Description & Features -->
                        <div class="row g-4 mb-5">
                            <div class="col-lg-8">
                                <label asp-for="Description" class="form-label fw-bold fs-5"></label>
                                <textarea asp-for="Description" rows="4"
                                          class="form-control shadow-sm fs-6"
                                          placeholder="Mô tả chi tiết về căn hộ, vị trí thuận lợi, tiện ích xung quanh..."></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="col-lg-4">
                                <!-- Features -->
                                <div class="row g-3">
                                    <div class="col-6">
                                        <div class="form-check form-switch">
                                            <input asp-for="IsFurnished" class="form-check-input" type="checkbox" id="IsFurnished">
                                            <label class="form-check-label fw-bold" for="IsFurnished">
                                                Nội thất full
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-check form-switch">
                                            <input asp-for="PetsAllowed" class="form-check-input" type="checkbox" id="PetsAllowed">
                                            <label class="form-check-label fw-bold" for="PetsAllowed">
                                                Cho phép pet
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <label asp-for="AvailableFrom" class="form-label fw-bold"></label>
                                        <input asp-for="AvailableFrom" type="date"
                                               class="form-control form-control-lg shadow-sm" />
                                        <span asp-validation-for="AvailableFrom" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-grid gap-3 d-md-flex justify-content-between">
                            <button type="submit" class="btn btn-success btn-lg px-5 py-3 shadow-lg flex-fill me-md-3">
                                <i class="fas fa-plus-circle me-2"></i>
                                <span class="fs-5 fw-bold">Tạo BDS mới</span>
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-5 py-3 shadow flex-fill">
                                <i class="fas fa-arrow-left me-2"></i>
                                <span class="fs-5">Danh sách BDS</span>
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Currency formatting
        ['RentAmount', 'DepositAmount'].forEach(id => {
            const input = document.getElementById(id);
            input?.addEventListener('input', function() {
                this.value = parseFloat(this.value) || 0;
            });
        });

        // Form validation
        document.querySelector('form')?.addEventListener('submit', function(e) {
            let valid = true;
            document.querySelectorAll('[required]').forEach(field => {
                if (!field.value.trim()) {
                    field.classList.add('is-invalid');
                    valid = false;
                } else {
                    field.classList.remove('is-invalid');
                    field.classList.add('is-valid');
                }
            });
            if (!valid) e.preventDefault();
        });
    </script>
}
