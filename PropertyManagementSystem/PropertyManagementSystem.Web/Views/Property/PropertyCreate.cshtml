@model PropertyManagementSystem.Web.ViewModels.Property.CreatePropertyViewModel

@{
    ViewData["Title"] = "Tạo bất động sản mới";
    Layout = "_AuthLayout";
}

<div class="create-property-container">
    <!-- Page Header -->
    <div class="page-header">
        <div class="header-content">
            <h1 class="page-title">
                <i class="bi bi-plus-circle"></i>
                Tạo bất động sản mới
            </h1>
            <p class="page-subtitle">Điền thông tin chi tiết về bất động sản của bạn</p>
        </div>
        <a asp-action="Index" class="btn-back">
            <i class="bi bi-arrow-left"></i>
            Quay lại
        </a>
    </div>

    <!-- Form -->
    <form asp-action="Create" method="post" enctype="multipart/form-data" class="property-form">
        <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

        <!-- Section 1: Basic Info -->
        <div class="form-section">
            <div class="section-title">
                <h3>Thông tin cơ bản</h3>
                <span class="section-badge">Bước 1/4</span>
            </div>
            <div class="form-card">
                <div class="form-group">
                    <label asp-for="Name" class="form-label">
                        Tên bất động sản
                        <span class="required">*</span>
                    </label>
                    <input asp-for="Name" class="form-input" placeholder="VD: Căn hộ 2PN cao cấp Quận 7" />
                    <span asp-validation-for="Name" class="form-error"></span>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="PropertyType" class="form-label">
                            Loại bất động sản
                            <span class="required">*</span>
                        </label>
                        <select asp-for="PropertyType" class="form-select">
                            <option value="">-- Chọn loại --</option>
                            @foreach (var type in Model.PropertyTypes ?? new())
                            {
                                <option value="@type.Value">@type.Text</option>
                            }
                        </select>
                        <span asp-validation-for="PropertyType" class="form-error"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="AvailableFrom" class="form-label">Có sẵn từ ngày</label>
                        <input asp-for="AvailableFrom" type="date" class="form-input" />
                        <span asp-validation-for="AvailableFrom" class="form-error"></span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Section 2: Location -->
        <div class="form-section">
            <div class="section-title">
                <h3>Địa chỉ</h3>
                <span class="section-badge">Bước 2/4</span>
            </div>
            <div class="form-card">
                <div class="form-group">
                    <label asp-for="Address" class="form-label">
                        Địa chỉ chi tiết
                        <span class="required">*</span>
                    </label>
                    <input asp-for="Address" class="form-input" placeholder="123 Đường ABC, Phường XYZ" />
                    <span asp-validation-for="Address" class="form-error"></span>
                </div>

                <div class="form-row-3">
                    <div class="form-group">
                        <label asp-for="City" class="form-label">Thành phố</label>
                        <input asp-for="City" class="form-input" placeholder="TP Hồ Chí Minh" />
                        <span asp-validation-for="City" class="form-error"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="District" class="form-label">Quận / Huyện</label>
                        <input asp-for="District" class="form-input" placeholder="Quận 7" />
                        <span asp-validation-for="District" class="form-error"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ZipCode" class="form-label">Mã bưu điện</label>
                        <input asp-for="ZipCode" class="form-input" placeholder="70000" />
                        <span asp-validation-for="ZipCode" class="form-error"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="Latitude" class="form-label">
                            Latitude
                            <span class="tooltip-icon" title="Tọa độ vĩ độ">
                                <i class="bi bi-info-circle"></i>
                            </span>
                        </label>
                        <input asp-for="Latitude" type="number" step="0.000001" class="form-input" placeholder="10.762622" />
                        <span asp-validation-for="Latitude" class="form-error"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Longitude" class="form-label">
                            Longitude
                            <span class="tooltip-icon" title="Tọa độ kinh độ">
                                <i class="bi bi-info-circle"></i>
                            </span>
                        </label>
                        <input asp-for="Longitude" type="number" step="0.000001" class="form-input" placeholder="106.660172" />
                        <span asp-validation-for="Longitude" class="form-error"></span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Section 3: Details & Pricing -->
        <div class="form-section">
            <div class="section-title">
                <h3>Thông số & Giá cả</h3>
                <span class="section-badge">Bước 3/4</span>
            </div>
            <div class="form-card">
                <div class="form-row-4">
                    <div class="form-group">
                        <label asp-for="Bedrooms" class="form-label">
                            Phòng ngủ
                            <span class="required">*</span>
                        </label>
                        <div class="input-with-icon">
                            <i class="bi bi-door-closed"></i>
                            <input asp-for="Bedrooms" type="number" min="0" max="20" class="form-input" placeholder="2" />
                        </div>
                        <span asp-validation-for="Bedrooms" class="form-error"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Bathrooms" class="form-label">
                            Phòng tắm
                            <span class="required">*</span>
                        </label>
                        <div class="input-with-icon">
                            <i class="bi bi-droplet"></i>
                            <input asp-for="Bathrooms" type="number" min="0" max="10" class="form-input" placeholder="2" />
                        </div>
                        <span asp-validation-for="Bathrooms" class="form-error"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SquareFeet" class="form-label">
                            Diện tích (ft²)
                            <span class="required">*</span>
                        </label>
                        <div class="input-with-icon">
                            <i class="bi bi-rulers"></i>
                            <input asp-for="SquareFeet" type="number" step="0.01" min="1" class="form-input" placeholder="850" />
                        </div>
                        <span asp-validation-for="SquareFeet" class="form-error"></span>
                    </div>
                </div>

                <div class="divider"></div>

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="RentAmount" class="form-label">
                            Giá thuê/tháng (₫)
                            <span class="required">*</span>
                        </label>
                        <div class="input-with-icon">
                            <i class="bi bi-currency-dollar"></i>
                            <input asp-for="RentAmount" type="number" step="100000" min="100000" class="form-input" placeholder="5,000,000" />
                        </div>
                        <span asp-validation-for="RentAmount" class="form-error"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DepositAmount" class="form-label">Tiền cọc (₫)</label>
                        <div class="input-with-icon">
                            <i class="bi bi-piggy-bank"></i>
                            <input asp-for="DepositAmount" type="number" step="100000" min="0" class="form-input" placeholder="10,000,000" />
                        </div>
                        <span asp-validation-for="DepositAmount" class="form-error"></span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Section 4: Description & Amenities -->
        <div class="form-section">
            <div class="section-title">
                <h3>Mô tả & Tiện ích</h3>
                <span class="section-badge">Bước 4/4</span>
            </div>
            <div class="form-card">
                <div class="form-group">
                    <label asp-for="Description" class="form-label">Mô tả chi tiết</label>
                    <textarea asp-for="Description" rows="5" class="form-textarea"
                              placeholder="Mô tả chi tiết về căn hộ, vị trí thuận lợi, tiện ích xung quanh..."></textarea>
                    <span asp-validation-for="Description" class="form-error"></span>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="Amenities" class="form-label">Tiện ích</label>
                        <textarea asp-for="Amenities" rows="3" class="form-textarea"
                                  placeholder="VD: Hồ bơi, Gym, Parking, Security 24/7"></textarea>
                        <small class="form-hint">Phân cách bằng dấu phẩy</small>
                        <span asp-validation-for="Amenities" class="form-error"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UtilitiesIncluded" class="form-label">Tiện ích đi kèm</label>
                        <textarea asp-for="UtilitiesIncluded" rows="3" class="form-textarea"
                                  placeholder="VD: Điện, Nước, Internet, Cable TV"></textarea>
                        <small class="form-hint">Phân cách bằng dấu phẩy</small>
                        <span asp-validation-for="UtilitiesIncluded" class="form-error"></span>
                    </div>
                </div>

                <div class="checkbox-group">
                    <label class="checkbox-label">
                        <input asp-for="IsFurnished" type="checkbox" class="checkbox-input">
                        <span class="checkbox-text">
                            <i class="bi bi-check-circle"></i>
                            Nội thất đầy đủ
                        </span>
                    </label>
                    <label class="checkbox-label">
                        <input asp-for="PetsAllowed" type="checkbox" class="checkbox-input">
                        <span class="checkbox-text">
                            <i class="bi bi-check-circle"></i>
                            Cho phép nuôi thú cưng
                        </span>
                    </label>
                </div>
            </div>
        </div>

        <!-- Form Actions -->
        <div class="form-actions">
            <button type="submit" class="btn-submit">
                <i class="bi bi-check-lg"></i>
                Tạo bất động sản
            </button>
            <a asp-action="Index" class="btn-cancel">
                Hủy bỏ
            </a>
        </div>
    </form>
</div>

@section Styles {
    <style>
        .create-property-container {
            padding: 30px;
            max-width: 1200px;
            margin: 0 auto;
        }

        /* Page Header */
        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 32px;
        }

        .page-title {
            font-size: 28px;
            font-weight: 700;
            color: #1e293b;
            margin: 0 0 8px 0;
            display: flex;
            align-items: center;
            gap: 12px;
        }

            .page-title i {
                color: #3b82f6;
            }

        .page-subtitle {
            font-size: 14px;
            color: #64748b;
            margin: 0;
        }

        .btn-back {
            display: flex;
            align-items: center;
            gap: 8px;
            padding: 10px 20px;
            background: #f1f5f9;
            border: none;
            border-radius: 8px;
            font-size: 14px;
            font-weight: 500;
            color: #475569;
            text-decoration: none;
            transition: all 0.2s;
        }

            .btn-back:hover {
                background: #e2e8f0;
                color: #1e293b;
            }

        /* Form Sections */
        .form-section {
            margin-bottom: 32px;
        }

        .section-title {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 16px;
        }

            .section-title h3 {
                font-size: 18px;
                font-weight: 600;
                color: #1e293b;
                margin: 0;
            }

        .section-badge {
            font-size: 12px;
            font-weight: 500;
            color: #64748b;
            background: #f1f5f9;
            padding: 4px 12px;
            border-radius: 12px;
        }

        .form-card {
            background: white;
            border: 1px solid #e2e8f0;
            border-radius: 12px;
            padding: 24px;
        }

        /* Form Groups */
        .form-group {
            margin-bottom: 20px;
        }

        .form-label {
            display: block;
            font-size: 14px;
            font-weight: 500;
            color: #334155;
            margin-bottom: 8px;
        }

        .required {
            color: #ef4444;
        }

        .tooltip-icon {
            color: #94a3b8;
            cursor: help;
            margin-left: 4px;
        }

        .form-input,
        .form-select,
        .form-textarea {
            width: 100%;
            padding: 12px 16px;
            font-size: 14px;
            color: #1e293b;
            background: white;
            border: 1px solid #cbd5e1;
            border-radius: 8px;
            transition: all 0.2s;
        }

            .form-input:focus,
            .form-select:focus,
            .form-textarea:focus {
                outline: none;
                border-color: #3b82f6;
                box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
            }

            .form-input::placeholder,
            .form-textarea::placeholder {
                color: #94a3b8;
            }

        .input-with-icon {
            position: relative;
        }

            .input-with-icon i {
                position: absolute;
                left: 16px;
                top: 50%;
                transform: translateY(-50%);
                color: #94a3b8;
                font-size: 16px;
            }

            .input-with-icon .form-input {
                padding-left: 44px;
            }

        .form-hint {
            display: block;
            font-size: 12px;
            color: #64748b;
            margin-top: 6px;
        }

        .form-error {
            display: block;
            font-size: 12px;
            color: #ef4444;
            margin-top: 6px;
        }

        /* Form Rows */
        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
        }

        .form-row-3 {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 20px;
        }

        .form-row-4 {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 20px;
        }

        /* Checkbox Group */
        .checkbox-group {
            display: flex;
            gap: 24px;
            flex-wrap: wrap;
            margin-top: 20px;
        }

        .checkbox-label {
            display: flex;
            align-items: center;
            cursor: pointer;
        }

        .checkbox-input {
            display: none;
        }

        .checkbox-text {
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: 14px;
            font-weight: 500;
            color: #64748b;
            padding: 10px 16px;
            background: #f8fafc;
            border: 2px solid #e2e8f0;
            border-radius: 8px;
            transition: all 0.2s;
        }

            .checkbox-text i {
                color: #cbd5e1;
                transition: color 0.2s;
            }

        .checkbox-input:checked + .checkbox-text {
            background: #eff6ff;
            border-color: #3b82f6;
            color: #1e293b;
        }

            .checkbox-input:checked + .checkbox-text i {
                color: #3b82f6;
            }

        /* Divider */
        .divider {
            height: 1px;
            background: #e2e8f0;
            margin: 24px 0;
        }

        /* Form Actions */
        .form-actions {
            display: flex;
            gap: 16px;
            justify-content: flex-end;
            padding: 24px;
            background: white;
            border: 1px solid #e2e8f0;
            border-radius: 12px;
            position: sticky;
            bottom: 20px;
        }

        .btn-submit {
            display: flex;
            align-items: center;
            gap: 8px;
            padding: 12px 32px;
            background: #3b82f6;
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s;
        }

            .btn-submit:hover {
                background: #2563eb;
                transform: translateY(-1px);
                box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
            }

        .btn-cancel {
            padding: 12px 24px;
            background: transparent;
            color: #64748b;
            border: none;
            border-radius: 8px;
            font-size: 14px;
            font-weight: 500;
            cursor: pointer;
            text-decoration: none;
            transition: all 0.2s;
        }

            .btn-cancel:hover {
                background: #f1f5f9;
                color: #334155;
            }

        .validation-summary {
            background: #fef2f2;
            border: 1px solid #fecaca;
            border-radius: 8px;
            padding: 16px;
            margin-bottom: 24px;
            color: #991b1b;
            font-size: 14px;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .create-property-container {
                padding: 20px;
            }

            .page-header {
                flex-direction: column;
                align-items: flex-start;
                gap: 16px;
            }

            .form-row,
            .form-row-3,
            .form-row-4 {
                grid-template-columns: 1fr;
            }

            .form-actions {
                flex-direction: column-reverse;
            }

            .btn-submit,
            .btn-cancel {
                width: 100%;
                justify-content: center;
            }
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Set default date to today
        document.addEventListener('DOMContentLoaded', function() {
            const dateInput = document.querySelector('input[type="date"]');
            if (dateInput && !dateInput.value) {
                dateInput.value = new Date().toISOString().split('T')[0];
            }
        });
    </script>
}
