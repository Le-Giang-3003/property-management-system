@model PropertyManagementSystem.Web.ViewModels.CreatePropertyViewModel

@{
    ViewData["Title"] = "Create Property";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h3 class="mb-0"><i class="bi bi-plus-circle"></i> Create New Property</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Basic Information -->
                        <h5 class="border-bottom pb-2 mb-3">Basic Information</h5>

                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label asp-for="Title" class="form-label">Property Title <span class="text-danger">*</span></label>
                                <input asp-for="Title" class="form-control" placeholder="e.g., Modern 2BR Apartment in District 1" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label asp-for="Description" class="form-label">Description <span class="text-danger">*</span></label>
                                <textarea asp-for="Description" class="form-control" rows="4"
                                          placeholder="Describe the property features, amenities, nearby facilities..."></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="PropertyType" class="form-label">Property Type <span class="text-danger">*</span></label>
                                <select asp-for="PropertyType" asp-items="Model.PropertyTypes" class="form-select">
                                </select>
                                <span asp-validation-for="PropertyType" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="LandlordId" class="form-label">Landlord <span class="text-danger">*</span></label>
                                <select asp-for="LandlordId" asp-items="Model.AvailableLandlords" class="form-select">
                                    <option value="">-- Select Landlord --</option>
                                </select>
                                <span asp-validation-for="LandlordId" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Location -->
                        <h5 class="border-bottom pb-2 mb-3 mt-4">Location</h5>

                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label asp-for="Address" class="form-label">Address <span class="text-danger">*</span></label>
                                <input asp-for="Address" class="form-control" placeholder="e.g., 123 Nguyen Hue Street" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="City" class="form-label">City <span class="text-danger">*</span></label>
                                <input asp-for="City" class="form-control" placeholder="e.g., Ho Chi Minh City" />
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="District" class="form-label">District</label>
                                <input asp-for="District" class="form-control" placeholder="e.g., District 1" />
                                <span asp-validation-for="District" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Property Details -->
                        <h5 class="border-bottom pb-2 mb-3 mt-4">Property Details</h5>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="BaseRentPrice" class="form-label">Monthly Rent (VND) <span class="text-danger">*</span></label>
                                <input asp-for="BaseRentPrice" class="form-control" type="number" step="100000"
                                       placeholder="e.g., 10000000" />
                                <span asp-validation-for="BaseRentPrice" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Area" class="form-label">Area (m²)</label>
                                <input asp-for="Area" class="form-control" type="number" step="0.01"
                                       placeholder="e.g., 75.5" />
                                <span asp-validation-for="Area" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Buttons -->
                        <div class="mt-4 d-flex gap-2">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle"></i> Create Property
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
}
