@model List<PropertyManagementSystem.DAL.Entities.PropertyImage>

@{
    ViewData["Title"] = "Manage Images";
    Layout = "_AuthLayout";
    ViewData["PortalMode"] = "Landlord";
    var property = ViewBag.Property as PropertyManagementSystem.DAL.Entities.Property;
    var propertyId = ViewBag.PropertyId as int?;
}

<div class="manage-images-container">
    <!-- Header -->
    <div class="page-header">
        <div class="header-content">
            <h1 class="page-title">
                <i class="bi bi-images"></i>
                Quản lý hình ảnh
            </h1>
            <div class="property-info">
                <strong>@property.Name</strong>
                <span>@property.City</span>
            </div>
        </div>
        <div class="header-actions">
            <button type="button" class="btn-upload" data-bs-toggle="modal" data-bs-target="#uploadModal">
                <i class="bi bi-cloud-upload"></i>
                Upload ảnh mới
            </button>
            <a asp-action="Edit" asp-route-id="@propertyId" class="btn-back">
                <i class="bi bi-arrow-left"></i>
                Quay lại
            </a>
        </div>
    </div>

    <!-- Statistics -->
    <div class="stats-bar">
        <div class="stat-item">
            <i class="bi bi-images"></i>
            <span>Tổng: <strong>@Model.Count</strong> ảnh</span>
        </div>
        <div class="stat-item">
            <i class="bi bi-star-fill"></i>
            <span>Thumbnail: <strong>@Model.Count(i => i.IsThumbnail)</strong></span>
        </div>
        <div class="stat-item">
            <i class="bi bi-calendar"></i>
            <span>Cập nhật: <strong>@(Model.Any() ? Model.Max(i => i.UploadedAt).ToString("dd/MM/yyyy") : "N/A")</strong></span>
        </div>
    </div>

    <!-- Images Grid -->
    @if (Model.Any())
    {
        <div class="images-management-grid" id="imagesGrid">
            @foreach (var image in Model.OrderByDescending(i => i.IsThumbnail).ThenBy(i => i.DisplayOrder))
            {
                <div class="image-card" data-image-id="@image.ImageId" draggable="true">
                    <div class="image-preview">
                        <img src="@image.ImageUrl" alt="@image.Caption" loading="lazy">
                        @if (image.IsThumbnail)
                        {
                            <div class="thumbnail-badge">
                                <i class="bi bi-star-fill"></i>
                                <span>Ảnh đại diện</span>
                            </div>
                        }
                        <div class="image-overlay">
                            <button type="button" class="btn-overlay view"
                                    onclick="viewImage('@image.ImageUrl', '@(image.Caption ?? "Image")')"
                                    title="Xem">
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>
                    </div>

                    <div class="image-info">
                        <div class="image-details">
                            <span class="display-order">
                                <i class="bi bi-hash"></i>
                                Thứ tự: @image.DisplayOrder
                            </span>
                            <div class="caption-wrapper">
                                @if (string.IsNullOrEmpty(image.Caption))
                                {
                                    <span class="no-caption">Chưa có caption</span>
                                }
                                else
                                {
                                    <span class="caption">@image.Caption</span>
                                }
                            </div>
                            <span class="upload-date">
                                <i class="bi bi-calendar"></i>
                                @image.UploadedAt.ToString("dd/MM/yyyy HH:mm")
                            </span>
                        </div>

                        <div class="image-actions">
                            @if (!image.IsThumbnail)
                            {
                                <button type="button" class="btn-action star"
                                        onclick="setThumbnail(@image.ImageId)"
                                        title="Đặt làm ảnh đại diện">
                                    <i class="bi bi-star"></i>
                                </button>
                            }
                            else
                            {
                                <button type="button" class="btn-action star active" disabled title="Đang là ảnh đại diện">
                                    <i class="bi bi-star-fill"></i>
                                </button>
                            }
                            <button type="button" class="btn-action edit"
                                    onclick="editCaption(@image.ImageId, '@(image.Caption ?? "")')"
                                    title="Sửa caption">
                                <i class="bi bi-pencil"></i>
                            </button>
                            <button type="button" class="btn-action delete"
                                    onclick="deleteImage(@image.ImageId, '@(image.Caption ?? "Ảnh")')"
                                    title="Xóa">
                                <i class="bi bi-trash3"></i>
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <i class="bi bi-images"></i>
            <h3>Chưa có hình ảnh nào</h3>
            <p>Upload ảnh đầu tiên cho bất động sản này</p>
            <button type="button" class="btn-upload-large" data-bs-toggle="modal" data-bs-target="#uploadModal">
                <i class="bi bi-cloud-upload"></i>
                Upload ảnh ngay
            </button>
        </div>
    }
</div>

<!-- Upload Modal -->
<div class="modal fade" id="uploadModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5><i class="bi bi-cloud-upload"></i> Upload hình ảnh</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="uploadForm" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <input type="hidden" name="propertyId" value="@propertyId" />

                <div class="modal-body">
                    <div class="upload-area">
                        <input type="file" name="files" id="fileInput"
                               accept="image/*" multiple required style="display: none;" />

                        <div class="drop-zone" id="dropZone">
                            <div class="drop-zone-content">
                                <i class="bi bi-cloud-upload"></i>
                                <h4>Kéo thả ảnh vào đây</h4>
                                <p>hoặc click để chọn file</p>
                                <button type="button" class="btn-choose" onclick="document.getElementById('fileInput').click()">
                                    <i class="bi bi-folder2-open"></i>
                                    Chọn file
                                </button>
                                <small>JPG, PNG, WEBP • Tối đa 5MB/file • Chọn nhiều ảnh cùng lúc</small>
                            </div>
                        </div>
                    </div>

                    <!-- Preview Container -->
                    <div id="imagePreview" class="preview-container"></div>

                    <!-- Upload Progress -->
                    <div id="uploadProgress" class="upload-progress" style="display: none;">
                        <div class="progress-bar">
                            <div class="progress-fill" id="progressFill"></div>
                        </div>
                        <span class="progress-text" id="progressText">0%</span>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary" id="uploadBtn">
                        <i class="bi bi-upload"></i> Upload
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- View Image Modal -->
<div class="modal fade" id="viewImageModal" tabindex="-1">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="viewImageTitle"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-0">
                <img id="viewImageImg" src="" class="w-100" alt="">
            </div>
        </div>
    </div>
</div>

<!-- Edit Caption Modal -->
<div class="modal fade" id="editCaptionModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5><i class="bi bi-pencil"></i> Sửa caption</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="editImageId">
                <div class="form-group">
                    <label for="captionInput">Caption</label>
                    <textarea id="captionInput" class="form-control" rows="3"
                              placeholder="Nhập mô tả cho ảnh..."></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary" id="saveCaptionBtn">
                    <i class="bi bi-check2"></i> Lưu
                </button>
            </div>
        </div>
    </div>
</div>

