@using System.Security.Claims
@model IEnumerable<PropertyManagementSystem.DAL.Entities.Property>

@{
    ViewData["Title"] = "Quản lý bất động sản";
    Layout = "_AuthLayout";
    var city = ViewBag.City as string ?? "";
    var propertyType = ViewBag.PropertyType as string ?? "";
    var minRent = ViewBag.MinRent as decimal?;
    var maxRent = ViewBag.MaxRent as decimal?;
    var propertyTypes = ViewBag.PropertyTypes as List<SelectListItem> ?? new();
    var hasFilters = !string.IsNullOrEmpty(city) || !string.IsNullOrEmpty(propertyType) || minRent.HasValue || maxRent.HasValue;
    var favoritePropertyIds = ViewBag.FavoritePropertyIds as HashSet<int> ?? new HashSet<int>();

    var currentUserId = 0;
    if (User.Identity?.IsAuthenticated == true)
    {
        currentUserId = int.Parse(User.FindFirst(ClaimTypes.NameIdentifier)?.Value ?? "0");
    }
}

<div class="properties-container">
    <!-- Page Header -->
    <div class="page-header">
        <div class="header-content">
            <h1 class="page-title">
                <i class="bi bi-buildings"></i>
                Danh sách bất động sản
            </h1>
            <p class="page-subtitle">
                @if (Model.Any())
                {
                    if (hasFilters)
                    {
                        <span>Tìm thấy <strong>@Model.Count()</strong> kết quả</span>
                    }
                }
                else
                {
                    <span>Chưa có bất động sản nào</span>
                }
            </p>
        </div>
        <div class="header-actions">
            @if (User.Identity?.IsAuthenticated == true)
            {
                <a asp-action="Create" class="btn-create">
                    <i class="bi bi-plus-lg"></i>
                    Đăng tin cho thuê
                </a>
            }
        </div>
    </div>

    <!-- Filter Section -->
    <div class="filter-section">
        <div class="filter-header">
            <h3>
                <i class="bi bi-funnel"></i>
                Tìm kiếm & Lọc
            </h3>
            @if (hasFilters)
            {
                <a asp-action="Index" class="btn-clear-filter">
                    <i class="bi bi-x-circle"></i>
                    Xóa bộ lọc
                </a>
            }
        </div>
        <form asp-action="Index" method="get" class="filter-form">
            <div class="filter-grid">
                <div class="filter-group">
                    <label>
                        <i class="bi bi-geo-alt"></i>
                        Địa điểm
                    </label>
                    <input type="text" name="city" class="filter-input"
                           placeholder="VD: Quận 7, TP.HCM" value="@city" />
                </div>
                <div class="filter-group">
                    <label>
                        <i class="bi bi-house-door"></i>
                        Loại bất động sản
                    </label>
                    <select name="propertyType" class="filter-select">
                        <option value="">-- Tất cả --</option>
                        @foreach (var type in propertyTypes)
                        {
                            <option value="@type.Value" selected="@(type.Value == propertyType)">
                                @type.Text
                            </option>
                        }
                    </select>
                </div>
                <div class="filter-group">
                    <label>
                        <i class="bi bi-currency-dollar"></i>
                        Giá tối thiểu (₫)
                    </label>
                    <input type="number" name="minRent" class="filter-input"
                           placeholder="0" step="500000" min="0" value="@minRent" />
                </div>
                <div class="filter-group">
                    <label>
                        <i class="bi bi-currency-dollar"></i>
                        Giá tối đa (₫)
                    </label>
                    <input type="number" name="maxRent" class="filter-input"
                           placeholder="50,000,000" step="500000" min="0" value="@maxRent" />
                </div>
            </div>
            <div class="filter-actions">
                <button type="submit" class="btn-search">
                    <i class="bi bi-search"></i>
                    Tìm kiếm
                </button>
            </div>
        </form>
    </div>

    <!-- Statistics -->
    @if (Model.Any())
    {
        var availableCount = Model.Count(p => p.Status == "Available");
        var rentedCount = Model.Count(p => p.Status == "Rented");
        var maintenanceCount = Model.Count(p => p.Status == "Maintenance");
        var totalRevenue = Model.Sum(p => p.RentAmount);

        <div class="stats-grid">
            <div class="stat-card total">
                <div class="stat-icon">
                    <i class="bi bi-buildings"></i>
                </div>
                <div class="stat-content">
                    <h3>@Model.Count()</h3>
                    <p>Tổng bất động sản</p>
                </div>
            </div>
            <div class="stat-card available">
                <div class="stat-icon">
                    <i class="bi bi-check-circle"></i>
                </div>
                <div class="stat-content">
                    <h3>@availableCount</h3>
                    <p>Có sẵn</p>
                </div>
            </div>
            <div class="stat-card rented">
                <div class="stat-icon">
                    <i class="bi bi-key"></i>
                </div>
                <div class="stat-content">
                    <h3>@rentedCount</h3>
                    <p>Đã thuê</p>
                </div>
            </div>
            <div class="stat-card revenue">
                <div class="stat-icon">
                    <i class="bi bi-cash-stack"></i>
                </div>
                <div class="stat-content">
                    <h3>@totalRevenue.ToString("N0")</h3>
                    <p>VNĐ/tháng</p>
                </div>
            </div>
        </div>
    }

    <!-- Properties List -->
    <div class="properties-list">
        <div class="list-header">
            <h3>
                Danh sách bất động sản
                @if (hasFilters)
                {
                    <span class="result-badge">@Model.Count() kết quả</span>
                }
            </h3>
        </div>

        @if (Model != null && Model.Any())
        {
            <div class="properties-table-wrapper">
                <table class="properties-table">
                    <thead>
                        <tr>
                            <th class="col-favorite">
                                <i class="bi bi-heart"></i>
                            </th>
                            <th class="col-name">Tên & Địa chỉ</th>
                            <th class="col-type">Loại</th>
                            <th class="col-specs">Thông số</th>
                            <th class="col-price">Giá thuê</th>
                            <th class="col-status">Trạng thái</th>
                            <th class="col-landlord">Chủ nhà</th>
                            <th class="col-actions">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var isOwner = (item.LandlordId == currentUserId) || User.IsInRole("Admin");
                            var isFavorited = favoritePropertyIds.Contains(item.PropertyId);

                            <tr class="property-row">
                                <td class="col-favorite">
                                    @if (User.Identity?.IsAuthenticated == true)
                                    {
                                        <button type="button"
                                                class="btn-favorite @(isFavorited ? "active" : "")"
                                                data-property-id="@item.PropertyId">
                                            <i class="bi @(isFavorited ? "bi-heart-fill" : "bi-heart")"></i>
                                        </button>
                                    }
                                    else
                                    {
                                        <span class="favorite-disabled" title="Đăng nhập để yêu thích">
                                            <i class="bi bi-heart"></i>
                                        </span>
                                    }
                                </td>
                                <td class="col-name">
                                    <div class="property-info">
                                        <a asp-action="Details" asp-route-id="@item.PropertyId" class="property-link">
                                            @item.Name
                                        </a>
                                        <div class="property-address">
                                            <i class="bi bi-geo-alt"></i>
                                            @item.Address
                                            @if (!string.IsNullOrEmpty(item.City))
                                            {
                                                <span class="address-detail">
                                                    @(item.District != null ? $"{item.District}, " : "")@item.City
                                                </span>
                                            }
                                        </div>
                                        <div class="property-date">
                                            <i class="bi bi-calendar"></i>
                                            @item.CreatedAt.ToString("dd/MM/yyyy")
                                        </div>
                                    </div>
                                </td>
                                <td class="col-type">
                                    <span class="badge type">@item.PropertyType</span>
                                </td>
                                <td class="col-specs">
                                    <div class="specs-list">
                                        <div class="spec-item">
                                            <i class="bi bi-rulers"></i>
                                            <strong>@item.SquareFeet.ToString("N0")</strong> ft²
                                        </div>
                                        <div class="spec-item">
                                            <i class="bi bi-door-closed"></i>
                                            <strong>@item.Bedrooms</strong> PN
                                        </div>
                                        <div class="spec-item">
                                            <i class="bi bi-droplet"></i>
                                            <strong>@item.Bathrooms</strong> PT
                                        </div>
                                    </div>
                                </td>
                                <td class="col-price">
                                    <div class="price-info">
                                        <span class="price">@item.RentAmount.ToString("N0") ₫</span>
                                        <span class="period">/tháng</span>
                                        @if (item.DepositAmount.HasValue)
                                        {
                                            <span class="deposit">
                                                Cọc: @item.DepositAmount.Value.ToString("N0") ₫
                                            </span>
                                        }
                                    </div>
                                </td>
                                <td class="col-status">
                                    <span class="badge status @GetStatusClass(item.Status)">
                                        @GetStatusDisplay(item.Status)
                                    </span>
                                </td>
                                <td class="col-landlord">
                                    @if (item.Landlord != null)
                                    {
                                        <div class="landlord-info">
                                            <strong>@item.Landlord.FullName</strong>
                                            <span>@item.Landlord.Email</span>
                                        </div>
                                    }
                                </td>
                                <td class="col-actions">
                                    <div class="action-buttons">
                                        <a asp-action="Details" asp-route-id="@item.PropertyId"
                                           class="btn-action view" title="Xem chi tiết">
                                            <i class="bi bi-eye"></i>
                                        </a>

                                        @if (isOwner)
                                        {
                                            <a asp-action="Edit" asp-route-id="@item.PropertyId"
                                               class="btn-action edit" title="Chỉnh sửa">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.PropertyId"
                                               class="btn-action delete" title="Xóa">
                                                <i class="bi bi-trash3"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            @if (item.Status == "Available")
                                            {
                                                <button type="button"
                                                        class="btn-action rent"
                                                        data-property-id="@item.PropertyId"
                                                        title="Thuê ngay">
                                                    <i class="bi bi-key"></i>
                                                </button>
                                            }
                                            else
                                            {
                                                <button type="button" class="btn-action disabled" disabled title="Không khả dụng">
                                                    <i class="bi bi-ban"></i>
                                                </button>
                                            }
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="empty-state">
                <div class="empty-icon">
                    <i class="bi bi-house-slash"></i>
                </div>
                <h3>
                    @if (hasFilters)
                    {
                        <span>Không tìm thấy bất động sản phù hợp</span>
                    }
                    else
                    {
                        <span>Chưa có bất động sản nào</span>
                    }
                </h3>
                <p>
                    @if (hasFilters)
                    {
                        <span>Thử điều chỉnh bộ lọc hoặc </span>
                        <a asp-action="Index">xóa bộ lọc</a>
                    }
                    else
                    {
                        <span>Bắt đầu bằng cách đăng tin cho thuê</span>
                    }
                </p>
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <a asp-action="Create" class="btn-explore">
                        <i class="bi bi-plus-lg"></i>
                        Đăng tin cho thuê
                    </a>
                }
            </div>
        }
    </div>
</div>

@Html.AntiForgeryToken()

