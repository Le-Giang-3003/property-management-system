@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).ready(function() {
            // Toggle favorite
            $('.btn-favorite').on('click', function(e) {
                e.preventDefault();
                var btn = $(this);
                var propertyId = btn.data('property-id');
                var icon = btn.find('i');
                btn.prop('disabled', true);

                $.ajax({
                    url: '@Url.Action("ToggleFavorite", "Property")',
                    type: 'POST',
                    data: {
                        propertyId: propertyId,
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function(response) {
                        btn.prop('disabled', false);
                        if (response.success) {
                            if (response.isFavorited) {
                                btn.addClass('active');
                                icon.removeClass('bi-heart').addClass('bi-heart-fill');
                            } else {
                                btn.removeClass('active');
                                icon.removeClass('bi-heart-fill').addClass('bi-heart');
                            }
                            Swal.fire({
                                toast: true,
                                position: 'top-end',
                                icon: 'success',
                                title: response.message,
                                showConfirmButton: false,
                                timer: 2000,
                                timerProgressBar: true
                            });
                        } else {
                            Swal.fire('Lỗi', response.message, 'error');
                        }
                    },
                    error: function() {
                        btn.prop('disabled', false);
                        Swal.fire('Lỗi', 'Có lỗi xảy ra', 'error');
                    }
                });
            });

            // Rent now button
            $('.btn-action.rent').on('click', function() {
                var propertyId = $(this).data('property-id');

                Swal.fire({
                    icon: 'info',
                    title: 'Thuê ngay',
                    text: 'Chức năng thuê bất động sản đang được phát triển',
                    footer: `Property ID: ${propertyId}`,
                    confirmButtonText: 'OK'
                });
            });
        });

        // Success/Error messages
        @if (TempData["Success"] != null)
        {
                <text>
                Swal.fire({
                    icon: 'success',
                    title: 'Thành công!',
                    text: '@TempData["Success"]',
                    timer: 3000,
                    showConfirmButton: false,
                    toast: true,
                    position: 'top-end'
                });
                </text>
        }

        @if (TempData["Error"] != null)
        {
                <text>
                Swal.fire({
                    icon: 'error',
                    title: 'Lỗi!',
                    text: '@TempData["Error"]',
                    timer: 3000,
                    showConfirmButton: false,
                    toast: true,
                    position: 'top-end'
                });
                </text>
        }

        @if (TempData["Warning"] != null)
        {
                <text>
                Swal.fire({
                    icon: 'warning',
                    title: 'Cảnh báo!',
                    text: '@TempData["Warning"]',
                    timer: 3000,
                    showConfirmButton: false,
                    toast: true,
                    position: 'top-end'
                });
                </text>
        }
    </script>
}

