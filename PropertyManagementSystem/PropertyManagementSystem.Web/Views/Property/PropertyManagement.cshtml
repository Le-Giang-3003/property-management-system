                border-bottom: 1px solid #f1f5f9;
            }

        .property-row:hover {
            background: #f8fafc;
        }

        /* Columns */
        .col-favorite {
            width: 60px;
            text-align: center;
        }

        .col-name {
            min-width: 280px;
        }

        .col-type {
            width: 120px;
        }

        .col-specs {
            width: 150px;
        }

        .col-price {
            width: 180px;
        }

        .col-status {
            width: 120px;
        }

        .col-landlord {
            min-width: 180px;
        }

        .col-actions {
            width: 140px;
        }

        /* Favorite Button */
        .btn-favorite {
            width: 36px;
            height: 36px;
            border: none;
            background: transparent;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.2s;
            color: #cbd5e1;
        }

            .btn-favorite:hover {
                background: #fef2f2;
                color: #ef4444;
            }

            .btn-favorite.active {
                color: #ef4444;
            }

            .btn-favorite i {
                font-size: 18px;
            }

        .favorite-disabled {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 36px;
            height: 36px;
            color: #e2e8f0;
            cursor: not-allowed;
        }

        /* Property Info */
        .property-info {
            display: flex;
            flex-direction: column;
            gap: 6px;
        }

        .property-link {
            font-size: 15px;
            font-weight: 600;
            color: #1e293b;
            text-decoration: none;
            transition: color 0.2s;
        }

            .property-link:hover {
                color: #3b82f6;
            }

        .property-address {
            font-size: 13px;
            color: #64748b;
            display: flex;
            align-items: center;
            gap: 6px;
        }

            .property-address i {
                color: #94a3b8;
            }

        .address-detail {
            color: #94a3b8;
        }

        .property-date {
            font-size: 12px;
            color: #94a3b8;
            display: flex;
            align-items: center;
            gap: 4px;
        }

        /* Badges */
        .badge {
            padding: 6px 12px;
            border-radius: 6px;
            font-size: 12px;
            font-weight: 600;
            white-space: nowrap;
        }

            .badge.type {
                background: #dbeafe;
                color: #1e40af;
            }

            .badge.status.available {
                background: #dcfce7;
                color: #166534;
            }

            .badge.status.rented {
                background: #fef3c7;
                color: #92400e;
            }

            .badge.status.maintenance {
                background: #dbeafe;
                color: #1e40af;
            }

            .badge.status.unavailable {
                background: #f1f5f9;
                color: #475569;
            }

        /* Specs List */
        .specs-list {
            display: flex;
            flex-direction: column;
            gap: 6px;
        }

        .spec-item {
            font-size: 13px;
            color: #64748b;
            display: flex;
            align-items: center;
            gap: 6px;
        }

            .spec-item i {
                color: #94a3b8;
            }

            .spec-item strong {
                color: #1e293b;
            }

        /* Price Info */
        .price-info {
            display: flex;
            flex-direction: column;
            gap: 4px;
        }

        .price {
            font-size: 16px;
            font-weight: 700;
            color: #16a34a;
        }

        .period {
            font-size: 12px;
            color: #64748b;
        }

        .deposit {
            font-size: 11px;
            color: #94a3b8;
        }

        /* Landlord Info */
        .landlord-info {
            display: flex;
            flex-direction: column;
            gap: 4px;
        }

            .landlord-info strong {
                font-size: 14px;
                color: #1e293b;
            }

            .landlord-info span {
                font-size: 12px;
                color: #64748b;
            }

        /* Action Buttons */
        .action-buttons {
            display: flex;
            gap: 6px;
        }

        .btn-action {
            width: 36px;
            height: 36px;
            border: 1px solid #e2e8f0;
            background: white;
            border-radius: 6px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.2s;
            color: #64748b;
            text-decoration: none;
        }

            .btn-action:hover {
                border-color: #cbd5e1;
                background: #f8fafc;
            }

            .btn-action.view:hover {
                border-color: #3b82f6;
                background: #eff6ff;
