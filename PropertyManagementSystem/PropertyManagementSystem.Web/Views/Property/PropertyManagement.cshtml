@using System.Security.Claims
@model IEnumerable<PropertyManagementSystem.DAL.Entities.Property>

@{
    ViewData["Title"] = "Quản lý bất động sản";
    Layout = "_AuthLayout";
    var city = ViewBag.City as string ?? "";
    var propertyType = ViewBag.PropertyType as string ?? "";
    var minRent = ViewBag.MinRent as decimal?;
    var maxRent = ViewBag.MaxRent as decimal?;
    var propertyTypes = ViewBag.PropertyTypes as List<SelectListItem> ?? new();
    var hasFilters = !string.IsNullOrEmpty(city) || !string.IsNullOrEmpty(propertyType) || minRent.HasValue || maxRent.HasValue;
    var favoritePropertyIds = ViewBag.FavoritePropertyIds as HashSet<int> ?? new HashSet<int>();

    // Lấy UserId của user đang đăng nhập
    var currentUserId = 0;
    if (User.Identity?.IsAuthenticated == true)
    {
        currentUserId = int.Parse(User.FindFirst(ClaimTypes.NameIdentifier)?.Value ?? "0");
        Console.WriteLine($"Current UserId: {currentUserId}");
    }
}

<div class="container mt-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1>Danh sách Bất động sản</h1>
            <p class="text-muted">
                @if (Model.Any())
                {
                    if (hasFilters)
                    {
                        <span>@Model.Count() kết quả tìm kiếm</span>
                    }
                    else
                    {
                        <span>Tổng cộng: @Model.Count() BDS</span>
                    }
                }
                else
                {
                    <span>Chưa có bất động sản nào</span>
                }
            </p>
        </div>
        <div>
            @if (User.Identity?.IsAuthenticated == true)
            {
                <a asp-action="MyFavorites" class="btn btn-outline-danger mr-2">
                    <i class="fas fa-heart"></i> Yêu thích của tôi
                </a>
                <a asp-action="Create" class="btn btn-success">
                    <i class="fas fa-plus"></i> Đăng tin cho thuê
                </a>
            }
        </div>
    </div>

    <!-- Notifications -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Thành công!</strong> @TempData["Success"]
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Lỗi!</strong> @TempData["Error"]
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
    }
    @if (TempData["Warning"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong>Cảnh báo!</strong> @TempData["Warning"]
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
    }

    <!-- Filter -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Tìm kiếm & Lọc</h5>
        </div>
        <div class="card-body">
            <form asp-action="Index" method="get">
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Địa điểm</label>
                            <input type="text" name="city" class="form-control"
                                   placeholder="VD: Quận 7, TP.HCM" value="@city" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Loại BDS</label>
                            <select name="propertyType" class="form-control">
                                <option value="">-- Tất cả --</option>
                                @foreach (var type in propertyTypes)
                                {
                                    <option value="@type.Value" selected="@(type.Value == propertyType)">
                                        @type.Text
                                    </option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label>Giá tối thiểu (₫)</label>
                            <input type="number" name="minRent" class="form-control"
                                   placeholder="0" step="500000" min="0" value="@minRent" />
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label>Giá tối đa (₫)</label>
                            <input type="number" name="maxRent" class="form-control"
                                   placeholder="50000000" step="500000" min="0" value="@maxRent" />
                        </div>
                    </div>
                    <div class="col-md-2">
                        <label>&nbsp;</label>
                        <button type="submit" class="btn btn-primary btn-block">Tìm</button>
                        <a asp-action="Index" class="btn btn-secondary btn-block">Xóa</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Statistics -->
    @if (Model.Any())
    {
        var availableCount = Model.Count(p => p.Status == "Available");
        var rentedCount = Model.Count(p => p.Status == "Rented");
        var maintenanceCount = Model.Count(p => p.Status == "Maintenance");
        var totalRevenue = Model.Sum(p => p.RentAmount);

        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h2>@Model.Count()</h2>
                        <p class="mb-0">Tổng BDS</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h2>@availableCount</h2>
                        <p class="mb-0">Có sẵn</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h2>@rentedCount</h2>
                        <p class="mb-0">Đã thuê</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h4>@totalRevenue.ToString("N0")</h4>
                        <p class="mb-0">VNĐ/tháng</p>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Properties List -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">
                Danh sách bất động sản
                @if (hasFilters)
                {
                    <span class="badge badge-info">@Model.Count() kết quả</span>
                }
            </h5>
        </div>
        <div class="card-body p-0">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover mb-0">
                        <thead>
                            <tr>
                                <th style="width: 60px;">Yêu thích</th>
                                <th>Tên BDS</th>
                                <th>Địa chỉ</th>
                                <th>Loại</th>
                                <th>Diện tích</th>
                                <th>Phòng</th>
                                <th>Giá thuê</th>
                                <th>Trạng thái</th>
                                <th>Chủ nhà</th>
                                <th style="width: 180px;">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                // Kiểm tra quyền sở hữu
                                var isOwner = (item.LandlordId == currentUserId) || User.IsInRole("Admin");

                                <tr>
                                    <td class="text-center">
                                        @if (User.Identity?.IsAuthenticated == true)
                                        {
                                            <button type="button"
                                                    class="btn btn-link p-0 favorite-btn"
                                                    data-property-id="@item.PropertyId"
                                                    title="@(favoritePropertyIds.Contains(item.PropertyId) ? "Bỏ yêu thích" : "Thêm yêu thích")">
                                                <i class="@(favoritePropertyIds.Contains(item.PropertyId) ? "fas fa-heart text-danger" : "far fa-heart text-muted")"
                                                   style="font-size: 1.3rem;"></i>
                                            </button>
                                        }
                                        else
                                        {
                                            <i class="far fa-heart text-muted" style="font-size: 1.3rem;" title="Đăng nhập để yêu thích"></i>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.PropertyId">
                                            <strong>@item.Name</strong>
                                        </a>
                                        <br>
                                        <small class="text-muted">@item.CreatedAt.ToString("dd/MM/yyyy")</small>
                                    </td>
                                    <td>
                                        <div>@item.Address</div>
                                        @if (!string.IsNullOrEmpty(item.City))
                                        {
                                            <small class="text-muted">
                                                @(item.District != null ? $"{item.District}, " : "")@item.City
                                            </small>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge badge-info">@item.PropertyType</span>
                                    </td>
                                    <td>
                                        <strong>@item.SquareFeet.ToString("N0")</strong> ft²
                                    </td>
                                    <td>
                                        <div>Ngủ: <strong>@item.Bedrooms</strong></div>
                                        <div>Tắm: <strong>@item.Bathrooms</strong></div>
                                    </td>
                                    <td>
                                        <div>
                                            <span class="badge badge-success">@item.RentAmount.ToString("N0") ₫</span>
                                        </div>
                                        @if (item.DepositAmount.HasValue)
                                        {
                                            <small class="text-muted">
                                                Cọc: @item.DepositAmount.Value.ToString("N0") ₫
                                            </small>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge @GetStatusBadgeClass(item.Status)">
                                            @GetStatusDisplay(item.Status)
                                        </span>
                                    </td>
                                    <td>
                                        @if (item.Landlord != null)
                                        {
                                            <div>@item.Landlord.FullName</div>
                                            <small class="text-muted">@item.Landlord.Email</small>
                                        }
                                    </td>

                                    <td>
                                        <div class="btn-group-vertical btn-group-sm w-100">
                                            <!-- Chi tiết - luôn hiện -->
                                            <a asp-action="Details" asp-route-id="@item.PropertyId"
                                               class="btn btn-outline-primary mb-1">
                                                <i class="fas fa-eye"></i> Chi tiết
                                            </a>

                                            @if (isOwner)
                                            {
                                                <!-- Chủ nhà/Admin: Hiện Update & Delete -->
                                                <a asp-action="Edit" asp-route-id="@item.PropertyId"
                                                   class="btn btn-outline-warning mb-1">
                                                    <i class="fas fa-edit"></i> Chỉnh sửa
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.PropertyId"
                                                   class="btn btn-outline-danger">
                                                    <i class="fas fa-trash"></i> Xóa
                                                </a>
                                            }
                                            else
                                            {
                                                <!-- Người khác: Hiện nút Thuê ngay -->
                                                @if (item.Status == "Available")
                                                {
                                                    <button type="button"
                                                            class="btn btn-success rent-now-btn"
                                                            data-property-id="@item.PropertyId">
                                                        <i class="fas fa-handshake"></i> Thuê ngay
                                                    </button>
                                                }
                                                else
                                                {
                                                    <button type="button" class="btn btn-secondary" disabled>
                                                        <i class="fas fa-ban"></i> Không khả dụng
                                                    </button>
                                                }
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <h3 class="text-muted">
                        @if (hasFilters)
                        {
                            <span>Không tìm thấy BDS phù hợp</span>
                        }
                        else
                        {
                            <span>Chưa có bất động sản nào</span>
                        }
                    </h3>
                    <p class="text-muted">
                        @if (hasFilters)
                        {
                            <span>Thử điều chỉnh bộ lọc hoặc </span>
                        }
                        Bắt đầu bằng cách
                        <a asp-action="Create">đăng tin cho thuê</a>.
                    </p>
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <a asp-action="Create" class="btn btn-success">Đăng tin cho thuê</a>
                    }
                </div>
            }
        </div>
    </div>
</div>

@Html.AntiForgeryToken()

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).ready(function() {
            // Auto-hide alerts
            setTimeout(() => {
                $('.alert').fadeOut('slow', function() {
                    $(this).remove();
                });
            }, 5000);

            // Toggle favorite
            $('.favorite-btn').on('click', function(e) {
                e.preventDefault();
                var btn = $(this);
                var propertyId = btn.data('property-id');
                var icon = btn.find('i');
                btn.prop('disabled', true);

                $.ajax({
                    url: '@Url.Action("ToggleFavorite", "Property")',
                    type: 'POST',
                    data: {
                        propertyId: propertyId,
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function(response) {
                        btn.prop('disabled', false);
                        if (response.success) {
                            if (response.isFavorited) {
                                icon.removeClass('far text-muted').addClass('fas text-danger');
                                btn.attr('title', 'Bỏ yêu thích');
                            } else {
                                icon.removeClass('fas text-danger').addClass('far text-muted');
                                btn.attr('title', 'Thêm yêu thích');
                            }
                            Swal.fire({
                                toast: true,
                                position: 'top-end',
                                icon: 'success',
                                title: response.message,
                                showConfirmButton: false,
                                timer: 2000,
                                timerProgressBar: true
                            });
                        } else {
                            Swal.fire('Lỗi', response.message, 'error');
                        }
                    },
                    error: function() {
                        btn.prop('disabled', false);
                        Swal.fire('Lỗi', 'Có lỗi xảy ra khi xử lý yêu thích', 'error');
                    }
                });
            });

            // ✅ Nút "Thuê ngay" - chỉ alert, logic sẽ làm sau
            $('.rent-now-btn').on('click', function() {
                var propertyId = $(this).data('property-id');

                Swal.fire({
                    icon: 'info',
                    title: 'Thuê ngay',
                    text: 'Chức năng thuê BDS đang được phát triển',
                    footer: `Property ID: ${propertyId}`,
                    confirmButtonText: 'OK'
                });
            });
        });
    </script>
}

@functions {
    string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Available" => "badge-success",
            "Rented" => "badge-warning",
            "Maintenance" => "badge-info",
            "Unavailable" => "badge-secondary",
            _ => "badge-secondary"
        };
    }

    string GetStatusDisplay(string status)
    {
        return status switch
        {
            "Available" => "Có sẵn",
            "Rented" => "Đã thuê",
            "Maintenance" => "Bảo trì",
            "Unavailable" => "Không khả dụng",
            _ => status
        };
    }
}
