@model IEnumerable<PropertyManagementSystem.DAL.Entities.Property>

@{
    ViewData["Title"] = "Property Management";
}

<div class="container-fluid mt-4">
    <h2>Property Management</h2>

    <!-- Success/Error Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filter Bar + Create Button -->
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-3">
                    <label for="city" class="form-label">City</label>
                    <input type="text"
                           name="city"
                           id="city"
                           class="form-control"
                           placeholder="Enter city"
                           value="@ViewBag.City" />
                </div>

                <div class="col-md-2">
                    <label for="propertyType" class="form-label">Property Type</label>
                    <select name="propertyType"
                            id="propertyType"
                            class="form-select"
                            asp-items="@ViewBag.PropertyTypes">
                        <option value="">All Types</option>
                    </select>
                </div>

                <div class="col-md-2">
                    <label for="minRent" class="form-label">Min Rent</label>
                    <input type="number"
                           name="minRent"
                           id="minRent"
                           class="form-control"
                           placeholder="Min"
                           step="1000"
                           value="@ViewBag.MinRent" />
                </div>

                <div class="col-md-2">
                    <label for="maxRent" class="form-label">Max Rent</label>
                    <input type="number"
                           name="maxRent"
                           id="maxRent"
                           class="form-control"
                           placeholder="Max"
                           step="1000"
                           value="@ViewBag.MaxRent" />
                </div>

                <div class="col-md-3 d-flex align-items-end gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search"></i> Search
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-clockwise"></i> Clear
                    </a>
                    <a asp-action="Create" class="btn btn-success ms-auto">
                        <i class="bi bi-plus-circle"></i> Create New
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Property Table -->
    <div class="card">
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th>Title</th>
                                <th>Address</th>
                                <th>City</th>
                                <th>District</th>
                                <th>Type</th>
                                <th>Rent Price</th>
                                <th>Area (m²)</th>
                                <th>Bedrooms</th>
                                <th>Status</th>
                                <th class="text-center" style="width: 150px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@item.Title</strong>
                                    </td>
                                    <td>@item.Address</td>
                                    <td>@item.City</td>
                                    <td>@(item.District ?? "-")</td>
                                    <td>
                                        <span class="badge bg-info">@item.PropertyType</span>
                                    </td>
                                    <td>
                                        <strong>@string.Format("{0:N0}", item.BaseRentPrice) VND</strong>
                                    </td>
                                    <td>@(item.Area?.ToString("N2") ?? "-")</td>
                                    <td>
                                        @if (item.Status == "Available")
                                        {
                                            <span class="badge bg-success">@item.Status</span>
                                        }
                                        else if (item.Status == "Rented")
                                        {
                                            <span class="badge bg-warning text-dark">@item.Status</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@item.Status</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details"
                                               asp-route-id="@item.Id"
                                               class="btn btn-sm btn-info"
                                               title="View Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Edit"
                                               asp-route-id="@item.Id"
                                               class="btn btn-sm btn-warning"
                                               title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Delete"
                                               asp-route-id="@item.Id"
                                               class="btn btn-sm btn-danger"
                                               title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Summary -->
                <div class="mt-3">
                    <p class="text-muted">
                        Showing <strong>@Model.Count()</strong> properties
                    </p>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center" role="alert">
                    <i class="bi bi-info-circle"></i> No properties found.
                    @if (!string.IsNullOrEmpty(ViewBag.City as string))
                    {
                        <span>Try adjusting your search filters or</span>
                    }
                    <a asp-action="Create" class="alert-link">create a new property</a>.
                </div>
            }
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>
        .table th {
            white-space: nowrap;
        }
        .btn-group .btn {
            padding: 0.25rem 0.5rem;
        }
    </style>
}
