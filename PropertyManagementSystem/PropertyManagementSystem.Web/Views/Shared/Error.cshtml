@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Error - Property Manager</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        .pm-error-page {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, var(--pm-primary) 0%, var(--pm-primary-dark) 100%);
            padding: var(--pm-space-6);
        }

        .pm-error-card {
            background: var(--pm-surface);
            border-radius: var(--pm-radius-2xl);
            padding: var(--pm-space-12);
            text-align: center;
            max-width: 500px;
            width: 100%;
            box-shadow: var(--pm-shadow-xl);
        }

        .pm-error-icon {
            width: 100px;
            height: 100px;
            margin: 0 auto var(--pm-space-6);
            background: var(--pm-danger-100);
            border-radius: var(--pm-radius-full);
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .pm-error-icon i {
            font-size: 48px;
            color: var(--pm-danger);
        }

        .pm-error-card h1 {
            font-size: var(--pm-text-2xl);
            font-weight: var(--pm-font-bold);
            color: var(--pm-text);
            margin: 0 0 var(--pm-space-4);
        }

        .pm-error-card p {
            font-size: var(--pm-text-base);
            color: var(--pm-text-secondary);
            margin: 0 0 var(--pm-space-8);
        }

        .pm-error-id {
            font-size: var(--pm-text-sm);
            color: var(--pm-text-muted);
            margin-top: var(--pm-space-6);
        }
    </style>
</head>
<body>
    <div class="pm-error-page">
        <div class="pm-error-card">
            <div class="pm-error-icon">
                <i class="bi bi-exclamation-triangle"></i>
            </div>
            <h1>Something Went Wrong</h1>
            <p>
                We're sorry, but something unexpected happened. 
                Please try again or contact support if the problem persists.
            </p>
            <div class="pm-flex pm-flex-col pm-gap-3">
                <a href="/" class="pm-btn pm-btn-primary">
                    <i class="bi bi-house-door"></i>
                    Go to Homepage
                </a>
                <button onclick="history.back()" class="pm-btn pm-btn-secondary">
                    <i class="bi bi-arrow-left"></i>
                    Go Back
                </button>
            </div>
            @if (Model?.ShowRequestId ?? false)
            {
                <p class="pm-error-id">
                    Request ID: <code>@Model?.RequestId</code>
                </p>
            }
        </div>
    </div>
</body>
</html>
