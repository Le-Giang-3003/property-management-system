@using System.Security.Claims
@using PropertyManagementSystem.Web.Extensions
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery
@{
    var title = ViewData["Title"] as string ?? "Property Management";
    var userName = User.FindFirstValue(ClaimTypes.Name) ?? "User";
    var userEmail = User.FindFirstValue(ClaimTypes.Email) ?? "";
    var userId = User.GetUserId();
    string userInitial = string.IsNullOrEmpty(userName) ? "?" : userName.Substring(0, Math.Min(1, userName.Length)).ToUpper();

    // Detect current view mode dynamically from route
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString() ?? "";
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";

    // Check for explicit portal mode set by view
    string displayRole = ViewData["PortalMode"]?.ToString() ?? "";

    // If not explicitly set, detect from route
    if (string.IsNullOrEmpty(displayRole))
    {
        // Landlord pages detection - all landlord-specific pages
        var landlordPages = new HashSet<string>(StringComparer.OrdinalIgnoreCase)
        {
            "Dashboard/LandlordIndex",
            "Property/MyProperties",
            "Property/Create",
            "Property/Edit",
            "Property/ManageImages",
            "Property/ChangeStatus",
            "RentalApplication/Index",
            "RentalApplication/Details",
            "RentalApplication/ByProperty",
            "Lease/Index",
            "Lease/Create",
            "Lease/Edit",
            "Lease/Details",
            "Lease/Terminate",
            "Lease/Renew",
            "Maintenance/LandlordIndex",
            "PropertyViewing/ManageViewings",
            "PropertyViewing/PendingRequest",
            "Invoice/Index",
            "Payment/LandlordIndex",
            "Document/LandlordDocuments"
        };

        // Tenant pages detection
        var tenantPages = new HashSet<string>(StringComparer.OrdinalIgnoreCase)
        {
            "Dashboard/Index",
            "Property/SearchProperties",
            "Property/PropertyFavorite",
            "Property/Details",
            "RentalApplication/MyApplications",
            "RentalApplication/Create",
            "Lease/MyLeases",
            "Payment/MakePayment",
            "Maintenance/TenantIndex",
            "Maintenance/CreateRequest",
            "PropertyViewing/MyViewings",
            "PropertyViewing/Request"
            // Note: Payment/History and Document/MyDocuments are shared between Tenant and Landlord
            // PortalMode is set by controller based on role
        };

        var currentPage = $"{currentController}/{currentAction}";

        if (landlordPages.Contains(currentPage))
        {
            displayRole = "Landlord";
        }
        else if (tenantPages.Contains(currentPage))
        {
            displayRole = "Tenant";
        }
        else if (currentAction == "TechnicianIndex")
        {
            displayRole = "Technician";
        }
        else
        {
            // Default to Tenant
            displayRole = "Tenant";
        }
    }

    var isMemberRole = User.IsInRole("Member");
}
