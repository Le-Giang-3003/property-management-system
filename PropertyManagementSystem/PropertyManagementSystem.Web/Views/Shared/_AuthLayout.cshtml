            {
                <nav class="pm-nav-section">
                    <div class="pm-nav-title">Main Menu</div>
                    <ul class="pm-nav-menu">
                        <li class="pm-nav-item">
                            <a href="@Url.Action("Index", "Dashboard")" class="pm-nav-link">
                                <i class="bi bi-house-door"></i>
                                <span>Dashboard</span>
                            </a>
                        </li>
                        <li class="pm-nav-item">
                            <a href="@Url.Action("SearchProperties", "Property")" class="pm-nav-link">
                                <i class="bi bi-search"></i>
                                <span>Browse Properties</span>
                            </a>
                        </li>
                        <li class="pm-nav-item">
                            <a href="@Url.Action("MyFavorites", "Property")" class="pm-nav-link">
                                <i class="bi bi-heart"></i>
                                <span>Favorites</span>
                            </a>
                        </li>
                    </ul>
                </nav>

                <nav class="pm-nav-section">
                    <div class="pm-nav-title">My Rentals</div>
                    <ul class="pm-nav-menu">
                        <li class="pm-nav-item">
                            <a href="@Url.Action("MyApplications", "RentalApplication")" class="pm-nav-link">
                                <i class="bi bi-file-text"></i>
                                <span>My Applications</span>
                            </a>
                        </li>
                        <li class="pm-nav-item">
                            <a href="@Url.Action("MyLeases", "Lease")" class="pm-nav-link">
                                <i class="bi bi-file-earmark-check"></i>
                                <span>My Leases</span>
                            </a>
                        </li>
                        <li class="pm-nav-item">
                            <a href="@Url.Action("MyViewings", "PropertyViewing")" class="pm-nav-link">
                                <i class="bi bi-calendar-check"></i>
                                <span>Scheduled Viewings</span>
                            </a>
                        </li>
                    </ul>
                </nav>

                <nav class="pm-nav-section">
                    <div class="pm-nav-title">Payments & Services</div>
                    <ul class="pm-nav-menu">
                        <li class="pm-nav-item">
                            <a href="@Url.Action("History", "Payment")" class="pm-nav-link">
                                <i class="bi bi-credit-card"></i>
                                <span>Payments</span>
                            </a>
                        </li>
                        <li class="pm-nav-item">
                            <a href="@Url.Action("TenantIndex", "Maintenance")" class="pm-nav-link">
                                <i class="bi bi-tools"></i>
                                <span>Maintenance</span>
                            </a>
                        </li>
                        <li class="pm-nav-item">
                            <a href="@Url.Action("MyDocuments", "Document")" class="pm-nav-link">
                                <i class="bi bi-folder"></i>
                                <span>Documents</span>
                            </a>
                        </li>
                    </ul>
