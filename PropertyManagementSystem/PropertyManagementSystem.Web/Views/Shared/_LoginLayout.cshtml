@{
    var title = ViewData["Title"] as string ?? "Property Management";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Property Management System - Sign in to manage your properties, tenants, leases, and maintenance requests" />
    <meta name="keywords" content="property management, rental, lease, tenant, landlord, login" />
    <meta name="author" content="Property Manager" />
    <meta property="og:title" content="@title - Property Manager" />
    <meta property="og:description" content="Property Management System" />
    <meta property="og:type" content="website" />
    <title>@title - Property Manager</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        * {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        }

        .pm-auth-layout {
            min-height: 100vh;
            display: flex;
            background: linear-gradient(145deg, #f0f4ff 0%, #e8f0fe 25%, #f5f8ff 50%, #eef4ff 75%, #f8faff 100%);
            position: relative;
            overflow: hidden;
        }

        /* Soft floating decorations */
        .pm-auth-layout::before {
            content: '';
            position: absolute;
            top: 10%;
            left: 5%;
            width: 400px;
            height: 400px;
            background: radial-gradient(circle, rgba(99, 147, 245, 0.12) 0%, transparent 70%);
            border-radius: 50%;
            pointer-events: none;
            animation: float-slow 20s ease-in-out infinite;
        }

        .pm-auth-layout::after {
            content: '';
            position: absolute;
            bottom: 10%;
            right: 5%;
            width: 500px;
            height: 500px;
            background: radial-gradient(circle, rgba(139, 180, 255, 0.1) 0%, transparent 70%);
            border-radius: 50%;
            pointer-events: none;
            animation: float-slow 25s ease-in-out infinite reverse;
        }

        @@keyframes float-slow {
            0%, 100% { transform: translate(0, 0) scale(1); }
            33% { transform: translate(30px, -30px) scale(1.05); }
            66% { transform: translate(-20px, 20px) scale(0.95); }
        }

        @@keyframes float-gentle {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-15px); }
        }

        @@keyframes fade-in-up {
            from { opacity: 0; transform: translateY(30px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* Left Side - Branding */
        .pm-auth-branding {
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
            padding: 4rem 5rem;
            position: relative;
            z-index: 1;
            max-width: 55%;
        }

        .pm-auth-brand-logo {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-bottom: 4rem;
            animation: fade-in-up 0.8s ease forwards;
        }

        .pm-auth-brand-icon {
            width: 56px;
            height: 56px;
            background: linear-gradient(135deg, #4f8cff 0%, #3b7cf5 100%);
            border-radius: 16px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 26px;
            color: white;
            box-shadow: 0 8px 24px rgba(79, 140, 255, 0.3);
        }

        .pm-auth-brand-text h1 {
            font-size: 1.5rem;
            font-weight: 700;
            margin: 0;
            background: linear-gradient(135deg, #2563eb 0%, #4f8cff 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            letter-spacing: -0.02em;
        }

        .pm-auth-brand-text p {
            font-size: 0.85rem;
            color: #7c8db0;
            margin: 0;
            font-weight: 400;
        }

        .pm-auth-tagline {
            animation: fade-in-up 0.8s ease 0.1s forwards;
            opacity: 0;
        }

        .pm-auth-tagline h2 {
            font-size: 2.75rem;
            font-weight: 700;
            line-height: 1.15;
            margin: 0 0 1.5rem;
            color: #1e3a5f;
            letter-spacing: -0.03em;
        }

        .pm-auth-tagline h2 span {
            background: linear-gradient(135deg, #4f8cff 0%, #667eea 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .pm-auth-tagline p {
            font-size: 1.05rem;
            color: #64748b;
            margin: 0 0 2.5rem;
            max-width: 440px;
            line-height: 1.7;
            font-weight: 400;
        }

        .pm-auth-features {
            display: flex;
            flex-direction: column;
            gap: 1rem;
            animation: fade-in-up 0.8s ease 0.2s forwards;
            opacity: 0;
        }

        .pm-auth-feature {
            display: flex;
            align-items: center;
            gap: 0.875rem;
            font-size: 0.95rem;
            color: #475569;
            font-weight: 450;
        }

        .pm-auth-feature i {
            width: 26px;
            height: 26px;
            background: linear-gradient(135deg, #e0edff 0%, #d4e5ff 100%);
            color: #4f8cff;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 12px;
            font-weight: 700;
        }

        /* Floating decorative shapes */
        .pm-auth-decoration {
            position: absolute;
            pointer-events: none;
            z-index: 0;
        }

        .pm-auth-decoration.shape-1 {
            top: 15%;
            right: 48%;
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, rgba(99, 147, 245, 0.08) 0%, rgba(139, 180, 255, 0.05) 100%);
            border-radius: 24px;
            transform: rotate(15deg);
            animation: float-gentle 6s ease-in-out infinite;
        }

        .pm-auth-decoration.shape-2 {
            bottom: 25%;
            left: 35%;
            width: 60px;
            height: 60px;
            background: linear-gradient(135deg, rgba(139, 180, 255, 0.1) 0%, rgba(99, 147, 245, 0.05) 100%);
            border-radius: 50%;
            animation: float-gentle 8s ease-in-out infinite 1s;
        }

        .pm-auth-decoration.shape-3 {
            top: 60%;
            right: 52%;
            width: 40px;
            height: 40px;
            background: linear-gradient(135deg, rgba(99, 147, 245, 0.06) 0%, transparent 100%);
            border-radius: 12px;
            transform: rotate(-20deg);
            animation: float-gentle 7s ease-in-out infinite 0.5s;
        }

        /* Right Side - Form Container */
        .pm-auth-container {
            width: 100%;
            max-width: 480px;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem 3rem;
            position: relative;
            z-index: 1;
            margin-right: 2rem;
        }

        .pm-auth-card {
            width: 100%;
            background: rgba(255, 255, 255, 0.85);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            border-radius: 28px;
            box-shadow: 
                0 4px 6px rgba(0, 0, 0, 0.02),
                0 12px 24px rgba(79, 140, 255, 0.08),
                0 24px 48px rgba(79, 140, 255, 0.06);
            border: 1px solid rgba(255, 255, 255, 0.8);
            padding: 2.5rem;
            animation: fade-in-up 0.6s ease forwards;
        }

        .pm-auth-header {
            text-align: center;
            margin-bottom: 2rem;
        }

        .pm-auth-icon {
            width: 64px;
            height: 64px;
            margin: 0 auto 1.25rem;
            background: linear-gradient(145deg, #4f8cff 0%, #3b7cf5 100%);
            border-radius: 18px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 28px;
            box-shadow: 0 8px 24px rgba(79, 140, 255, 0.35);
        }

        .pm-auth-header h1 {
            font-size: 1.6rem;
            font-weight: 700;
            color: #1e3a5f;
            margin: 0 0 0.5rem;
            letter-spacing: -0.02em;
        }

        .pm-auth-header p {
            font-size: 0.9rem;
            color: #7c8db0;
            margin: 0;
            font-weight: 400;
        }

        /* Form Styles */
        .pm-auth-form .pm-form-group {
            margin-bottom: 1.25rem;
        }

        .pm-auth-form .pm-label {
            display: block;
            font-weight: 500;
            font-size: 0.875rem;
            color: #475569;
            margin-bottom: 0.5rem;
        }

        .pm-auth-form .pm-input-icon {
            position: relative;
        }

        .pm-auth-form .pm-input-icon > i {
            position: absolute;
            left: 14px;
            top: 50%;
            transform: translateY(-50%);
            font-size: 18px;
            color: #94a3b8;
            z-index: 1;
            transition: color 0.2s ease;
        }

        .pm-auth-form .pm-input {
            width: 100%;
            height: 50px;
            padding: 0 1rem 0 2.75rem;
            font-size: 0.95rem;
            border: 1.5px solid #e2e8f0;
            border-radius: 14px;
            background: rgba(255, 255, 255, 0.9);
            color: #334155;
            transition: all 0.25s ease;
            outline: none;
        }

        .pm-auth-form .pm-input::placeholder {
            color: #a0aec0;
        }

        .pm-auth-form .pm-input:hover {
            border-color: #c7d4e8;
        }

        .pm-auth-form .pm-input:focus {
            border-color: #4f8cff;
            box-shadow: 0 0 0 4px rgba(79, 140, 255, 0.12);
            background: white;
        }

        .pm-auth-form .pm-input:focus + i,
        .pm-auth-form .pm-input-icon:focus-within > i {
            color: #4f8cff;
        }

        .pm-auth-form .pm-input-icon-right .pm-input {
            padding-right: 2.75rem;
        }

        .pm-password-toggle {
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: #94a3b8;
            cursor: pointer;
            padding: 6px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: color 0.2s ease;
            z-index: 5;
            border-radius: 8px;
        }

        .pm-password-toggle:hover {
            color: #4f8cff;
            background: rgba(79, 140, 255, 0.08);
        }

        .pm-password-toggle i {
            position: static;
            transform: none;
            font-size: 18px;
        }

        .pm-auth-options {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 1.5rem;
        }

        .pm-checkbox {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.875rem;
            color: #64748b;
            cursor: pointer;
        }

        .pm-checkbox input[type="checkbox"] {
            width: 18px;
            height: 18px;
            border-radius: 5px;
            border: 1.5px solid #d1d5db;
            cursor: pointer;
            accent-color: #4f8cff;
        }

        .pm-auth-forgot {
            font-size: 0.875rem;
            color: #4f8cff;
            text-decoration: none;
            font-weight: 500;
            transition: color 0.2s ease;
        }

        .pm-auth-forgot:hover {
            color: #3b7cf5;
        }

        .pm-auth-submit {
            width: 100%;
            height: 52px;
            font-size: 0.95rem;
            font-weight: 600;
            border-radius: 14px;
            background: linear-gradient(135deg, #4f8cff 0%, #3b7cf5 100%);
            border: none;
            color: white;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            transition: all 0.3s ease;
            box-shadow: 0 4px 14px rgba(79, 140, 255, 0.35);
        }

        .pm-auth-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(79, 140, 255, 0.4);
            background: linear-gradient(135deg, #5a94ff 0%, #4585f5 100%);
        }

        .pm-auth-submit:active {
            transform: translateY(0);
        }

        .pm-auth-divider {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin: 1.75rem 0;
        }

        .pm-auth-divider::before,
        .pm-auth-divider::after {
            content: '';
            flex: 1;
            height: 1px;
            background: linear-gradient(90deg, transparent, #e2e8f0, transparent);
        }

        .pm-auth-divider span {
            font-size: 0.8rem;
            color: #94a3b8;
            font-weight: 400;
        }

        .pm-auth-footer {
            text-align: center;
            font-size: 0.9rem;
            color: #64748b;
        }

        .pm-auth-footer a {
            color: #4f8cff;
            font-weight: 600;
            text-decoration: none;
            transition: color 0.2s ease;
        }

        .pm-auth-footer a:hover {
            color: #3b7cf5;
        }

        /* Alerts */
        .pm-auth-card .pm-alert {
            margin-bottom: 1.25rem;
            padding: 0.875rem 1rem;
            font-size: 0.875rem;
            border-radius: 12px;
            display: flex;
            align-items: center;
            gap: 0.625rem;
        }

        .pm-auth-card .pm-alert-success {
            background: rgba(16, 185, 129, 0.1);
            border: 1px solid rgba(16, 185, 129, 0.2);
            color: #047857;
        }

        .pm-auth-card .pm-alert-danger {
            background: rgba(239, 68, 68, 0.1);
            border: 1px solid rgba(239, 68, 68, 0.2);
            color: #dc2626;
        }

        .pm-error {
            font-size: 0.8rem;
            color: #ef4444;
            margin-top: 0.375rem;
            display: block;
        }

        .pm-hint {
            font-size: 0.8rem;
            color: #64748b;
            margin-top: 0.5rem;
            display: block;
        }

        /* Back Link */
        .pm-auth-back {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.875rem;
            color: #64748b;
            text-decoration: none;
            margin-bottom: 1.5rem;
            transition: color 0.2s ease;
        }

        .pm-auth-back:hover {
            color: #4f8cff;
        }

        /* Responsive */
        @@media (max-width: 1200px) {
            .pm-auth-branding {
                padding: 3rem 4rem;
            }

            .pm-auth-tagline h2 {
                font-size: 2.25rem;
            }
        }

        @@media (max-width: 1024px) {
            .pm-auth-branding {
                display: none;
            }

            .pm-auth-container {
                max-width: 100%;
                margin-right: 0;
                padding: 2rem;
            }

            .pm-auth-layout {
                justify-content: center;
                align-items: center;
            }
        }

        @@media (max-width: 576px) {
            .pm-auth-layout {
                padding: 1rem;
            }

            .pm-auth-container {
                padding: 1rem;
            }

            .pm-auth-card {
                padding: 2rem 1.5rem;
                border-radius: 24px;
            }

            .pm-auth-header h1 {
                font-size: 1.4rem;
            }

            .pm-auth-icon {
                width: 56px;
                height: 56px;
                font-size: 24px;
            }
        }
    </style>

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="pm-auth-layout">
        <!-- Decorative Shapes -->
        <div class="pm-auth-decoration shape-1"></div>
        <div class="pm-auth-decoration shape-2"></div>
        <div class="pm-auth-decoration shape-3"></div>

        <!-- Left Side - Branding -->
        <div class="pm-auth-branding">
            <div class="pm-auth-brand-logo">
                <div class="pm-auth-brand-icon">
                    <i class="bi bi-building"></i>
                </div>
                <div class="pm-auth-brand-text">
                    <h1>Property Manager</h1>
                    <p>Smart Property Solutions</p>
                </div>
            </div>

            <div class="pm-auth-tagline">
                <h2>Simplify your <span>property management</span> journey</h2>
                <p>
                    An elegant solution for landlords and tenants. Effortlessly manage rentals, 
                    track payments, and handle maintenanceâ€”all in one beautiful platform.
                </p>
            </div>

            <div class="pm-auth-features">
                <div class="pm-auth-feature">
                    <i class="bi bi-check2"></i>
                    <span>Intuitive property listings</span>
                </div>
                <div class="pm-auth-feature">
                    <i class="bi bi-check2"></i>
                    <span>Seamless online payments</span>
                </div>
                <div class="pm-auth-feature">
                    <i class="bi bi-check2"></i>
                    <span>Digital contracts & signatures</span>
                </div>
                <div class="pm-auth-feature">
                    <i class="bi bi-check2"></i>
                    <span>Smart maintenance tracking</span>
                </div>
                <div class="pm-auth-feature">
                    <i class="bi bi-check2"></i>
                    <span>Instant notifications</span>
                </div>
            </div>
        </div>

        <!-- Right Side - Form -->
        <div class="pm-auth-container">
            @RenderBody()
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
