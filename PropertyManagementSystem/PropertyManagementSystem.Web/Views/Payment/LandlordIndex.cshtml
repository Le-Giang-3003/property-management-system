@using PropertyManagementSystem.Web.ViewModels.Payment
@model LandlordPaymentManagementViewModel

@{
    ViewData["Title"] = "Payment Management";
    Layout = "_AuthLayout";
    ViewData["PortalMode"] = "Landlord";
}

<div class="payment-management-page">
    <!-- Page Header -->
    <div class="page-header">
        <div class="header-content">
            <h1 class="page-title">Payment Management</h1>
            <p class="page-subtitle">Track and manage all rental payments</p>
        </div>
        <div class="header-actions">
            <button class="btn btn-success btn-create-invoice" onclick="openCreateInvoiceModal()">
                <i class="bi bi-plus-circle"></i>
                Create Invoice
            </button>
            <button class="btn btn-primary btn-export" onclick="exportReport()">
                <i class="bi bi-download"></i>
                Export Report
            </button>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="summary-cards">
        <div class="summary-card card-success">
            <div class="card-icon icon-success">
                <i class="bi bi-currency-dollar"></i>
            </div>
            <div class="card-content">
                <div class="card-value-row">
                    <span class="card-value">$@Model.TotalCollected.ToString("N0")</span>
                    @if (Model.TotalCollectedChangePercent > 0)
                    {
                        <span class="card-change positive">+@Model.TotalCollectedChangePercent.ToString("F0")%</span>
                    }
                </div>
                <div class="card-label">Total Collected</div>
            </div>
        </div>

        <div class="summary-card card-warning">
            <div class="card-icon icon-warning">
                <i class="bi bi-exclamation-triangle"></i>
            </div>
            <div class="card-content">
                <div class="card-value-row">
                    <span class="card-value">$@Model.PendingPayments.ToString("N0")</span>
                </div>
                <div class="card-label">Pending Payments</div>
            </div>
        </div>

        <div class="summary-card card-danger">
            <div class="card-icon icon-danger">
                <i class="bi bi-x-circle"></i>
            </div>
            <div class="card-content">
                <div class="card-value-row">
                    <span class="card-value">$@Model.Overdue.ToString("N0")</span>
                </div>
                <div class="card-label">Overdue</div>
            </div>
        </div>

        <div class="summary-card card-info">
            <div class="card-icon icon-info">
                <i class="bi bi-graph-up"></i>
            </div>
            <div class="card-content">
                <div class="card-value-row">
                    <span class="card-value">$@Model.ThisMonth.ToString("N0")</span>
                    @if (Model.ThisMonthChangePercent > 0)
                    {
                        <span class="card-change positive">+@Model.ThisMonthChangePercent.ToString("F0")%</span>
                    }
                </div>
                <div class="card-label">This Month</div>
            </div>
        </div>
    </div>

    <!-- Monthly Revenue Section -->
    <div class="revenue-section">
        <div class="revenue-header">
            <h3 class="revenue-title">Monthly Revenue</h3>
        </div>
        <div class="revenue-chart-container">
            <canvas id="monthlyRevenueChart"></canvas>
        </div>
        <div class="revenue-totals">
            @foreach (var month in Model.MonthlyRevenue)
            {
                <div class="revenue-month">
                    <span class="month-label">@month.Month:</span>
                    <span class="month-value">$@(month.Amount / 1000)k</span>
                </div>
            }
        </div>
    </div>

    <!-- Search and Filter Bar -->
    <div class="filter-bar">
        <div class="search-wrapper">
            <i class="bi bi-search search-icon"></i>
            <input type="text" id="searchInput" class="search-input" placeholder="Search payments..." />
        </div>
        <select class="filter-select" id="statusFilter">
            <option value="">All Status</option>
            <option value="Paid">Paid</option>
            <option value="Pending">Pending</option>
            <option value="Overdue">Overdue</option>
        </select>
        <div class="date-input-wrapper">
            <i class="bi bi-calendar3 date-icon"></i>
            <input type="text" class="date-input" id="dateRangeInput" placeholder="Date Range" />
        </div>
    </div>

    <!-- Payments Table -->
    <div class="table-container">
        <table class="payments-table" id="paymentsTable">
            <thead>
                <tr>
                    <th>Payment ID</th>
                    <th>Tenant</th>
                    <th>Property</th>
                    <th>Amount</th>
                    <th>Due Date</th>
                    <th>Paid Date</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Payments != null && Model.Payments.Any())
                {
                    @foreach (var payment in Model.Payments)
                    {
                        var isOverdue = payment.DueDate < DateTime.Now && payment.Status != "Confirmed";
                        <tr>
                            <td>
                                <span class="payment-id">@payment.PaymentNumber</span>
                            </td>
                            <td>@payment.TenantName</td>
                            <td>@payment.PropertyName</td>
                            <td>
                                <span class="amount-value">$@payment.Amount.ToString("N0")</span>
                            </td>
                            <td>@payment.DueDate.ToString("MMM dd, yyyy")</td>
                            <td>
                                @if (payment.PaidDate.HasValue)
                                {
                                    @payment.PaidDate.Value.ToString("MMM dd, yyyy")
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                @if (isOverdue)
                                {
                                    <span class="status-badge badge-overdue">Overdue</span>
                                }
                                else if (payment.Status == "Confirmed")
                                {
                                    <span class="status-badge badge-paid">Paid</span>
                                }
                                else if (payment.Status == "Pending")
                                {
                                    <span class="status-badge badge-pending">Pending</span>
                                }
                                else
                                {
                                    <span class="status-badge badge-default">@payment.Status</span>
                                }
                            </td>
                            <td>
                                <div class="action-buttons">
                                    @if (payment.Status == "Pending")
                                    {
                                        <button class="btn-action btn-confirm" onclick="confirmPayment(@payment.PaymentId)">
                                            Confirm
                                        </button>
                                    }
                                    @if (isOverdue)
                                    {
                                        <button class="btn-action btn-reminder" onclick="sendReminder(@payment.PaymentId)">
                                            Send Reminder
                                        </button>
                                    }
                                    <a asp-action="DownloadReceipt" asp-route-id="@payment.PaymentId" class="btn-action btn-download" title="Download Receipt">
                                        <i class="bi bi-download"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="empty-state">
                            <div class="empty-content">
                                <i class="bi bi-inbox"></i>
                                <p>No payments found</p>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Create Invoice Modal -->
<div class="modal-overlay" id="createInvoiceModal">
    <div class="modal-container">
        <div class="modal-header">
            <h2 class="modal-title">
                <i class="bi bi-receipt"></i>
                Create New Invoice
            </h2>
            <button class="modal-close" onclick="closeCreateInvoiceModal()">
                <i class="bi bi-x-lg"></i>
            </button>
        </div>
        <div class="modal-body">
            <!-- Step 1: Select Lease -->
            <div class="form-section">
                <label class="form-label">Select Lease Contract</label>
                <select class="form-select" id="leaseSelect" onchange="onLeaseSelected()">
                    <option value="">-- Select a lease --</option>
                </select>
                <div class="loading-spinner" id="leaseLoading" style="display: none;">
                    <i class="bi bi-arrow-repeat spinning"></i> Loading leases...
                </div>
            </div>

            <!-- Lease Info Display -->
            <div class="lease-info-card" id="leaseInfoCard" style="display: none;">
                <h4 class="info-card-title">Lease Information</h4>
                <div class="info-grid">
                    <div class="info-item">
                        <span class="info-label">Property</span>
                        <span class="info-value" id="infoPropertyName">-</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Address</span>
                        <span class="info-value" id="infoPropertyAddress">-</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Tenant</span>
                        <span class="info-value" id="infoTenantName">-</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Email</span>
                        <span class="info-value" id="infoTenantEmail">-</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Monthly Rent</span>
                        <span class="info-value highlight" id="infoMonthlyRent">-</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Payment Due Day</span>
                        <span class="info-value" id="infoPaymentDueDay">-</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Lease Period</span>
                        <span class="info-value" id="infoLeasePeriod">-</span>
                    </div>
                </div>
            </div>

            <!-- Additional Services -->
            <div class="form-section" id="additionalSection" style="display: none;">
                <label class="form-label">Additional Services Amount (VND)</label>
                <input type="number" class="form-input" id="additionalAmount"
                       placeholder="Enter additional amount (optional)" min="0" value="0"
                       onchange="updateTotalAmount()" oninput="updateTotalAmount()">
                <small class="form-hint">Enter amount for utilities, maintenance, or other services</small>

                <label class="form-label mt-3">Description for Additional Services</label>
                <input type="text" class="form-input" id="additionalDescription"
                       placeholder="e.g., Electricity, Water, Internet...">
            </div>

            <!-- Invoice Summary -->
            <div class="invoice-summary" id="invoiceSummary" style="display: none;">
                <h4 class="summary-title">Invoice Summary</h4>
                <div class="summary-row">
                    <span>Monthly Rent:</span>
                    <span id="summaryRent">$0</span>
                </div>
                <div class="summary-row">
                    <span>Additional Services:</span>
                    <span id="summaryAdditional">$0</span>
                </div>
                <div class="summary-row total">
                    <span>Total Amount:</span>
                    <span id="summaryTotal">$0</span>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn btn-secondary" onclick="closeCreateInvoiceModal()">Cancel</button>
            <button class="btn btn-primary" id="createInvoiceBtn" onclick="createInvoice()" disabled>
                <i class="bi bi-check-circle"></i>
                Create Invoice
            </button>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Monthly Revenue Chart
        const ctx = document.getElementById('monthlyRevenueChart');
        if (ctx) {
            const monthlyData = @Html.Raw(Json.Serialize(Model.MonthlyRevenue.Select(m => m.Amount)));
            const monthlyLabels = @Html.Raw(Json.Serialize(Model.MonthlyRevenue.Select(m => m.Month)));
            
            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: monthlyLabels,
                    datasets: [{
                        label: 'Revenue',
                        data: monthlyData,
                        backgroundColor: 'rgba(59, 130, 246, 0.5)',
                        borderColor: 'rgba(59, 130, 246, 1)',
                        borderWidth: 1,
                        borderRadius: 4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                callback: function(value) {
                                    return '$' + (value / 1000) + 'k';
                                }
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            display: false
                        }
                    }
                }
            });
        }

        // Search and filter functionality
        document.getElementById('searchInput')?.addEventListener('input', filterTable);
        document.getElementById('statusFilter')?.addEventListener('change', filterTable);

        function filterTable() {
            const searchText = document.getElementById('searchInput').value.toLowerCase();
            const statusFilter = document.getElementById('statusFilter').value;
            const rows = document.querySelectorAll('#paymentsTable tbody tr');

            rows.forEach(row => {
                if (row.classList.contains('empty-state')) return;
                
                const text = row.textContent.toLowerCase();
                const statusBadge = row.querySelector('.status-badge');
                const status = statusBadge ? statusBadge.textContent.trim() : '';

                const matchesSearch = text.includes(searchText);
                const matchesStatus = !statusFilter || 
                    (statusFilter === 'Paid' && status === 'Paid') ||
                    (statusFilter === 'Pending' && status === 'Pending') ||
                    (statusFilter === 'Overdue' && status === 'Overdue');

                row.style.display = (matchesSearch && matchesStatus) ? '' : 'none';
            });
        }

        function confirmPayment(paymentId) {
            if (confirm('Are you sure you want to confirm this payment?')) {
                fetch('@Url.Action("ConfirmPayment", "Payment")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Accept': 'application/json'
                    },
                    body: JSON.stringify({ paymentId: paymentId })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert(data.message || 'Failed to confirm payment');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('An error occurred while confirming payment');
                });
            }
        }

        function sendReminder(paymentId) {
            alert('Send reminder functionality will be implemented');
        }

        function exportReport() {
            alert('Export report functionality will be implemented');
        }

        // ===== Create Invoice Modal Functions =====
        let activeLeasesData = [];
        let selectedLease = null;

        function openCreateInvoiceModal() {
            document.getElementById('createInvoiceModal').classList.add('active');
            loadActiveLeases();
        }

        function closeCreateInvoiceModal() {
            document.getElementById('createInvoiceModal').classList.remove('active');
            resetCreateInvoiceForm();
        }

        function resetCreateInvoiceForm() {
            document.getElementById('leaseSelect').value = '';
            document.getElementById('leaseInfoCard').style.display = 'none';
            document.getElementById('additionalSection').style.display = 'none';
            document.getElementById('invoiceSummary').style.display = 'none';
            document.getElementById('additionalAmount').value = '0';
            document.getElementById('additionalDescription').value = '';
            document.getElementById('createInvoiceBtn').disabled = true;
            selectedLease = null;
        }

        async function loadActiveLeases() {
            const select = document.getElementById('leaseSelect');
            const loading = document.getElementById('leaseLoading');

            loading.style.display = 'block';
            select.innerHTML = '<option value="">-- Select a lease --</option>';

            try {
                const response = await fetch('@Url.Action("GetActiveLeases", "Payment")');
                const result = await response.json();

                if (result.success) {
                    activeLeasesData = result.data;
                    result.data.forEach(lease => {
                        const option = document.createElement('option');
                        option.value = lease.leaseId;
                        option.textContent = `${lease.leaseNumber} - ${lease.propertyName} (${lease.tenantName})`;
                        select.appendChild(option);
                    });
                } else {
                    alert('Failed to load leases: ' + result.message);
                }
            } catch (error) {
                console.error('Error loading leases:', error);
                alert('An error occurred while loading leases');
            } finally {
                loading.style.display = 'none';
            }
        }

        function onLeaseSelected() {
            const leaseId = parseInt(document.getElementById('leaseSelect').value);
            selectedLease = activeLeasesData.find(l => l.leaseId === leaseId);

            if (selectedLease) {
                // Show lease info
                document.getElementById('infoPropertyName').textContent = selectedLease.propertyName;
                document.getElementById('infoPropertyAddress').textContent = selectedLease.propertyAddress;
                document.getElementById('infoTenantName').textContent = selectedLease.tenantName;
                document.getElementById('infoTenantEmail').textContent = selectedLease.tenantEmail;
                document.getElementById('infoMonthlyRent').textContent = formatCurrency(selectedLease.monthlyRent);
                document.getElementById('infoPaymentDueDay').textContent = `Day ${selectedLease.paymentDueDay} of each month`;
                document.getElementById('infoLeasePeriod').textContent =
                    `${formatDate(selectedLease.startDate)} - ${formatDate(selectedLease.endDate)}`;

                document.getElementById('leaseInfoCard').style.display = 'block';
                document.getElementById('additionalSection').style.display = 'block';
                document.getElementById('invoiceSummary').style.display = 'block';
                document.getElementById('createInvoiceBtn').disabled = false;

                updateTotalAmount();
            } else {
                document.getElementById('leaseInfoCard').style.display = 'none';
                document.getElementById('additionalSection').style.display = 'none';
                document.getElementById('invoiceSummary').style.display = 'none';
                document.getElementById('createInvoiceBtn').disabled = true;
            }
        }

        function updateTotalAmount() {
            if (!selectedLease) return;

            const additionalAmount = parseFloat(document.getElementById('additionalAmount').value) || 0;
            const monthlyRent = selectedLease.monthlyRent;
            const total = monthlyRent + additionalAmount;

            document.getElementById('summaryRent').textContent = formatCurrency(monthlyRent);
            document.getElementById('summaryAdditional').textContent = formatCurrency(additionalAmount);
            document.getElementById('summaryTotal').textContent = formatCurrency(total);
        }

        async function createInvoice() {
            if (!selectedLease) {
                alert('Please select a lease first');
                return;
            }

            const additionalAmount = parseFloat(document.getElementById('additionalAmount').value) || 0;
            const additionalDescription = document.getElementById('additionalDescription').value;

            const btn = document.getElementById('createInvoiceBtn');
            btn.disabled = true;
            btn.innerHTML = '<i class="bi bi-arrow-repeat spinning"></i> Creating...';

            try {
                const response = await fetch('@Url.Action("CreateInvoice", "Payment")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Accept': 'application/json'
                    },
                    body: JSON.stringify({
                        leaseId: selectedLease.leaseId,
                        additionalAmount: additionalAmount,
                        additionalDescription: additionalDescription
                    })
                });

                const result = await response.json();

                if (result.success) {
                    alert('Invoice created successfully!\n\nInvoice Number: ' + result.data.invoiceNumber);
                    closeCreateInvoiceModal();
                    location.reload();
                } else {
                    alert('Failed to create invoice: ' + result.message);
                }
            } catch (error) {
                console.error('Error creating invoice:', error);
                alert('An error occurred while creating invoice');
            } finally {
                btn.disabled = false;
                btn.innerHTML = '<i class="bi bi-check-circle"></i> Create Invoice';
            }
        }

        function formatCurrency(amount) {
            return new Intl.NumberFormat('en-US', {
                style: 'currency',
                currency: 'USD',
                minimumFractionDigits: 0,
                maximumFractionDigits: 0
            }).format(amount);
        }

        function formatDate(dateString) {
            const date = new Date(dateString);
            return date.toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'short',
                day: 'numeric'
            });
        }

        // Close modal when clicking outside
        document.getElementById('createInvoiceModal')?.addEventListener('click', function(e) {
            if (e.target === this) {
                closeCreateInvoiceModal();
            }
        });
    </script>
}

