@using PropertyManagementSystem.BLL.DTOs.Payments
@model List<PaymentDto>

@{
    ViewData["Title"] = "Lịch sử thanh toán";
    Layout = "_AuthLayout";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-history"></i> Lịch sử thanh toán của bạn</h2>
        <div class="btn-group">
            <a asp-action="Report" class="btn btn-outline-primary"><i class="fas fa-file-invoice"></i> Xem báo cáo</a>
            <a asp-action="MakePayment" class="btn btn-primary"><i class="fas fa-plus"></i> Thanh toán mới</a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="px-4">Mã GD</th>
                            <th>Hóa đơn</th>
                            <th>Số tiền (VND)</th>
                            <th>Phương thức</th>
                            <th>Ngày thực hiện</th>
                            <th>Trạng thái</th>
                            <th class="text-center">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model == null || !Model.Any())
                        {
                            <tr>
                                <td colspan="7" class="text-center py-5 text-muted">
                                    <i class="fas fa-receipt fa-3x mb-3 d-block"></i>
                                    Bạn chưa có giao dịch thanh toán nào.
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var p in Model)
                            {
                                <tr>
                                    <td class="px-4 font-weight-bold">#@p.PaymentId</td>
                                    <td><span class="badge bg-light text-dark border">#@p.InvoiceId</span></td>
                                    <td class="text-primary font-weight-bold">@p.Amount.ToString("N0")</td>
                                    <td>
                                        @switch (p.PaymentMethod)
                                        {
                                            case "BankTransfer":
                                                <span><i class="fas fa-university"></i> Chuyển khoản</span>
                                                break;
                                            case "Cash":

                                                <span><i class="fas fa-money-bill-wave"></i> Tiền mặt</span>
                                                break;
                                            case "CreditCard":

                                                <span><i class="fas fa-credit-card"></i> Thẻ</span>
                                                break;
                                            default:

                                                @p.PaymentMethod
                                                break;
                                        }
                                    </td>
                                    <td class="small">@p.PaymentDate.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        @if (p.Status == "Success" || p.Status == "Confirmed" || p.Status == "Completed")
                                        {
                                            <span class="badge bg-success">Thành công</span>
                                        }
                                        else if (p.Status == "Pending")
                                        {
                                            <span class="badge bg-warning text-dark">Đang xử lý</span>
                                        }
                                        else if (p.Status == "Refunded")
                                        {
                                            <span class="badge bg-info">Đã hoàn tiền</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">@p.Status</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (p.Status != "Refunded")
                                        {
                                            @* Nút mở Modal khiếu nại *@
                                            <button class="btn btn-sm btn-outline-danger"
                                                    onclick="openDisputeModal(@p.InvoiceId, '@p.Amount.ToString("N0")')">
                                                Khiếu nại
                                            </button>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@* MODAL KHIẾU NẠI *@
<div class="modal fade" id="disputeModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <form asp-controller="Payment" asp-action="RaiseDispute" method="post">
            <div class="modal-content border-0 shadow">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title"><i class="fas fa-exclamation-triangle"></i> Khiếu nại thanh toán</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="disputeInvoiceId" name="InvoiceId" />
                    <div class="alert alert-light border small mb-3">
                        Hóa đơn: <strong id="displayInvoiceId"></strong><br />
                        Số tiền: <strong id="displayAmount"></strong> VND
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Lý do khiếu nại</label>
                        <select name="Reason" class="form-select" required>
                            <option value="">-- Chọn lý do --</option>
                            <option value="Sai số tiền">Số tiền thực tế khác với hóa đơn</option>
                            <option value="Đã trừ tiền nhưng chưa xác nhận">Tôi đã chuyển tiền thành công nhưng hệ thống vẫn báo nợ</option>
                            <option value="Giao dịch bị trùng">Tôi bị trừ tiền 2 lần cho cùng 1 hóa đơn</option>
                            <option value="Khác">Lý do khác...</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Mô tả chi tiết</label>
                        <textarea name="Description" class="form-control" rows="4"
                                  placeholder="Vui lòng cung cấp Mã giao dịch ngân hàng hoặc thông tin cụ thể..." required></textarea>
                    </div>
                </div>
                <div class="modal-footer bg-light">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-danger">Gửi khiếu nại</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        function openDisputeModal(invoiceId, amountText) {
            // Điền dữ liệu vào các trường trong Modal
            document.getElementById('disputeInvoiceId').value = invoiceId;
            document.getElementById('displayInvoiceId').innerText = "#" + invoiceId;
            document.getElementById('displayAmount').innerText = amountText;

            // Hiển thị Modal bằng Bootstrap
            var myModal = new bootstrap.Modal(document.getElementById('disputeModal'));
            myModal.show();
        }
    </script>
}
