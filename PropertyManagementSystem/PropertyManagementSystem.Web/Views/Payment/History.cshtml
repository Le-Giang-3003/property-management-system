@using PropertyManagementSystem.BLL.DTOs.Payments
@model List<PaymentDto>

@{
    ViewData["Title"] = "Lịch sử thanh toán";
    Layout = "_AuthLayout"; // Đảm bảo đồng bộ với trang MakePayment
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-history"></i> Lịch sử thanh toán của bạn</h2>
        <a asp-action="MakePayment" class="btn btn-primary">
            <i class="fas fa-plus"></i> Thanh toán mới
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="px-4">Mã GD</th>
                            <th>Mã Hóa đơn</th>
                            <th>Số tiền (VND)</th>
                            <th>Phương thức</th>
                            <th>Ngày thực hiện</th>
                            <th class="text-center">Trạng thái</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model == null || !Model.Any())
                        {
                            <tr>
                                <td colspan="6" class="text-center py-5 text-muted">
                                    <i class="fas fa-receipt fa-3x mb-3 d-block"></i>
                                    Bạn chưa có giao dịch thanh toán nào.
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var p in Model)
                            {
                                <tr>
                                    <td class="px-4 font-weight-bold">#@p.PaymentId</td>
                                    <td><span class="badge bg-light text-dark border">@p.InvoiceId</span></td>
                                    <td class="text-primary font-weight-bold">@p.Amount.ToString("N0")</td>
                                    <td>
                                        @switch (p.PaymentMethod)
                                        {
                                            case "BankTransfer":
                                                <span><i class="fas fa-university"></i> Chuyển khoản</span>
                                                break;
                                            case "Cash":

                                                <span><i class="fas fa-money-bill-wave"></i> Tiền mặt</span>
                                                break;
                                            case "CreditCard":

                                                <span><i class="fas fa-credit-card"></i> Thẻ tín dụng</span>
                                                break;
                                            default:

                                                @p.PaymentMethod
                                                break;
                                        }
                                    </td>
                                    <td>@p.PaymentDate.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td class="text-center">
                                        @if (p.Status == "Success" || p.Status == "Completed")
                                        {
                                            <span class="badge bg-success"><i class="fas fa-check-circle"></i> Thành công</span>
                                        }
                                        else if (p.Status == "Pending")
                                        {
                                            <span class="badge bg-warning text-dark"><i class="fas fa-clock"></i> Đang xử lý</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">@p.Status</span>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-4 text-center">
        <p class="text-muted small">Nếu có bất kỳ thắc mắc nào về giao dịch, vui lòng liên hệ Ban quản lý.</p>
    </div>
</div>
