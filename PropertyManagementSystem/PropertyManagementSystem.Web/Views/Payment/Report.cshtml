@model PropertyManagementSystem.Web.ViewModels.Payment.PaymentReportViewModel

@{
    ViewData["Title"] = "Báo cáo doanh thu";
    Layout = "_AuthLayout";
    // Kiểm tra xem người đang xem có phải Admin không (RoleId = 1)
    var isAdmin = User.FindFirst("RoleId")?.Value == "1";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary mb-0">
                @(isAdmin ? "Báo cáo doanh thu hệ thống" : "Báo cáo thanh toán cá nhân")
            </h2>
            <p class="text-muted small">Thời gian: @Model.FromDate.ToString("dd/MM/yyyy") - @Model.ToDate.ToString("dd/MM/yyyy")</p>
        </div>
        <button onclick="window.print()" class="btn btn-outline-dark shadow-sm">
            <i class="bi bi-printer"></i> In báo cáo
        </button>
    </div>

    <!-- Form Lọc -->
    <div class="card border-0 shadow-sm mb-4 bg-light">
        <div class="card-body">
            <form method="get" asp-action="Report" class="row g-3 align-items-end">
                <div class="col-md-3">
                    <label class="form-label small fw-bold">Từ ngày</label>
                    <input type="date" name="fromDate" class="form-control" value="@Model.FromDate.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-3">
                    <label class="form-label small fw-bold">Đến ngày</label>
                    <input type="date" name="toDate" class="form-control" value="@Model.ToDate.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-3">
                    <label class="form-label small fw-bold">Phương thức</label>
                    <select name="paymentMethod" class="form-select">
                        <option value="">-- Tất cả --</option>
                        <option value="Cash" selected="@(Model.SelectedPaymentMethod == "Cash")">Tiền mặt</option>
                        <option value="BankTransfer" selected="@(Model.SelectedPaymentMethod == "BankTransfer")">Chuyển khoản</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-primary w-100">Lọc dữ liệu</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Thống kê tổng quát -->
    <div class="row g-3 mb-4">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm bg-primary text-white p-3">
                <div class="small opacity-75 text-uppercase">Tổng doanh thu</div>
                <h3 class="fw-bold mb-0">@Model.TotalAmountPaid.ToString("N0") VND</h3>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card border-0 shadow-sm bg-success text-white p-3">
                <div class="small opacity-75 text-uppercase">Số giao dịch</div>
                <h3 class="fw-bold mb-0">@Model.TransactionCount</h3>
            </div>
        </div>
    </div>

    <!-- Bảng dữ liệu -->
    <div class="card border-0 shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4">Ngày</th>
                        @if (isAdmin)
                        {
                            <th>Người thuê</th>
                        }
 @* Hiện cột này nếu là Admin *@
                        <th>Hóa đơn</th>
                        <th>Phương thức</th>
                        <th class="text-end pe-4">Số tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model.PaymentHistory)
                    {
                        <tr>
                            <td class="ps-4">@p.PaymentDate.ToString("dd/MM/yyyy HH:mm")</td>
                            @if (isAdmin)
                            {
                                <td><i class="bi bi-person-circle"></i> @p.TenantName</td>
                            }
                            <td>#@p.InvoiceId</td>
                            <td>@p.PaymentMethod</td>
                            <td class="text-end pe-4 fw-bold text-primary">@p.Amount.ToString("N0")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
