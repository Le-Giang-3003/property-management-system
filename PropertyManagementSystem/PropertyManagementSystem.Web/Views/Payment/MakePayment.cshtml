@using PropertyManagementSystem.Web.ViewModels.Payment
@model MakePaymentViewModel

@{
    ViewData["Title"] = "Thanh toán hóa đơn";
    Layout = "_AuthLayout";
}

<div class="container mt-5">
    <h2>Thanh toán hóa đơn</h2>
    <hr />

    <div class="row">
        <div class="col-md-8">
            <form asp-action="MakePayment" method="post">
                @Html.AntiForgeryToken()

                <!-- Invoice Selection -->  
                <div class="mb-3">
                    <label asp-for="InvoiceId" class="form-label">Hóa đơn</label>
                    <select asp-for="InvoiceId" class="form-select">
                        <option value="">-- Chọn hóa đơn --</option>
                        @foreach (var invoice in Model.AvailableInvoices)
                        {
                            <option value="@invoice.InvoiceId">
                                @invoice.InvoiceNumber - Còn nợ: @invoice.RemainingAmount.ToString("N0") VND (Hạn: @invoice.DueDate.ToString("dd/MM/yyyy"))
                            </option>
                        }
                    </select>
                    <span asp-validation-for="InvoiceId" class="text-danger"></span>
                </div>

                <!-- Amount -->
                <div class="mb-3">
                    <label asp-for="Amount" class="form-label">Số tiền thanh toán (VND)</label>
                    <input asp-for="Amount" type="number" class="form-control" step="0.01" placeholder="0.00" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>

                <!-- Payment Method -->
                <div class="mb-3">
                    <label asp-for="PaymentMethod" class="form-label">Phương thức thanh toán</label>
                    <select asp-for="PaymentMethod" class="form-select">
                        <option value="">-- Chọn phương thức --</option>
                        <option value="Cash">Tiền mặt</option>
                        <option value="BankTransfer">Chuyển khoản ngân hàng</option>
                        <option value="CreditCard">Thẻ tín dụng</option>
                    </select>
                    <!-- QR cho chuyển khoản -->
                    <div id="qrArea" class="mb-3" style="display:none;">
                        <label class="form-label">Quét mã QR để chuyển khoản</label>
                        <div>
                            <img id="qrImage" src="" alt="QR Code" style="max-width:250px;" />
                        </div>
                    </div>

                    <span asp-validation-for="PaymentMethod" class="text-danger"></span>
                </div>

                <!-- Notes -->
                <div class="mb-3">
                    <label asp-for="Notes" class="form-label">Ghi chú (tùy chọn)</label>
                    <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Nhập ghi chú nếu có..."></textarea>
                </div>

                <!-- Buttons -->
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Thanh toán</button>
                    <a asp-action="History" class="btn btn-secondary">Hủy</a>
                </div>

                <!-- Display validation summary -->
                        @if (TempData["ErrorMessage"] != null)
                    {
                    <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
                    }
            </form>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5>Hướng dẫn</h5>
                </div>
                <div class="card-body">
                    <p><strong>Bước 1:</strong> Chọn hóa đơn cần thanh toán</p>
                    <p><strong>Bước 2:</strong> Nhập số tiền thanh toán</p>
                    <p><strong>Bước 3:</strong> Chọn phương thức thanh toán</p>
                    <p><strong>Bước 4:</strong> Bấm "Thanh toán"</p>
                    <hr />
                    <p class="text-muted small">Bạn có thể thanh toán một phần hoặc toàn bộ số tiền còn nợ.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        const methodSelect = document.getElementById('PaymentMethod');
        const invoiceSelect = document.getElementById('InvoiceId');
        const amountInput = document.getElementById('Amount');
        const qrArea = document.getElementById('qrArea');
        const qrImage = document.getElementById('qrImage');

        function updateQr() {
            if (methodSelect.value === 'BankTransfer' &&
                invoiceSelect.value &&
                amountInput.value > 0) {

                qrArea.style.display = 'block';

                const url = '@Url.Action("GenerateBankTransferQr", "Payment")'
                    + '?invoiceId=' + encodeURIComponent(invoiceSelect.value)
                    + '&amount=' + encodeURIComponent(amountInput.value);

                qrImage.src = url;
            } else {
                qrArea.style.display = 'none';
                qrImage.src = '';
            }
        }

        methodSelect.addEventListener('change', updateQr);
        invoiceSelect.addEventListener('change', updateQr);
        amountInput.addEventListener('input', updateQr);
    </script>
}
}
