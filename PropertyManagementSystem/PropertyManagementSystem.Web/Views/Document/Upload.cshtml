@{
    ViewData["Title"] = "Upload Tài liệu";
    Layout = "_AuthLayout";
    var entityType = ViewBag.EntityType as string ?? "";
    var entityId = ViewBag.EntityId as int? ?? 0;
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-cloud-upload"></i> Upload Tài liệu
                    </h4>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Upload" method="post" enctype="multipart/form-data" id="uploadForm">
                        @Html.AntiForgeryToken()

                        <!-- Document Type -->
                        <div class="mb-3">
                            <label class="form-label">
                                <i class="bi bi-file-earmark"></i> Loại tài liệu <span class="text-danger">*</span>
                            </label>
                            <select name="documentType" class="form-select" required>
                                <option value="">-- Chọn loại tài liệu --</option>
                                @foreach (var item in ViewBag.DocumentTypes as List<SelectListItem>)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            </select>
                        </div>

                        <!-- Entity Type -->
                        <div class="mb-3">
                            <label class="form-label">
                                <i class="bi bi-folder"></i> Liên quan đến <span class="text-danger">*</span>
                            </label>
                            <select name="entityType" class="form-select" required value="@entityType">
                                <option value="">-- Chọn loại --</option>
                                @foreach (var item in ViewBag.EntityTypes as List<SelectListItem>)
                                {
                                    <option value="@item.Value" selected="@(item.Value == entityType)">@item.Text</option>
                                }
                            </select>
                        </div>

                        <!-- Entity ID -->
                        <div class="mb-3">
                            <label class="form-label">
                                <i class="bi bi-hash"></i> ID của đối tượng <span class="text-danger">*</span>
                            </label>
                            <input type="number" name="entityId" class="form-control"
                                   placeholder="VD: 1, 2, 3..." required min="1" value="@entityId" />
                            <small class="form-text text-muted">
                                Nhập ID của Property, Lease, Invoice, v.v.
                            </small>
                        </div>

                        <!-- File Upload -->
                        <div class="mb-3">
                            <label class="form-label">
                                <i class="bi bi-paperclip"></i> Chọn file <span class="text-danger">*</span>
                            </label>
                            <input type="file" name="file" class="form-control" id="fileInput" required />
                            <div class="form-text">
                                <strong>Định dạng cho phép:</strong>
                                <ul class="mb-0 mt-1">
                                    <li>Hình ảnh: JPG, JPEG, PNG, WEBP (tối đa 5MB)</li>
                                    <li>Video: MP4 (tối đa 50MB)</li>
                                    <li>Tài liệu: PDF, DOCX, XLSX, PPTX, CSV (tối đa 10MB)</li>
                                    <li>Archive: ZIP - chỉ Admin (tối đa 20MB)</li>
                                </ul>
                            </div>
                            <div id="fileInfo" class="mt-2"></div>
                        </div>

                        <!-- Description -->
                        <div class="mb-3">
                            <label class="form-label">
                                <i class="bi bi-text-left"></i> Mô tả (không bắt buộc)
                            </label>
                            <textarea name="description" class="form-control" rows="3"
                                      placeholder="Nhập mô tả về tài liệu..."></textarea>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-between">
                            <a asp-action="MyDocuments" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-primary" id="submitBtn">
                                <i class="bi bi-upload"></i> Upload
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // File preview
        document.getElementById('fileInput').addEventListener('change', function(e) {
            const file = e.target.files[0];
            const fileInfo = document.getElementById('fileInfo');

            if (file) {
                const size = (file.size / (1024 * 1024)).toFixed(2);
                fileInfo.innerHTML = `
                    <div class="alert alert-info">
                        <strong>File đã chọn:</strong> ${file.name}<br>
                        <strong>Kích thước:</strong> ${size} MB<br>
                        <strong>Loại:</strong> ${file.type || 'Unknown'}
                    </div>
                `;
            }
        });

        // Submit validation
        document.getElementById('uploadForm').addEventListener('submit', function(e) {
            const submitBtn = document.getElementById('submitBtn');
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Đang upload...';
        });
    </script>
}
