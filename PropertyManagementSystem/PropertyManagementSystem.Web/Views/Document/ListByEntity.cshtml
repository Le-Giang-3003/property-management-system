@model IEnumerable<PropertyManagementSystem.DAL.Entities.Document>

@{
    ViewData["Title"] = "Tài liệu";
    Layout = "_AuthLayout";
    var entityType = ViewBag.EntityType as string ?? "";
    var entityId = ViewBag.EntityId as int? ?? 0;
    var entityDisplayName = ViewBag.EntityDisplayName as string ?? entityType;
}

<div class="container mt-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>
                <i class="bi bi-folder2-open"></i> Tài liệu - @entityDisplayName #@entityId
            </h2>
            <p class="text-muted">
                @if (Model.Any())
                {
                    <span>Tổng cộng: <strong>@Model.Count()</strong> tài liệu</span>
                }
                else
                {
                    <span>Chưa có tài liệu nào</span>
                }
            </p>
        </div>
        <div>
            <a asp-action="Upload" asp-route-entityType="@entityType" asp-route-entityId="@entityId"
               class="btn btn-primary">
                <i class="bi bi-cloud-upload"></i> Upload tài liệu
            </a>
        </div>
    </div>

    <!-- Notifications -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Documents Grid -->
    <div class="row">
        @if (Model != null && Model.Any())
        {
            @foreach (var doc in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <div class="text-center mb-3">
                                @{
                                    var iconClass = GetFileIconClass(doc.FileType);
                                }
                                <i class="@iconClass" style="font-size: 4rem;"></i>
                            </div>
                            <h5 class="card-title text-truncate" title="@doc.FileName">
                                @doc.FileName
                            </h5>
                            <div class="mb-2">
                                <span class="badge bg-info">@doc.DocumentType</span>
                                <span class="badge bg-secondary">@doc.FileType.ToUpper()</span>
                            </div>
                            @if (!string.IsNullOrEmpty(doc.Description))
                            {
                                <p class="card-text text-muted small">@doc.Description</p>
                            }
                            <ul class="list-unstyled small text-muted">
                                <li><i class="bi bi-hdd"></i> @FormatFileSize(doc.FileSize)</li>
                                <li><i class="bi bi-calendar"></i> @doc.UploadedAt.ToString("dd/MM/yyyy")</li>
                                <li><i class="bi bi-person"></i> @doc.UploadedByUser?.FullName</li>
                            </ul>
                        </div>
                        <div class="card-footer bg-white">
                            <div class="btn-group w-100">
                                <a asp-action="Download" asp-route-id="@doc.DocumentId"
                                   class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-download"></i> Tải
                                </a>
                                <a asp-action="Details" asp-route-id="@doc.DocumentId"
                                   class="btn btn-sm btn-outline-info">
                                    <i class="bi bi-eye"></i> Xem
                                </a>
                                <button type="button" class="btn btn-sm btn-outline-danger"
                                        data-bs-toggle="modal"
                                        data-bs-target="#deleteModal@(doc.DocumentId)">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Delete Modal -->
                    <div class="modal fade" id="deleteModal@(doc.DocumentId)" tabindex="-1">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Xác nhận xóa</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>
                                <div class="modal-body">
                                    Bạn có chắc chắn muốn xóa tài liệu <strong>@doc.FileName</strong>?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                                    <form asp-action="Delete" asp-route-id="@doc.DocumentId" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                                        <button type="submit" class="btn btn-danger">Xóa</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-inbox" style="font-size: 4rem; color: #ccc;"></i>
                        <h4 class="text-muted mt-3">Chưa có tài liệu nào</h4>
                        <p class="text-muted">Upload tài liệu cho @entityDisplayName này</p>
                        <a asp-action="Upload" asp-route-entityType="@entityType" asp-route-entityId="@entityId"
                           class="btn btn-primary mt-2">
                            <i class="bi bi-cloud-upload"></i> Upload ngay
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@functions {
    string GetFileIconClass(string fileType)
    {
        return fileType.ToLower() switch
        {
            "jpg" or "jpeg" or "png" or "webp" => "bi bi-file-image text-success",
            "pdf" => "bi bi-file-pdf text-danger",
            "docx" => "bi bi-file-word text-primary",
            "xlsx" => "bi bi-file-excel text-success",
            "pptx" => "bi bi-file-ppt text-warning",
            "mp4" => "bi bi-file-play text-info",
            "zip" => "bi bi-file-zip text-secondary",
            _ => "bi bi-file-earmark text-muted"
        };
    }

    string FormatFileSize(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB" };
        double len = bytes;
        int order = 0;
        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len = len / 1024;
        }
        return $"{len:0.##} {sizes[order]}";
    }
}
