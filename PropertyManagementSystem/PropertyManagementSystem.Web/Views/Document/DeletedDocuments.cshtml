@model IEnumerable<PropertyManagementSystem.DAL.Entities.Document>

@{
    ViewData["Title"] = "Trash - Deleted Documents";
    Layout = "_AuthLayout";
}

<div class="container mt-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="bi bi-trash text-danger"></i> Trash - Deleted Documents</h2>
            <p class="text-muted">
                @if (Model.Any())
                {
                    <span>Total: <strong>@Model.Count()</strong> deleted documents</span>
                }
                else
                {
                    <span>Trash is empty</span>
                }
            </p>
        </div>
        <div>
            <a asp-action="MyDocuments" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back
            </a>
        </div>
    </div>

    <!-- Notifications -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Info Alert -->
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i>
        <strong>Note:</strong> Only Admin can permanently delete or restore documents.
    </div>

    <!-- Deleted Documents List -->
    <div class="card shadow">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0"><i class="bi bi-trash"></i> Deleted Documents List</h5>
        </div>
        <div class="card-body p-0">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 50px;"></th>
                                <th>File Name</th>
                                <th>Type</th>
                                <th>Related To</th>
                                <th>Uploaded By</th>
                                <th>Deleted At</th>
                                <th>Deleted By</th>
                                <th style="width: 220px;">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var doc in Model)
                            {
                                <tr class="table-danger">
                                    <td class="text-center">
                                        @{
                                            var iconClass = GetFileIconClass(doc.FileType);
                                        }
                                        <i class="@iconClass" style="font-size: 1.5rem;"></i>
                                    </td>
                                    <td>
                                        <strong>@doc.FileName</strong>
                                        <br>
                                        <small class="text-muted">@FormatFileSize(doc.FileSize)</small>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@doc.DocumentType</span>
                                        <br>
                                        <small class="text-muted">@doc.FileType.ToUpper()</small>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@doc.EntityType</span>
                                        <small class="text-muted">#@doc.EntityId</small>
                                    </td>
                                    <td>
                                        @if (doc.UploadedByUser != null)
                                        {
                                            <span>@doc.UploadedByUser.FullName</span>
                                            <br>
                                            <small class="text-muted">@doc.UploadedByUser.Email</small>
                                        }
                                    </td>
                                    <td>
                                        @if (doc.DeletedAt.HasValue)
                                        {
                                            <small>@doc.DeletedAt.Value.ToString("dd/MM/yyyy HH:mm")</small>
                                        }
                                    </td>
                                    <td>
                                        @if (doc.DeletedByUser != null)
                                        {
                                            <span>@doc.DeletedByUser.FullName</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <button type="button" class="btn btn-success"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#restoreModal@(doc.DocumentId)"
                                                    title="Restore">
                                                <i class="bi bi-arrow-counterclockwise"></i> Restore
                                            </button>
                                            <button type="button" class="btn btn-danger"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#permanentDeleteModal@(doc.DocumentId)"
                                                    title="Delete Permanently">
                                                <i class="bi bi-trash-fill"></i> Delete Permanently
                                            </button>
                                        </div>

                                        <!-- Restore Modal -->
                                        <div class="modal fade" id="restoreModal@(doc.DocumentId)" tabindex="-1">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header bg-success text-white">
                                                        <h5 class="modal-title">
                                                            <i class="bi bi-arrow-counterclockwise"></i> Restore Document
                                                        </h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        Are you sure you want to restore document <strong>@doc.FileName</strong>?
                                                        <div class="alert alert-success mt-3">
                                                            <i class="bi bi-info-circle"></i> The document will be restored and can be used again.
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                        <form asp-action="Restore" asp-route-id="@doc.DocumentId" method="post" class="d-inline">
                                                            @Html.AntiForgeryToken()
                                                            <button type="submit" class="btn btn-success">
                                                                <i class="bi bi-arrow-counterclockwise"></i> Restore
                                                            </button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Permanent Delete Modal -->
                                        <div class="modal fade" id="permanentDeleteModal@(doc.DocumentId)" tabindex="-1">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header bg-danger text-white">
                                                        <h5 class="modal-title">
                                                            <i class="bi bi-exclamation-triangle"></i> Delete Permanently
                                                        </h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p><strong>WARNING:</strong> This action cannot be undone!</p>
                                                        <p>Are you sure you want to permanently delete document <strong>@doc.FileName</strong>?</p>
                                                        <div class="alert alert-danger">
                                                            <i class="bi bi-exclamation-triangle"></i>
                                                            File will be deleted from storage and database, cannot be restored!
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                        <form asp-action="PermanentDelete" asp-route-id="@doc.DocumentId" method="post" class="d-inline">
                                                            @Html.AntiForgeryToken()
                                                            <button type="submit" class="btn btn-danger">
                                                                <i class="bi bi-trash-fill"></i> Delete Permanently
                                                            </button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-check-circle text-success" style="font-size: 4rem;"></i>
                    <h4 class="text-muted mt-3">Trash is empty</h4>
                    <p class="text-muted">No documents have been deleted</p>
                    <a asp-action="MyDocuments" class="btn btn-primary mt-2">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@functions {
    string GetFileIconClass(string fileType)
    {
        return fileType.ToLower() switch
        {
            "jpg" or "jpeg" or "png" or "webp" => "bi bi-file-image text-success",
            "pdf" => "bi bi-file-pdf text-danger",
            "docx" => "bi bi-file-word text-primary",
            "xlsx" => "bi bi-file-excel text-success",
            "pptx" => "bi bi-file-ppt text-warning",
            "mp4" => "bi bi-file-play text-info",
            "zip" => "bi bi-file-zip text-secondary",
            _ => "bi bi-file-earmark text-muted"
        };
    }

    string FormatFileSize(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB" };
        double len = bytes;
        int order = 0;
        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len = len / 1024;
        }
        return $"{len:0.##} {sizes[order]}";
    }
}

@section Scripts {
    <script>
        // Auto-hide alerts
        setTimeout(() => {
            document.querySelectorAll('.alert').forEach(alert => {
                var bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
    </script>
}
