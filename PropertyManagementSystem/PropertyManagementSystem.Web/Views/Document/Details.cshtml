@model PropertyManagementSystem.DAL.Entities.Document

@{
    ViewData["Title"] = "Document Details";
    Layout = "_AuthLayout";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="bi bi-file-earmark-text"></i> Document Details</h2>
                <div class="btn-group">
                    <a asp-action="Download" asp-route-id="@Model.DocumentId"
                       class="btn btn-primary">
                        <i class="bi bi-download"></i> Download
                    </a>
                    <button type="button" class="btn btn-danger"
                            data-bs-toggle="modal"
                            data-bs-target="#deleteModal">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                    <a asp-action="MyDocuments" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back
                    </a>
                </div>
            </div>

            <!-- Notifications -->
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="card shadow">
                <div class="card-body">
                    <div class="row">
                        <!-- File Icon/Preview -->
                        <div class="col-md-4 text-center border-end">
                            @{
                                var iconClass = GetFileIconClass(Model.FileType);
                                var isImage = Model.FileType.ToLower() is "jpg" or "jpeg" or "png" or "webp";
                            }

                            @if (isImage)
                            {
                                <img src="@Model.FileUrl" alt="@Model.FileName"
                                     class="img-fluid rounded shadow-sm mb-3"
                                     style="max-height: 300px; object-fit: cover;" />
                            }
                            else
                            {
                                <i class="@iconClass" style="font-size: 8rem;"></i>
                            }

                            <h5 class="mt-3">@Model.FileName</h5>
                            <p class="text-muted">@Model.FileType.ToUpper()</p>

                            <!-- Quick Actions -->
                            <div class="d-grid gap-2">
                                <a asp-action="Download" asp-route-id="@Model.DocumentId"
                                   class="btn btn-outline-primary">
                                    <i class="bi bi-download"></i> Download
                                </a>
                                @if (isImage)
                                {
                                    <a href="@Model.FileUrl" target="_blank" class="btn btn-outline-info">
                                        <i class="bi bi-eye"></i> View Fullscreen
                                    </a>
                                }
                            </div>
                        </div>

                        <!-- Document Info -->
                        <div class="col-md-8">
                            <h4 class="mb-4">Document Information</h4>

                            <table class="table table-borderless">
                                <tbody>
                                    <tr>
                                        <td class="fw-bold" style="width: 200px;">
                                            <i class="bi bi-file-earmark"></i> Document Type:
                                        </td>
                                        <td>
                                            <span class="badge bg-info">@Model.DocumentType</span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="fw-bold">
                                            <i class="bi bi-folder"></i> Related To:
                                        </td>
                                        <td>
                                            <span class="badge bg-secondary">@Model.EntityType</span>
                                            <span class="text-muted">#@Model.EntityId</span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="fw-bold">
                                            <i class="bi bi-hdd"></i> Size:
                                        </td>
                                        <td>@FormatFileSize(Model.FileSize)</td>
                                    </tr>
                                    <tr>
                                        <td class="fw-bold">
                                            <i class="bi bi-person"></i> Uploaded By:
                                        </td>
                                        <td>
                                            @if (Model.UploadedByUser != null)
                                            {
                                                <span>@Model.UploadedByUser.FullName</span>
                                                <br>
                                                <small class="text-muted">@Model.UploadedByUser.Email</small>
                                            }
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="fw-bold">
                                            <i class="bi bi-calendar"></i> Upload Date:
                                        </td>
                                        <td>@Model.UploadedAt.ToString("dd/MM/yyyy HH:mm:ss")</td>
                                    </tr>
                                    <tr>
                                        <td class="fw-bold">
                                            <i class="bi bi-link-45deg"></i> File Path:
                                        </td>
                                        <td>
                                            <code class="small">@Model.FilePath</code>
                                        </td>
                                    </tr>
                                    @if (!string.IsNullOrEmpty(Model.Description))
                                    {
                                        <tr>
                                            <td class="fw-bold align-top">
                                                <i class="bi bi-text-left"></i> Description:
                                            </td>
                                            <td>@Model.Description</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                            @if (Model.IsDeleted)
                            {
                                <div class="alert alert-warning mt-4">
                                    <i class="bi bi-exclamation-triangle"></i>
                                    <strong>Document has been deleted</strong>
                                    <br>
                                    Deleted at: @Model.DeletedAt?.ToString("dd/MM/yyyy HH:mm")
                                    @if (Model.DeletedByUser != null)
                                    {
                                        <br>
                                        <span>Deleted by: @Model.DeletedByUser.FullName</span>
                                    }
                                </div>
                            }

                            <!-- File Metadata -->
                            <div class="card bg-light mt-4">
                                <div class="card-body">
                                    <h6 class="card-title">Metadata</h6>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <ul class="list-unstyled small mb-0">
                                                <li><strong>Document ID:</strong> @Model.DocumentId</li>
                                                <li><strong>Entity ID:</strong> @Model.EntityId</li>
                                                <li><strong>File Type:</strong> @Model.FileType</li>
                                            </ul>
                                        </div>
                                        <div class="col-md-6">
                                            <ul class="list-unstyled small mb-0">
                                                <li><strong>Uploaded By:</strong> User #@Model.UploadedBy</li>
                                                <li><strong>Is Deleted:</strong> @(Model.IsDeleted ? "Yes" : "No")</li>
                                                <li><strong>File Size:</strong> @Model.FileSize bytes</li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="bi bi-exclamation-triangle text-warning"></i> Confirm Delete
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this document?</p>
                <div class="alert alert-danger">
                    <strong>File Name:</strong> @Model.FileName<br>
                    <strong>Type:</strong> @Model.DocumentType<br>
                    <strong>Size:</strong> @FormatFileSize(Model.FileSize)
                </div>
                <p class="text-muted small mb-0">
                    <i class="bi bi-info-circle"></i> The document will be moved to trash and can be restored later.
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x"></i> Cancel
                </button>
                <form asp-action="Delete" asp-route-id="@Model.DocumentId" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetFileIconClass(string fileType)
    {
        return fileType.ToLower() switch
        {
            "jpg" or "jpeg" or "png" or "webp" => "bi bi-file-image text-success",
            "pdf" => "bi bi-file-pdf text-danger",
            "docx" => "bi bi-file-word text-primary",
            "xlsx" => "bi bi-file-excel text-success",
            "pptx" => "bi bi-file-ppt text-warning",
            "mp4" => "bi bi-file-play text-info",
            "csv" => "bi bi-file-spreadsheet text-info",
            "zip" => "bi bi-file-zip text-secondary",
            _ => "bi bi-file-earmark text-muted"
        };
    }

    string FormatFileSize(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB" };
        double len = bytes;
        int order = 0;
        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len = len / 1024;
        }
        return $"{len:0.##} {sizes[order]}";
    }
}

@section Scripts {
    <script>
        // Auto-hide alerts
        setTimeout(() => {
            document.querySelectorAll('.alert').forEach(alert => {
                var bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
    </script>
}
