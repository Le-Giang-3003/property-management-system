@using Microsoft.AspNetCore.Authentication
@using System.Security.Claims
@model IEnumerable<PropertyManagementSystem.BLL.DTOs.Schedule.PropertyViewingDto>

@{
    ViewData["Title"] = "Welcome";
    Layout = null;
    var isAuthenticated = User.Identity?.IsAuthenticated ?? false;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Property Manager - Modern Property Management System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
    <style>
        /* Landing Page Styles */
        .pm-landing {
            min-height: 100vh;
            background: var(--pm-bg);
        }

        /* Navigation */
        .pm-nav {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid var(--pm-border);
            z-index: 1000;
            padding: var(--pm-space-4) 0;
        }

        .pm-nav-container {
            max-width: 1280px;
            margin: 0 auto;
            padding: 0 var(--pm-space-6);
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .pm-nav-brand {
            display: flex;
            align-items: center;
            gap: var(--pm-space-3);
            text-decoration: none;
        }

        .pm-nav-brand-icon {
            width: 44px;
            height: 44px;
            background: linear-gradient(135deg, var(--pm-primary) 0%, var(--pm-primary-dark) 100%);
            border-radius: var(--pm-radius-lg);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 22px;
        }

        .pm-nav-brand-text {
            font-size: var(--pm-text-xl);
            font-weight: var(--pm-font-bold);
            color: var(--pm-text);
        }

        .pm-nav-actions {
            display: flex;
            align-items: center;
            gap: var(--pm-space-3);
        }

        /* Hero Section */
        .pm-hero {
            padding: 160px 0 100px;
            background: linear-gradient(180deg, white 0%, var(--pm-slate-50) 100%);
            position: relative;
            overflow: hidden;
        }

        .pm-hero::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -20%;
            width: 60%;
            height: 120%;
            background: radial-gradient(circle, var(--pm-primary-50) 0%, transparent 70%);
            pointer-events: none;
        }

        .pm-hero-container {
            max-width: 1280px;
            margin: 0 auto;
            padding: 0 var(--pm-space-6);
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: var(--pm-space-16);
            align-items: center;
            position: relative;
            z-index: 1;
        }

        .pm-hero-content h1 {
            font-size: 56px;
            font-weight: var(--pm-font-bold);
            line-height: 1.1;
            color: var(--pm-text);
            margin: 0 0 var(--pm-space-6);
        }

        .pm-hero-content h1 span {
            color: var(--pm-primary);
        }

        .pm-hero-content p {
            font-size: var(--pm-text-xl);
            color: var(--pm-text-secondary);
            margin: 0 0 var(--pm-space-8);
            line-height: 1.6;
        }

        .pm-hero-actions {
            display: flex;
            gap: var(--pm-space-4);
        }

        .pm-hero-image {
            position: relative;
        }

        .pm-hero-image img {
            width: 100%;
            border-radius: var(--pm-radius-2xl);
            box-shadow: var(--pm-shadow-xl);
        }

        .pm-hero-stats {
            position: absolute;
            bottom: -30px;
            left: -30px;
            background: white;
            border-radius: var(--pm-radius-xl);
            padding: var(--pm-space-5);
            box-shadow: var(--pm-shadow-lg);
            display: flex;
            gap: var(--pm-space-8);
        }

        .pm-hero-stat {
            text-align: center;
        }

        .pm-hero-stat-value {
            font-size: var(--pm-text-2xl);
            font-weight: var(--pm-font-bold);
            color: var(--pm-primary);
        }

        .pm-hero-stat-label {
            font-size: var(--pm-text-sm);
            color: var(--pm-text-secondary);
        }

        /* Features Section */
        .pm-features {
            padding: 100px 0;
            background: white;
        }

        .pm-section-container {
            max-width: 1280px;
            margin: 0 auto;
            padding: 0 var(--pm-space-6);
        }

        .pm-section-header {
            text-align: center;
            max-width: 600px;
            margin: 0 auto var(--pm-space-12);
        }

        .pm-section-header h2 {
            font-size: var(--pm-text-3xl);
            font-weight: var(--pm-font-bold);
            color: var(--pm-text);
            margin: 0 0 var(--pm-space-4);
        }

        .pm-section-header p {
            font-size: var(--pm-text-lg);
            color: var(--pm-text-secondary);
            margin: 0;
        }

        .pm-features-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: var(--pm-space-8);
        }

        .pm-feature-card {
            background: var(--pm-slate-50);
            border-radius: var(--pm-radius-xl);
            padding: var(--pm-space-8);
            text-align: center;
            transition: all var(--pm-transition);
        }

        .pm-feature-card:hover {
            transform: translateY(-4px);
            box-shadow: var(--pm-shadow-lg);
            background: white;
        }

        .pm-feature-icon {
            width: 72px;
            height: 72px;
            margin: 0 auto var(--pm-space-5);
            background: linear-gradient(135deg, var(--pm-primary-100) 0%, var(--pm-primary-50) 100%);
            border-radius: var(--pm-radius-xl);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 32px;
            color: var(--pm-primary);
        }

        .pm-feature-card h3 {
            font-size: var(--pm-text-xl);
            font-weight: var(--pm-font-semibold);
            color: var(--pm-text);
            margin: 0 0 var(--pm-space-3);
        }

        .pm-feature-card p {
            font-size: var(--pm-text-base);
            color: var(--pm-text-secondary);
            margin: 0;
            line-height: 1.6;
        }

        /* CTA Section */
        .pm-cta {
            padding: 80px 0;
            background: linear-gradient(135deg, var(--pm-primary) 0%, var(--pm-primary-dark) 100%);
        }

        .pm-cta-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 0 var(--pm-space-6);
            text-align: center;
        }

        .pm-cta h2 {
            font-size: var(--pm-text-3xl);
            font-weight: var(--pm-font-bold);
            color: white;
            margin: 0 0 var(--pm-space-4);
        }

        .pm-cta p {
            font-size: var(--pm-text-lg);
            color: rgba(255, 255, 255, 0.9);
            margin: 0 0 var(--pm-space-8);
        }

        .pm-cta .pm-btn-primary {
            background: white;
            color: var(--pm-primary);
            box-shadow: none;
        }

        .pm-cta .pm-btn-primary:hover {
            background: rgba(255, 255, 255, 0.9);
            transform: translateY(-2px);
            color: var(--pm-primary);
        }

        /* Footer */
        .pm-footer {
            background: var(--pm-slate-900);
            color: var(--pm-slate-300);
            padding: var(--pm-space-8) 0;
        }

        .pm-footer-container {
            max-width: 1280px;
            margin: 0 auto;
            padding: 0 var(--pm-space-6);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .pm-footer p {
            margin: 0;
            font-size: var(--pm-text-sm);
        }

        .pm-footer-links {
            display: flex;
            gap: var(--pm-space-6);
        }

        .pm-footer-links a {
            color: var(--pm-slate-400);
            text-decoration: none;
            font-size: var(--pm-text-sm);
        }

        .pm-footer-links a:hover {
            color: white;
        }

        /* Responsive */
        @@media (max-width: 1024px) {
            .pm-hero-container {
                grid-template-columns: 1fr;
                gap: var(--pm-space-8);
            }

            .pm-hero-content h1 {
                font-size: 42px;
            }

            .pm-hero-image {
                display: none;
            }

            .pm-features-grid {
                grid-template-columns: 1fr;
            }
        }

        @@media (max-width: 768px) {
            .pm-hero {
                padding: 120px 0 60px;
            }

            .pm-hero-content h1 {
                font-size: 32px;
            }

            .pm-hero-actions {
                flex-direction: column;
            }

            .pm-nav-actions .pm-btn-secondary {
                display: none;
            }

            .pm-footer-container {
                flex-direction: column;
                gap: var(--pm-space-4);
                text-align: center;
            }
        }
    </style>
</head>
<body>
    <div class="pm-landing">
        <!-- Navigation -->
        <nav class="pm-nav">
            <div class="pm-nav-container">
                <a href="/" class="pm-nav-brand">
                    <div class="pm-nav-brand-icon">
                        <i class="bi bi-building"></i>
                    </div>
                    <span class="pm-nav-brand-text">Property Manager</span>
                </a>
                <div class="pm-nav-actions">
                    @if (isAuthenticated)
                    {
                        <a asp-controller="Dashboard" asp-action="Index" class="pm-btn pm-btn-primary">
                            <i class="bi bi-house-door"></i>
                            Go to Dashboard
                        </a>
                    }
                    else
                    {
                        <a asp-controller="Auth" asp-action="Login" class="pm-btn pm-btn-secondary">
                            Sign In
                        </a>
                        <a asp-controller="User" asp-action="Register" class="pm-btn pm-btn-primary">
                            Get Started
                        </a>
                    }
                </div>
            </div>
        </nav>

        <!-- Hero Section -->
        <section class="pm-hero">
            <div class="pm-hero-container">
                <div class="pm-hero-content">
                    <h1>Manage Your Properties <span>Smarter</span></h1>
                    <p>
                        The all-in-one platform for landlords and tenants. Streamline leases, 
                        track payments, handle maintenance requests, and more â€” all in one place.
                    </p>
                    <div class="pm-hero-actions">
                        @if (isAuthenticated)
                        {
                            <a asp-controller="Dashboard" asp-action="Index" class="pm-btn pm-btn-primary pm-btn-lg">
                                <i class="bi bi-speedometer2"></i>
                                Go to Dashboard
                            </a>
                        }
                        else
                        {
                            <a asp-controller="User" asp-action="Register" class="pm-btn pm-btn-primary pm-btn-lg">
                                <i class="bi bi-person-plus"></i>
                                Create Free Account
                            </a>
                            <a asp-controller="Property" asp-action="SearchProperties" class="pm-btn pm-btn-secondary pm-btn-lg">
                                <i class="bi bi-search"></i>
                                Browse Properties
                            </a>
                        }
                    </div>
                </div>
                <div class="pm-hero-image">
                    <img src="/images/hero-property.jpg" alt="Modern apartment building" 
                         onerror="this.style.display='none'; this.parentElement.querySelector('.pm-hero-stats').style.position='relative'; this.parentElement.querySelector('.pm-hero-stats').style.left='0'; this.parentElement.querySelector('.pm-hero-stats').style.bottom='0';" />
                    <div class="pm-hero-stats">
                        @{
                            // TODO: Replace hardcoded values with actual data from ViewBag or Model
                            var totalProperties = ViewBag.TotalProperties as int? ?? 500;
                            var totalTenants = ViewBag.TotalTenants as int? ?? 1200;
                            var satisfactionRate = ViewBag.SatisfactionRate as decimal? ?? 98m;
                        }
                        <div class="pm-hero-stat">
                            <div class="pm-hero-stat-value">@totalProperties.ToString("N0")+</div>
                            <div class="pm-hero-stat-label">Properties</div>
                        </div>
                        <div class="pm-hero-stat">
                            <div class="pm-hero-stat-value">@totalTenants.ToString("N0")+</div>
                            <div class="pm-hero-stat-label">Happy Tenants</div>
                        </div>
                        <div class="pm-hero-stat">
                            <div class="pm-hero-stat-value">@satisfactionRate.ToString("F0")%</div>
                            <div class="pm-hero-stat-label">Satisfaction</div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Features Section -->
        <section class="pm-features">
            <div class="pm-section-container">
                <div class="pm-section-header">
                    <h2>Everything You Need</h2>
                    <p>Powerful tools designed to simplify property management for landlords and tenants alike.</p>
                </div>
                <div class="pm-features-grid">
                    <div class="pm-feature-card">
                        <div class="pm-feature-icon">
                            <i class="bi bi-building"></i>
                        </div>
                        <h3>Property Listings</h3>
                        <p>Create beautiful property listings with photos, amenities, and all the details tenants need.</p>
                    </div>
                    <div class="pm-feature-card">
                        <div class="pm-feature-icon">
                            <i class="bi bi-file-earmark-text"></i>
                        </div>
                        <h3>Digital Leases</h3>
                        <p>Create, sign, and manage lease agreements digitally. No more paperwork hassles.</p>
                    </div>
                    <div class="pm-feature-card">
                        <div class="pm-feature-icon">
                            <i class="bi bi-credit-card"></i>
                        </div>
                        <h3>Online Payments</h3>
                        <p>Accept rent payments online. Automatic invoicing and payment tracking.</p>
                    </div>
                    <div class="pm-feature-card">
                        <div class="pm-feature-icon">
                            <i class="bi bi-tools"></i>
                        </div>
                        <h3>Maintenance Tracking</h3>
                        <p>Submit and track maintenance requests. Keep properties in top condition.</p>
                    </div>
                    <div class="pm-feature-card">
                        <div class="pm-feature-icon">
                            <i class="bi bi-calendar-check"></i>
                        </div>
                        <h3>Property Viewings</h3>
                        <p>Schedule and manage property viewings with an easy-to-use booking system.</p>
                    </div>
                    <div class="pm-feature-card">
                        <div class="pm-feature-icon">
                            <i class="bi bi-shield-check"></i>
                        </div>
                        <h3>Secure & Reliable</h3>
                        <p>Your data is protected with enterprise-grade security and regular backups.</p>
                    </div>
                </div>
            </div>
        </section>

        <!-- CTA Section -->
        <section class="pm-cta">
            <div class="pm-cta-container">
                <h2>Ready to Get Started?</h2>
                <p>Join thousands of landlords and tenants who trust Property Manager for their property needs.</p>
                @if (isAuthenticated)
                {
                    <a asp-controller="Dashboard" asp-action="Index" class="pm-btn pm-btn-primary pm-btn-lg">
                        Go to Dashboard
                    </a>
                }
                else
                {
                    <a asp-controller="User" asp-action="Register" class="pm-btn pm-btn-primary pm-btn-lg">
                        Create Your Free Account
                    </a>
                }
            </div>
        </section>

        <!-- Footer -->
        <footer class="pm-footer">
            <div class="pm-footer-container">
                <p>&copy; 2026 Property Manager. All rights reserved.</p>
                <div class="pm-footer-links">
                    <a asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
                    <a href="#">Terms of Service</a>
                    <a href="#">Contact</a>
                </div>
            </div>
        </footer>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
