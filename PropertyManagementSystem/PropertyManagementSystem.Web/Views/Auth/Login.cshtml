@model PropertyManagementSystem.BLL.DTOs.Auth.LoginRequestDto
@{
    ViewData["Title"] = "Sign In";
    Layout = "_LoginLayout";
}

<div class="pm-auth-card">
    <div class="pm-auth-header">
        <div class="pm-auth-icon">
            <i class="bi bi-person-check"></i>
        </div>
        <h1>Welcome Back</h1>
        <p>Sign in to continue to your account</p>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="pm-alert pm-alert-success">
            <i class="bi bi-check-circle-fill"></i>
            <span>@TempData["SuccessMessage"]</span>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="pm-alert pm-alert-danger">
            <i class="bi bi-exclamation-triangle-fill"></i>
            <span>@TempData["ErrorMessage"]</span>
        </div>
    }

    <div asp-validation-summary="ModelOnly" class="pm-alert pm-alert-danger" style="display: none;"></div>

    <form asp-action="Login" method="post" class="pm-auth-form">
        @Html.AntiForgeryToken()
        <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

        <div class="pm-form-group">
            <label asp-for="Email" class="pm-label">Email Address</label>
            <div class="pm-input-icon">
                <i class="bi bi-envelope"></i>
                <input asp-for="Email"
                       type="email"
                       class="pm-input"
                       placeholder="you@example.com"
                       autocomplete="email" />
            </div>
            <span asp-validation-for="Email" class="pm-error"></span>
        </div>

        <div class="pm-form-group">
            <label asp-for="Password" class="pm-label">Password</label>
            <div class="pm-input-icon pm-input-icon-right">
                <i class="bi bi-lock"></i>
                <input asp-for="Password"
                       id="passwordInput"
                       type="password"
                       class="pm-input"
                       placeholder="Enter your password"
                       autocomplete="current-password" />
                <button type="button" class="pm-password-toggle" id="togglePassword" aria-label="Toggle password">
                    <i class="bi bi-eye" id="passwordIcon"></i>
                </button>
            </div>
            <span asp-validation-for="Password" class="pm-error"></span>
        </div>

        <div class="pm-auth-options">
            <label class="pm-checkbox">
                <input asp-for="RememberMe" type="checkbox" />
                <span>Remember me</span>
            </label>
            <a asp-controller="Auth" asp-action="ForgotPassword" class="pm-auth-forgot">Forgot password?</a>
        </div>

        <button type="submit" class="pm-auth-submit">
            <i class="bi bi-box-arrow-in-right"></i>
            Sign In
        </button>
    </form>

    <div class="pm-auth-divider">
        <span>New to Property Manager?</span>
    </div>

    <div class="pm-auth-footer">
        <a asp-controller="User" asp-action="Register">Create an account</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.getElementById('togglePassword')?.addEventListener('click', function() {
            const input = document.getElementById('passwordInput');
            const icon = document.getElementById('passwordIcon');
            
            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.replace('bi-eye', 'bi-eye-slash');
            } else {
                input.type = 'password';
                icon.classList.replace('bi-eye-slash', 'bi-eye');
            }
        });
    </script>
}
