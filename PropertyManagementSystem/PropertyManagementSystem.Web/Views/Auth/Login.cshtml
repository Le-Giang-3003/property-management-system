@model PropertyManagementSystem.BLL.DTOs.Auth.LoginRequestDto
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "_AuthLayout";

}

<div class="auth-shell">
    <div class="card auth-card border-0">
        <div class="card-body p-4 p-md-5">
            <div class="text-center mb-4">
                <div class="auth-logo mb-3">
                    <i class="bi bi-building"></i>
                </div>
                <h2 class="auth-title mb-1">Property Management</h2>
                <div class="auth-muted small">Sign in to your account</div>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show rounded-3 shadow-sm" role="alert">
                    <i class="bi bi-check-circle-fill me-2"></i>@TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show rounded-3 shadow-sm" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

            <div class="mb-3">
                <div class="fw-semibold small mb-2 text-uppercase auth-muted">Login as</div>
                <div class="role-grid" id="roleGrid" aria-label="Login role selector">
                    <button type="button" class="role-btn" data-role="Tenant">Tenant</button>
                    <button type="button" class="role-btn" data-role="Landlord">Landlord</button>
                    <button type="button" class="role-btn" data-role="Technician">Technician</button>
                    <button type="button" class="role-btn is-active" data-role="Admin">Admin</button>
                </div>
            </div>

            <form asp-action="Login" method="post" class="mt-3">
                @Html.AntiForgeryToken()
                <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-semibold text-dark mb-2">Email</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                        <input asp-for="Email"
                               type="email"
                               class="form-control form-control-lg shadow-sm"
                               placeholder="Enter your email"
                               autocomplete="email" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger small d-block mt-1"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label fw-semibold text-dark mb-2">Password</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-lock"></i></span>
                        <input asp-for="Password"
                               id="passwordInput"
                               type="password"
                               class="form-control form-control-lg shadow-sm password-input"
                               placeholder="Enter your password"
                               autocomplete="current-password" />
                        <button class="btn password-toggle-btn"
                                type="button"
                                id="togglePassword"
                                aria-label="Hiện/ẩn mật khẩu">
                            <i class="bi bi-eye-fill" id="passwordIcon"></i>
                        </button>
                    </div>
                    <span asp-validation-for="Password" class="text-danger small d-block mt-1"></span>
                </div>

                <div class="d-flex align-items-center justify-content-between mb-3">
                    <div class="form-check">
                        <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                        <label asp-for="RememberMe" class="form-check-label small auth-muted">Remember me</label>
                    </div>
                    <a href="#" class="auth-link small">Forgot password?</a>
                </div>

                <button type="submit" class="btn btn-primary btn-lg w-100 py-3 fw-bold shadow-lg rounded-3">
                    Sign In
                </button>
            </form>

            <div class="text-center mt-4 small auth-muted">
                Don't have an account?
                <a asp-controller="User" asp-action="Register" class="auth-link">Register now</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // UI-only role selector (not submitted; just matches the mock)
        (function() {
            const grid = document.getElementById('roleGrid');
            if (!grid) return;

            grid.addEventListener('click', function(e) {
                const btn = e.target.closest('button[data-role]');
                if (!btn) return;
                grid.querySelectorAll('button[data-role]').forEach(b => b.classList.remove('is-active'));
                btn.classList.add('is-active');
            });
        })();

        // Toggle show/hide password
        (function() {
            const btn = document.getElementById('togglePassword');
            const input = document.getElementById('passwordInput');
            const icon = document.getElementById('passwordIcon');
            if (!btn || !input || !icon) return;

            btn.addEventListener('click', function() {
                if (input.type === 'password') {
                    input.type = 'text';
                    icon.classList.remove('bi-eye-fill');
                    icon.classList.add('bi-eye-slash-fill');
                    btn.setAttribute('aria-label', 'Ẩn mật khẩu');
                } else {
                    input.type = 'password';
                    icon.classList.remove('bi-eye-slash-fill');
                    icon.classList.add('bi-eye-fill');
                    btn.setAttribute('aria-label', 'Hiện mật khẩu');
                }
            });
        })();
    </script>
}