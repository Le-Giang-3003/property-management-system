@model PropertyManagementSystem.BLL.DTOs.Auth.LoginRequestDto
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "_Layout";
}

<h2>Đăng nhập</h2>

@if (TempData["SuccessMessage"] != null)
{
    <p style="color: green;">@TempData["SuccessMessage"]</p>
}

@if (TempData["ErrorMessage"] != null)
{
    <p style="color: red;">@TempData["ErrorMessage"]</p>
}

<div asp-validation-summary="ModelOnly" style="color: red;"></div>

<form asp-action="Login" method="post">
    <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

    <div>
        <lab asp-for="Email">Email:</lab  el><br />
        <input asp-for="Email" type="email" style="width: 300px;" />
        <span asp-validation-for="Email" style="color: red;"></span>
    </div>
    <br />

    <div>
        <label asp-for="Password">Mật khẩu:</label><br />
        <input asp-for="Password" type="password" style="width: 300px;" />
        <span asp-validation-for="Password" style="color: red;"></span>
    </div>
    <br />

    <div>
        <input asp-for="RememberMe" type="checkbox" />
        <label asp-for="RememberMe">Ghi nhớ đăng nhập</label>
    </div>
    <br />

    <button type="submit">Đăng nhập</button>
</form>

<br />
<p>
    Chưa có tài khoản? <a asp-controller="User" asp-action="Register">Đăng ký</a>
</p>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}