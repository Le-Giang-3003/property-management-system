@{
    ViewData["Title"] = "Access Denied";
    Layout = "_LoginLayout";
}

<div class="pm-auth-card" style="text-align: center;">
    <div class="pm-auth-header">
        <div class="pm-auth-icon" style="background: linear-gradient(135deg, var(--pm-danger) 0%, var(--pm-danger-dark) 100%);">
            <i class="bi bi-shield-x"></i>
        </div>
        <h1>Access Denied</h1>
        <p>You don't have permission to access this page</p>
    </div>

    <div class="pm-alert pm-alert-warning" style="text-align: left;">
        <i class="bi bi-info-circle-fill"></i>
        <div>
            <strong>Why am I seeing this?</strong>
            <p style="margin: 8px 0 0; font-size: var(--pm-text-sm);">
                This page requires specific permissions that your account doesn't have. 
                If you believe this is an error, please contact your administrator.
            </p>
        </div>
    </div>

    <div class="pm-flex pm-flex-col pm-gap-3 pm-mt-6">
        <a asp-controller="Dashboard" asp-action="Index" class="pm-btn pm-btn-primary">
            <i class="bi bi-house-door"></i>
            Go to Dashboard
        </a>
        <a asp-controller="Auth" asp-action="Login" class="pm-btn pm-btn-secondary">
            <i class="bi bi-box-arrow-in-right"></i>
            Sign in with Different Account
        </a>
    </div>

    <div class="pm-auth-footer" style="margin-top: var(--pm-space-6);">
        Need help? <a href="mailto:support@propertymanager.com">Contact Support</a>
    </div>
</div>
