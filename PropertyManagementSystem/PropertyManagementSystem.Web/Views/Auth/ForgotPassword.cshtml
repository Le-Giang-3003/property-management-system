@model PropertyManagementSystem.Web.ViewModels.Auth.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Quên mật khẩu";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3>Quên mật khẩu</h3>
                </div>
                <div class="card-body">
                    @if (TempData["Message"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["Message"]
                        </div>
                    }

                    <form asp-action="ForgotPassword" method="post">
                        <input type="hidden" asp-for="IsOtpSent" />

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" placeholder="Nhập email của bạn" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        @if (Model != null && Model.IsOtpSent)
                        {
                            <div class="mb-3">
                                <label asp-for="OtpCode" class="form-label">Mã OTP</label>
                                <input asp-for="OtpCode" class="form-control" placeholder="Nhập mã OTP đã gửi đến email" />
                                <span asp-validation-for="OtpCode" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn btn-primary w-100">Xác nhận OTP</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-primary w-100">Gửi mã OTP</button>
                        }
                    </form>

                    <div class="mt-3 text-center">
                        <a href="/">Quay lại trang chủ</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
