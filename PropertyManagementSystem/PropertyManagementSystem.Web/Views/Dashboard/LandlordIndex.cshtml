@functions {
    string GetStatusClass(string status) => status?.ToLower() switch
    {
        "available" => "available",
        "rented" => "rented",
        "maintenance" => "maintenance",
        _ => "unavailable"
    };

    string GetStatusDisplay(string status) => status switch
    {
        "Available" => "Có sẵn",
        "Rented" => "Đã thuê",
        "Maintenance" => "Bảo trì",
        _ => "N/A"
    };

    string GetApplicationStatusClass(string status) => status?.ToLower() switch
    {
        "pending" => "pending",
        "approved" => "approved",
        "rejected" => "rejected",
        _ => "pending"
    };

    string GetApplicationStatusDisplay(string status) => status switch
    {
        "Pending" => "Chờ duyệt",
        "Approved" => "Đã duyệt",
        "Rejected" => "Từ chối",
        _ => status
    };

    string GetMaintenanceStatusClass(string status) => status?.ToLower() switch
    {
        "pending" => "pending",
        "assigned" => "info",
        "inprogress" => "warning",
        "completed" => "approved",
        _ => "pending"
    };

    string GetMaintenanceStatusDisplay(string status) => status switch
    {
        "Pending" => "Chờ xử lý",
        "Assigned" => "Đã phân công",
        "InProgress" => "Đang xử lý",
        "Completed" => "Hoàn thành",
        _ => status
    };

    string GetPriorityClass(string priority) => priority switch
    {
        "High" => "High",
        "Medium" => "Medium",
        "Low" => "Low",
        _ => "Low"
    };

    string GetMaintenanceIconClass(string priority) => priority?.ToLower() switch
    {
        "high" => "high",
        "medium" => "medium",
        "low" => "low",
        _ => "low"
    };
}
