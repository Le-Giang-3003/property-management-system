@{
    ViewData["Title"] = "Dashboard";
    Layout = "_AuthLayout";
}

<div class="container-fluid py-4">
    <!-- Welcome Banner -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h1 class="display-4">Chào mừng đến với Property Management System</h1>
                    <p class="lead mb-0">Hệ thống quản lý bất động sản hiện đại và tiện lợi</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Stats Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-building fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">1,234</h5>
                    <p class="text-muted">Bất động sản</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-users fa-3x text-success mb-3"></i>
                    <h5 class="card-title">5,678</h5>
                    <p class="text-muted">Người thuê</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-file-contract fa-3x text-info mb-3"></i>
                    <h5 class="card-title">3,456</h5>
                    <p class="text-muted">Hợp đồng đang hoạt động</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-chart-line fa-3x text-warning mb-3"></i>
                    <h5 class="card-title">98%</h5>
                    <p class="text-muted">Tỷ lệ lấp đầy</p>
                </div>
            </div>
        </div>
    </div>

    <!-- News & Updates Section -->
    <div class="row">
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-header bg-white">
                    <h4 class="mb-0"><i class="fas fa-newspaper"></i> Tin tức nhà đất</h4>
                </div>
                <div class="card-body">
                    <!-- News Item 1 -->
                    <div class="d-flex mb-3 pb-3 border-bottom">
                        <img src="https://via.placeholder.com/120x80" alt="News" class="me-3 rounded">
                        <div>
                            <h5>Thị trường bất động sản Q1/2026 tăng trưởng 15%</h5>
                            <p class="text-muted small mb-2">
                                <i class="far fa-calendar"></i> 24/01/2026 |
                                <i class="far fa-clock"></i> 2 giờ trước
                            </p>
                            <p class="mb-0">
                                Theo báo cáo mới nhất, thị trường bất động sản Việt Nam tiếp tục xu hướng tích cực với mức tăng trưởng ấn tượng...
                            </p>
                            <a href="#" class="btn btn-sm btn-link p-0">Đọc thêm →</a>
                        </div>
                    </div>

                    <!-- News Item 2 -->
                    <div class="d-flex mb-3 pb-3 border-bottom">
                        <img src="https://via.placeholder.com/120x80" alt="News" class="me-3 rounded">
                        <div>
                            <h5>Chính sách mới về thuế nhà đất có hiệu lực từ tháng 2</h5>
                            <p class="text-muted small mb-2">
                                <i class="far fa-calendar"></i> 23/01/2026 |
                                <i class="far fa-clock"></i> 1 ngày trước
                            </p>
                            <p class="mb-0">
                                Chính phủ vừa ban hành nghị định mới về thuế tài sản, giúp giảm gánh nặng cho người cho thuê nhà...
                            </p>
                            <a href="#" class="btn btn-sm btn-link p-0">Đọc thêm →</a>
                        </div>
                    </div>

                    <!-- News Item 3 -->
                    <div class="d-flex mb-3">
                        <img src="https://via.placeholder.com/120x80" alt="News" class="me-3 rounded">
                        <div>
                            <h5>Top 10 khu vực cho thuê nhà hot nhất TP.HCM</h5>
                            <p class="text-muted small mb-2">
                                <i class="far fa-calendar"></i> 22/01/2026 |
                                <i class="far fa-clock"></i> 2 ngày trước
                            </p>
                            <p class="mb-0">
                                Quận 1, Quận 2 và Quận 7 tiếp tục dẫn đầu về nhu cầu thuê nhà trong năm 2026...
                            </p>
                            <a href="#" class="btn btn-sm btn-link p-0">Đọc thêm →</a>
                        </div>
                    </div>

                    <div class="text-center mt-3">
                        <a href="#" class="btn btn-outline-primary">Xem tất cả tin tức</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Sidebar -->
        <div class="col-lg-4">
            <!-- Market Trends -->
            <div class="card mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="fas fa-chart-bar"></i> Xu hướng thị trường</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-1">
                            <span>Giá thuê trung bình</span>
                            <span class="text-success">↑ 5%</span>
                        </div>
                        <div class="progress" style="height: 8px;">
                            <div class="progress-bar bg-success" style="width: 75%"></div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-1">
                            <span>Tỷ lệ lấp đầy</span>
                            <span class="text-success">↑ 3%</span>
                        </div>
                        <div class="progress" style="height: 8px;">
                            <div class="progress-bar bg-info" style="width: 92%"></div>
                        </div>
                    </div>
                    <div>
                        <div class="d-flex justify-content-between mb-1">
                            <span>Hợp đồng mới</span>
                            <span class="text-warning">↑ 8%</span>
                        </div>
                        <div class="progress" style="height: 8px;">
                            <div class="progress-bar bg-warning" style="width: 68%"></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Links -->
            <div class="card">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="fas fa-link"></i> Liên kết nhanh</h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0">
                        <li class="mb-2">
                            <a href="#" class="text-decoration-none">
                                <i class="fas fa-home text-primary"></i> Tìm kiếm nhà cho thuê
                            </a>
                        </li>
                        <li class="mb-2">
                            <a href="#" class="text-decoration-none">
                                <i class="fas fa-file-alt text-success"></i> Mẫu hợp đồng chuẩn
                            </a>
                        </li>
                        <li class="mb-2">
                            <a href="#" class="text-decoration-none">
                                <i class="fas fa-calculator text-info"></i> Tính toán chi phí thuê
                            </a>
                        </li>
                        <li class="mb-2">
                            <a href="#" class="text-decoration-none">
                                <i class="fas fa-book text-warning"></i> Hướng dẫn sử dụng
                            </a>
                        </li>
                        <li>
                            <a href="#" class="text-decoration-none">
                                <i class="fas fa-headset text-danger"></i> Hỗ trợ khách hàng
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Features Section -->
    <div class="row mt-4">
        <div class="col-12">
            <h3 class="mb-4">Tính năng nổi bật</h3>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-search-location fa-3x text-primary mb-3"></i>
                    <h5>Tìm kiếm thông minh</h5>
                    <p class="text-muted">
                        Tìm kiếm nhà cho thuê theo khu vực, giá cả, diện tích với công cụ lọc thông minh
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-shield-alt fa-3x text-success mb-3"></i>
                    <h5>Bảo mật cao</h5>
                    <p class="text-muted">
                        Thông tin cá nhân và hợp đồng được mã hóa, đảm bảo an toàn tuyệt đối
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-mobile-alt fa-3x text-info mb-3"></i>
                    <h5>Quản lý dễ dàng</h5>
                    <p class="text-muted">
                        Quản lý hợp đồng, thanh toán, bảo trì mọi lúc mọi nơi trên mọi thiết bị
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            transition: transform 0.2s, box-shadow 0.2s;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15) !important;
            }
    </style>
}
