@model List<PropertyManagementSystem.BLL.DTOs.Invoice.InvoiceDto>

@{
    ViewData["Title"] = "Hóa đơn của tôi";
}

<h2>Hóa đơn của tôi</h2>

<table class="table">
    <thead>
        <tr>
            <th>Mã hóa đơn</th>
            <th>Loại</th>
            <th>Ngày lập</th>
            <th>Hạn thanh toán</th>
            <th>Tổng tiền</th>
            <th>Trạng thái</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var invoice in Model)
        {
            <tr>
                <td>@invoice.InvoiceNumber</td>
                <td>@invoice.InvoiceType</td>
                <td>@invoice.IssueDate.ToString("dd/MM/yyyy")</td>
                <td>@invoice.DueDate.ToString("dd/MM/yyyy")</td>
                <td>@invoice.TotalAmount.ToString("N0")</td>
                <td>@invoice.Status</td>
                <td>
                    <a asp-action="ExportPdf"
                       asp-route-id="@invoice.InvoiceId"
                       class="btn btn-sm btn-outline-secondary">
                        In hóa đơn (PDF)
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
