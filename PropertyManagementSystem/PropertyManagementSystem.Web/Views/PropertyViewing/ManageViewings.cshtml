@model IEnumerable<PropertyManagementSystem.BLL.DTOs.Schedule.PropertyViewingDto>
@{
    ViewData["Title"] = "Rental Viewings";
    Layout = "_AuthLayout";
    ViewData["PortalMode"] = "Landlord";

    var newRequests = Model.Count(v => v.Status == "Requested");
    var confirmed = Model.Count(v => v.Status == "Confirmed");
    var completed = Model.Count(v => v.Status == "Completed");
    var cancelled = Model.Count(v => v.Status == "Cancelled" || v.Status == "Rejected");
}

<div class="pm-page">
    <!-- Page Header -->
    <div class="pm-page-header">
        <div>
            <h1 class="pm-page-title">Rental Viewings</h1>
            <p class="pm-page-subtitle">Review and manage property viewing requests</p>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="pm-summary-cards">
        <div class="pm-summary-card">
            <div class="pm-summary-content">
                <div class="pm-summary-value">@newRequests</div>
                <div class="pm-summary-label">New Requests</div>
            </div>
        </div>
        <div class="pm-summary-card">
            <div class="pm-summary-content">
                <div class="pm-summary-value">@confirmed</div>
                <div class="pm-summary-label">Confirmed</div>
            </div>
        </div>
        <div class="pm-summary-card">
            <div class="pm-summary-content">
                <div class="pm-summary-value">@completed</div>
                <div class="pm-summary-label">Completed</div>
            </div>
        </div>
        <div class="pm-summary-card">
            <div class="pm-summary-content">
                <div class="pm-summary-value">@cancelled</div>
                <div class="pm-summary-label">Cancelled</div>
            </div>
        </div>
    </div>

    <!-- Search and Filter Bar -->
    <div class="pm-filter-bar">
        <div class="pm-search-input">
            <i class="bi bi-search"></i>
            <input type="text" id="searchInput" placeholder="Search viewings..." />
        </div>
        <select class="pm-filter-select" id="statusFilter">
            <option value="">All Status</option>
            <option value="Requested">Requested</option>
            <option value="Confirmed">Confirmed</option>
            <option value="Completed">Completed</option>
            <option value="Cancelled">Cancelled</option>
            <option value="Rejected">Rejected</option>
        </select>
        <select class="pm-filter-select" id="propertyFilter">
            <option value="">All Properties</option>
            @foreach (var property in Model.Select(v => v.PropertyName).Distinct().OrderBy(p => p))
            {
                <option value="@property">@property</option>
            }
        </select>
    </div>

    <!-- Viewings List -->
    @if (!Model.Any())
    {
        <div class="pm-empty-state">
            <div class="pm-empty-icon">
                <i class="bi bi-calendar-x"></i>
            </div>
            <h4>No viewing requests yet</h4>
            <p>Viewing requests from tenants will appear here</p>
        </div>
    }
    else
    {
        <div class="pm-viewings-list">
            @foreach (var viewing in Model)
            {
                var initials = GetInitials(viewing.RequesterName);
                var statusClass = GetStatusClass(viewing.Status);
                
                <div class="pm-viewing-card" data-status="@viewing.Status" data-property="@viewing.PropertyName">
                    <div class="pm-viewing-card-header">
                        <div class="pm-viewing-requester">
                            <div class="pm-avatar">@initials</div>
                            <div class="pm-requester-info">
                                <div class="pm-requester-name">@viewing.RequesterName</div>
                                <div class="pm-viewing-id">Viewing #@viewing.ViewingId</div>
                                <div class="pm-requester-email">
                                    <i class="bi bi-envelope"></i>
                                    @viewing.RequesterEmail
                                </div>
                            </div>
                        </div>
                        <div class="pm-status-tag @statusClass">
                            @viewing.Status
                        </div>
                    </div>

                    <div class="pm-viewing-card-body">
                        <div class="pm-viewing-details-grid">
                            <div class="pm-viewing-detail-item">
                                <div class="pm-detail-label">Property</div>
                                <div class="pm-detail-value">
                                    <i class="bi bi-building"></i>
                                    @viewing.PropertyName
                                </div>
                                <div class="pm-detail-meta">@viewing.PropertyAddress</div>
                            </div>

                            <div class="pm-viewing-detail-item">
                                <div class="pm-detail-label">Requested</div>
                                <div class="pm-detail-value">
                                    @viewing.RequestedDate.ToString("MMM dd, yyyy")
                                </div>
                                @if (viewing.PreferredDate1.HasValue)
                                {
                                    <div class="pm-detail-meta">
                                        Preferred: @viewing.PreferredDate1.Value.ToString("MMM dd, yyyy HH:mm")
                                    </div>
                                }
                            </div>

                            <div class="pm-viewing-detail-item">
                                <div class="pm-detail-label">Scheduled Date</div>
                                @if (viewing.ScheduledDate.HasValue)
                                {
                                    <div class="pm-detail-value">
                                        @viewing.ScheduledDate.Value.ToString("MMM dd, yyyy HH:mm")
                                    </div>
                                }
                                else
                                {
                                    <div class="pm-detail-value pm-text-muted">Not scheduled</div>
                                }
                                @if (viewing.IsVirtualViewing)
                                {
                                    <div class="pm-detail-meta">
                                        <i class="bi bi-camera-video"></i> Virtual Viewing
                                    </div>
                                }
                            </div>

                            <div class="pm-viewing-detail-item">
                                <div class="pm-detail-label">Contact</div>
                                <div class="pm-detail-value">
                                    <i class="bi bi-telephone"></i>
                                    @viewing.RequesterPhone
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="pm-viewing-card-footer">
                        <a asp-action="Details" asp-route-id="@viewing.ViewingId" class="pm-btn pm-btn-ghost pm-btn-sm">
                            <i class="bi bi-eye"></i>
                            View Details
                        </a>
                        
                        @if (viewing.Status == "Requested")
                        {
                            <a asp-action="Confirm" asp-route-id="@viewing.ViewingId" class="pm-btn pm-btn-success pm-btn-sm">
                                <i class="bi bi-check-circle"></i>
                                Confirm
                            </a>
                            <form asp-action="Reject" asp-route-id="@viewing.ViewingId" method="post" style="display:inline;"
                                  onsubmit="return confirm('Are you sure you want to reject this viewing request?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="pm-btn pm-btn-danger pm-btn-sm">
                                    <i class="bi bi-x-circle"></i>
                                    Reject
                                </button>
                            </form>
                        }
                        else if (viewing.Status == "Confirmed")
                        {
                            <form asp-action="Complete" asp-route-id="@viewing.ViewingId" method="post" style="display:inline;">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="pm-btn pm-btn-success pm-btn-sm">
                                    <i class="bi bi-check-circle"></i>
                                    Mark Complete
                                </button>
                            </form>
                            <a asp-action="Reschedule" asp-route-id="@viewing.ViewingId" class="pm-btn pm-btn-outline pm-btn-sm">
                                <i class="bi bi-calendar-event"></i>
                                Reschedule
                            </a>
                        }
                    </div>
                </div>
            }
        </div>
    }
</div>

@functions {
    private string GetInitials(string name)
    {
        if (string.IsNullOrEmpty(name))
            return "N/A";
        
        var parts = name.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (parts.Length >= 2)
            return (parts[0][0].ToString() + parts[1][0].ToString()).ToUpper();
        else if (parts.Length == 1 && parts[0].Length >= 2)
            return parts[0].Substring(0, 2).ToUpper();
        else if (parts.Length == 1)
            return parts[0][0].ToString().ToUpper();
        
        return "N/A";
    }

    private string GetStatusClass(string status)
    {
        return status switch
        {
            "Requested" => "status-pending",
            "Confirmed" => "status-confirmed",
            "Completed" => "status-completed",
            "Cancelled" => "status-cancelled",
            "Rejected" => "status-cancelled",
            _ => "status-default"
        };
    }
}

@section Scripts {
    <script>
        // Search and filter functionality
        document.getElementById('searchInput')?.addEventListener('input', filterViewings);
        document.getElementById('statusFilter')?.addEventListener('change', filterViewings);
        document.getElementById('propertyFilter')?.addEventListener('change', filterViewings);

        function filterViewings() {
            const searchText = document.getElementById('searchInput').value.toLowerCase();
            const statusFilter = document.getElementById('statusFilter').value;
            const propertyFilter = document.getElementById('propertyFilter').value;
            const cards = document.querySelectorAll('.pm-viewing-card');

            cards.forEach(card => {
                const text = card.textContent.toLowerCase();
                const status = card.getAttribute('data-status');
                const property = card.getAttribute('data-property');

                const matchesSearch = text.includes(searchText);
                const matchesStatus = !statusFilter || status === statusFilter;
                const matchesProperty = !propertyFilter || property === propertyFilter;

                card.style.display = (matchesSearch && matchesStatus && matchesProperty) ? '' : 'none';
            });
        }
    </script>
}

@section Styles {
    <style>
