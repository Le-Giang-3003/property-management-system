            margin: 0 0 8px 0;
        }

        .pm-empty-state p {
            font-size: 14px;
            color: #64748b;
            margin: 0;
        }

        /* Responsive */
        @@media (max-width: 1200px) {
            .pm-summary-cards {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        @@media (max-width: 768px) {
            .pm-page {
                padding: 16px;
            }

            .pm-summary-cards {
                grid-template-columns: 1fr;
            }

            .pm-filter-bar {
                flex-wrap: wrap;
            }

            .pm-viewing-details-grid {
                grid-template-columns: 1fr;
            }

            .pm-viewing-card-footer {
                flex-wrap: wrap;
            }
        }
    </style>
}
