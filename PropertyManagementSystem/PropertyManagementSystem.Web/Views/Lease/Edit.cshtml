@model PropertyManagementSystem.Web.ViewModels.Lease.UpdateLeaseViewModel
@{
    ViewData["Title"] = "Edit Lease";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb" class="mb-3">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Leases</a></li>
                    <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.LeaseId">@Model.LeaseNumber</a></li>
                    <li class="breadcrumb-item active">Edit</li>
                </ol>
            </nav>

            <div class="card shadow-lg">
                <div class="card-header bg-warning text-dark">
                    <h3 class="mb-0">
                        <i class="fas fa-edit"></i> Edit Lease @Model.LeaseNumber
                    </h3>
                </div>
                <div class="card-body">
                    <!-- Basic Information -->
                    <div class="alert alert-light border mb-4">
                        <div class="row">
                            <div class="col-md-6">
                                <p class="mb-1"><strong>Property:</strong> @Model.PropertyName</p>
                                <p class="mb-0"><strong>Tenant:</strong> @Model.TenantName</p>
                            </div>
                            <div class="col-md-6 text-end">
                                @if (Model.Status == "Draft")
                                {
                                    <span class="badge bg-secondary fs-6">Draft</span>
                                }
                                else if (Model.Status == "Active")
                                {
                                    <span class="badge bg-success fs-6">Active</span>
                                }
                                else if (Model.Status == "Expired")
                                {
                                    <span class="badge bg-danger fs-6">Expired</span>
                                }
                                else if (Model.Status == "Terminated")
                                {
                                    <span class="badge bg-dark fs-6">Terminated</span>
                                }
                                else
                                {
                                    <span class="badge bg-info fs-6">@Model.Status</span>
                                }
                            </div>
                        </div>
                    </div>

                    <form asp-action="Edit" method="post" id="editLeaseForm">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="LeaseId" />
                        <input type="hidden" asp-for="LeaseNumber" />
                        <input type="hidden" asp-for="PropertyName" />
                        <input type="hidden" asp-for="TenantName" />
                        <input type="hidden" asp-for="Status" />

                        <!-- Duration -->
                        <div class="card mb-4">
                            <div class="card-header bg-light">
                                <h5 class="mb-0"><i class="fas fa-calendar-alt"></i> Lease Duration</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="StartDate" class="form-label fw-bold">
                                            <i class="fas fa-calendar-check"></i> Start Date
                                        </label>
                                        <input asp-for="StartDate" type="date" class="form-control form-control-lg" id="startDate" />
                                        <span asp-validation-for="StartDate" class="text-danger"></span>
                                    </div>

                                    <div class="col-md-6 mb-3">
                                        <label asp-for="LeaseDurationMonths" class="form-label fw-bold">
                                            <i class="fas fa-hourglass-half"></i> Lease Term
                                        </label>
                                        <select asp-for="LeaseDurationMonths" class="form-select form-select-lg" id="leaseDuration">
                                            <option value="3">3 months</option>
                                            <option value="6">6 months</option>
                                            <option value="9">9 months</option>
                                            <option value="12">12 months</option>
                                            <option value="18">18 months</option>
                                            <option value="24">24 months</option>
                                            <option value="36">36 months</option>
                                        </select>
                                        <span asp-validation-for="LeaseDurationMonths" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label fw-bold">
                                        <i class="fas fa-calendar-times"></i> End Date (Expected)
                                    </label>
                                    <input type="text" class="form-control form-control-lg bg-light"
                                           id="endDateDisplay" value="@Model.EndDate.ToString("dd/MM/yyyy")" readonly />
                                </div>

                                <div class="alert alert-info" id="paymentDayInfo">
                                    <div class="row align-items-center">
                                        <div class="col-auto">
                                            <i class="fas fa-calendar-day fa-2x"></i>
                                        </div>
                                        <div class="col">
                                            <small class="text-muted">Monthly Payment Due Date</small>
                                            <h5 class="mb-0" id="paymentDayDisplay">Day @Model.PaymentDueDay</h5>
                                            <small id="paymentNote" class="text-muted"></small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Financial -->
                        <div class="card mb-4">
                            <div class="card-header bg-light">
                                <h5 class="mb-0"><i class="fas fa-money-bill-wave"></i> Financial Information</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="MonthlyRent" class="form-label fw-bold">
                                            <i class="fas fa-hand-holding-usd"></i> Monthly Rent
                                        </label>
                                        <div class="input-group input-group-lg">
                                            <input asp-for="MonthlyRent" type="number" step="1000"
                                                   class="form-control" id="monthlyRentInput" />
                                            <span class="input-group-text bg-success text-white">$</span>
                                        </div>
                                        <span asp-validation-for="MonthlyRent" class="text-danger"></span>
                                    </div>

                                    <div class="col-md-6 mb-3">
                                        <label asp-for="SecurityDeposit" class="form-label fw-bold">
                                            <i class="fas fa-shield-alt"></i> Security Deposit
                                        </label>
                                        <div class="input-group input-group-lg">
                                            <input asp-for="SecurityDeposit" type="number" step="1000" class="form-control" />
                                            <span class="input-group-text bg-warning text-dark">$</span>
                                        </div>
                                        <span asp-validation-for="SecurityDeposit" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="alert alert-success">
                                    <div class="row text-center">
                                        <div class="col-md-6">
                                            <small>Total Contract Value</small>
                                            <h4 class="mb-0" id="totalContract">$0</h4>
                                        </div>
                                        <div class="col-md-6">
                                            <small>Duration</small>
                                            <h4 class="mb-0" id="monthsDisplay">0 months</h4>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Terms -->
                        <div class="card mb-4">
                            <div class="card-header bg-light">
                                <h5 class="mb-0"><i class="fas fa-file-signature"></i> Terms</h5>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <label asp-for="Terms" class="form-label fw-bold">
                                        <i class="fas fa-file-alt"></i> Lease Terms
                                    </label>
                                    <textarea asp-for="Terms" class="form-control font-monospace" rows="10"></textarea>
                                    <span asp-validation-for="Terms" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="SpecialConditions" class="form-label fw-bold">
                                        <i class="fas fa-star"></i> Special Conditions
                                    </label>
                                    <textarea asp-for="SpecialConditions" class="form-control" rows="3"></textarea>
                                    <span asp-validation-for="SpecialConditions" class="text-danger"></span>
                                </div>

                                <div class="form-check form-switch">
                                    <input asp-for="AutoRenew" class="form-check-input" type="checkbox" role="switch" />
                                    <label asp-for="AutoRenew" class="form-check-label fw-bold">
                                        <i class="fas fa-sync-alt"></i> Auto-renew when expired
                                    </label>
                                </div>
                            </div>
                        </div>

                        <!-- Buttons -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Details" asp-route-id="@Model.LeaseId" class="btn btn-lg btn-outline-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-lg btn-warning">
                                <i class="fas fa-save"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Get form elements by ASP.NET-generated IDs
            const startDateInput = document.getElementById('startDate');
            const leaseDurationSelect = document.getElementById('leaseDuration');
            const monthlyRentInput = document.getElementById('monthlyRentInput');
            const endDateDisplay = document.getElementById('endDateDisplay');
            const totalContractDisplay = document.getElementById('totalContract');
            const monthsDisplaySpan = document.getElementById('monthsDisplay');
            const paymentDayDisplay = document.getElementById('paymentDayDisplay');
            const paymentNote = document.getElementById('paymentNote');
            const paymentDayInfo = document.getElementById('paymentDayInfo');

            // Calculation logic
            function updateCalculations() {
                const startDateValue = startDateInput.value;
                if (!startDateValue) return;

                const startDate = new Date(startDateValue);
                const months = parseInt(leaseDurationSelect.value) || 12;
                const monthlyRent = parseFloat(monthlyRentInput.value) || 0;

                // Compute EndDate
                const endDate = new Date(startDate);
                endDate.setMonth(endDate.getMonth() + months);

                const day = String(endDate.getDate()).padStart(2, '0');
                const month = String(endDate.getMonth() + 1).padStart(2, '0');
                const year = endDate.getFullYear();

                endDateDisplay.value = day + '/' + month + '/' + year;

                // Compute PaymentDueDay
                const startDay = startDate.getDate();
                const paymentDay = startDay >= 29 ? 28 : startDay;

                paymentDayDisplay.textContent = 'Day ' + paymentDay;

                if (startDay >= 29) {
                    paymentNote.innerHTML = '<i class="fas fa-info-circle"></i> Adjusted from day ' + startDay + ' to day 28 (to fit all months)';
                    paymentDayInfo.classList.remove('alert-info');
                    paymentDayInfo.classList.add('alert-warning');
                } else {
                    paymentNote.innerHTML = '';
                    paymentDayInfo.classList.remove('alert-warning');
                    paymentDayInfo.classList.add('alert-info');
                }

                // Calculate total
                const totalContract = monthlyRent * months;
                totalContractDisplay.textContent = '$' + totalContract.toLocaleString('en-US');
                monthsDisplaySpan.textContent = months + ' months';
            }

            // Event listeners
            startDateInput.addEventListener('change', updateCalculations);
            leaseDurationSelect.addEventListener('change', updateCalculations);
            monthlyRentInput.addEventListener('input', updateCalculations);

            // Run on load
            updateCalculations();

            // Confirm on submit
            const form = document.getElementById('editLeaseForm');
            form.addEventListener('submit', function(e) {
                if (!confirm('Are you sure you want to save these changes?')) {
                    e.preventDefault();
                    return false;
                }
            });
        });
    </script>
}
