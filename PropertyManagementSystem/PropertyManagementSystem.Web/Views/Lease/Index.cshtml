@model IEnumerable<PropertyManagementSystem.DAL.Entities.Lease>
@{
    ViewData["Title"] = "Quản lý hợp đồng";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-file-contract"></i> Quản lý hợp đồng</h2>
        <span class="badge bg-primary fs-6">Tổng: @Model.Count()</span>
    </div>

    <!-- Filter tabs -->
    <ul class="nav nav-tabs mb-3">
        <li class="nav-item">
            <a class="nav-link active" asp-action="Index">
                <i class="fas fa-list"></i> Tất cả
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-action="MyLeases">
                <i class="fas fa-user"></i> Tôi đang thuê
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-action="MyProperties">
                <i class="fas fa-building"></i> BĐS tôi cho thuê
            </a>
        </li>
    </ul>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center py-5">
            <i class="fas fa-inbox fa-3x mb-3"></i>
            <h4>Chưa có hợp đồng nào</h4>
            <p class="text-muted">Hợp đồng sẽ được tạo từ các đơn xin thuê đã được duyệt</p>
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th>Mã HĐ</th>
                                <th>Bất động sản</th>
                                <th>Người thuê</th>
                                <th>Thời hạn</th>
                                <th>Tiền thuê</th>
                                <th class="text-center">Trạng thái</th>
                                <th class="text-center">Vai trò</th>
                                <th class="text-center">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var lease in Model.OrderByDescending(l => l.CreatedAt))
                            {
                                var isLandlord = lease.Property?.LandlordId == ViewBag.UserId;
                                <tr>
                                    <td>
                                        <strong class="text-primary">@lease.LeaseNumber</strong>
                                        <br />
                                        <small class="text-muted">@lease.CreatedAt.ToString("dd/MM/yyyy")</small>
                                    </td>
                                    <td>
                                        <div><strong>@lease.Property?.Name</strong></div>
                                        <small class="text-muted">@lease.Property?.Address</small>
                                    </td>
                                    <td>
                                        <div><strong>@lease.Tenant?.FullName</strong></div>
                                        <small class="text-muted">@lease.Tenant?.Email</small>
                                    </td>
                                    <td>
                                        <div>@lease.StartDate.ToString("dd/MM/yyyy")</div>
                                        <small class="text-muted">đến @lease.EndDate.ToString("dd/MM/yyyy")</small>
                                    </td>
                                    <td>
                                        <strong class="text-danger">@lease.MonthlyRent.ToString("N0") VNĐ</strong>
                                        <br />
                                        <small class="text-muted">Ngày @lease.PaymentDueDay</small>
                                    </td>
                                    <td class="text-center">
                                        @switch (lease.Status)
                                        {
                                            case "Draft":
                                                <span class="badge bg-secondary">Nháp</span>
                                                break;
                                            case "PendingSignature":
                                                <span class="badge bg-warning text-dark">Chờ ký</span>
                                                break;
                                            case "Active":
                                                <span class="badge bg-success">Hiệu lực</span>
                                                break;
                                            case "Expired":
                                                <span class="badge bg-danger">Hết hạn</span>
                                                break;
                                            case "Terminated":
                                                <span class="badge bg-dark">Chấm dứt</span>
                                                break;
                                            case "Renewed":
                                                <span class="badge bg-dark">Gia hạn</span>
                                                break;
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (isLandlord)
                                        {
                                            <span class="badge bg-info">Chủ nhà</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-primary">Người thuê</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <a asp-action="Details" asp-route-id="@lease.LeaseId"
                                           class="btn btn-sm btn-primary">
                                            <i class="fas fa-eye"></i> Xem
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>
