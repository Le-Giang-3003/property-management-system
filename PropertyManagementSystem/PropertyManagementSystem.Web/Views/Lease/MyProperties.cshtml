@model IEnumerable<PropertyManagementSystem.DAL.Entities.Lease>
@{
    ViewData["Title"] = "Hợp đồng BĐS tôi cho thuê";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-building"></i> Hợp đồng BĐS tôi cho thuê</h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center py-5">
            <i class="fas fa-inbox fa-3x mb-3"></i>
            <h4>Chưa có hợp đồng nào</h4>
            <p class="text-muted">Sau khi duyệt đơn xin thuê, bạn có thể tạo hợp đồng cho người thuê</p>
            <a asp-controller="RentalApplication" asp-action="Index" class="btn btn-primary mt-3">
                <i class="fas fa-clipboard-list"></i> Xem đơn xin thuê
            </a>
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th>Mã HĐ</th>
                                <th>Bất động sản</th>
                                <th>Người thuê</th>
                                <th>Thời hạn</th>
                                <th>Tiền thuê</th>
                                <th class="text-center">Trạng thái</th>
                                <th class="text-center">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var lease in Model.OrderByDescending(l => l.CreatedAt))
                            {
                                <tr>
                                    <td>
                                        <strong class="text-primary">@lease.LeaseNumber</strong>
                                    </td>
                                    <td>
                                        <div><strong>@lease.Property?.Name</strong></div>
                                        <small class="text-muted">@lease.Property?.Address</small>
                                    </td>
                                    <td>
                                        <div><strong>@lease.Tenant?.FullName</strong></div>
                                        <small class="text-muted">@lease.Tenant?.PhoneNumber</small>
                                    </td>
                                    <td>
                                        <div>@lease.StartDate.ToString("dd/MM/yyyy")</div>
                                        <small class="text-muted">đến @lease.EndDate.ToString("dd/MM/yyyy")</small>
                                    </td>
                                    <td>
                                        <strong class="text-danger">@lease.MonthlyRent.ToString("N0") VNĐ</strong>
                                    </td>
                                    <td class="text-center">
                                        @switch (lease.Status)
                                        {
                                            case "Draft":
                                                <span class="badge bg-secondary">Nháp</span>
                                                break;
                                            case "PendingSignature":
                                                <span class="badge bg-warning text-dark">Chờ ký</span>
                                                break;
                                            case "Active":
                                                <span class="badge bg-success">Hiệu lực</span>
                                                break;
                                            case "Expired":
                                                <span class="badge bg-danger">Hết hạn</span>
                                                break;
                                            case "Terminated":
                                                <span class="badge bg-dark">Chấm dứt</span>
                                                break;
                                            case "Renewed":
                                                <span class="badge bg-dark">Gia hạn</span>
                                                break;
                                        }
                                    </td>
                                    <td class="text-center">
                                        <a asp-action="Details" asp-route-id="@lease.LeaseId"
                                           class="btn btn-sm btn-primary">
                                            <i class="fas fa-eye"></i> Xem
                                        </a>
                                        @if (lease.Status == "Draft")
                                        {
                                            <a asp-action="Edit" asp-route-id="@lease.LeaseId"
                                               class="btn btn-sm btn-warning">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>
