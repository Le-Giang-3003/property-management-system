@model PropertyManagementSystem.Web.ViewModels.Lease.RenewLeaseViewModel
@{
    ViewData["Title"] = "Renew Lease";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-arrow-repeat"></i> Renew Lease
                    </h4>
                </div>

                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i>
                        <strong>Note:</strong> A renewed lease will be created and requires re-signing by both parties.
                    </div>

                    <!-- THÔNG TIN HỢP ĐỒNG HIỆN TẠI -->
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h5 class="mb-0"><i class="bi bi-file-text"></i> Current Lease</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <dl class="row mb-0">
                                        <dt class="col-sm-5">Lease Number:</dt>
                                        <dd class="col-sm-7"><span class="badge bg-primary">@Model.LeaseNumber</span></dd>

                                        <dt class="col-sm-5">Tenant:</dt>
                                        <dd class="col-sm-7">@Model.TenantName</dd>

                                        <dt class="col-sm-5">Property:</dt>
                                        <dd class="col-sm-7">@Model.PropertyName</dd>

                                        <dt class="col-sm-5">Address:</dt>
                                        <dd class="col-sm-7">@Model.PropertyAddress</dd>
                                    </dl>
                                </div>

                                <div class="col-md-6">
                                    <dl class="row mb-0">
                                        <dt class="col-sm-5">Duration:</dt>
                                        <dd class="col-sm-7">@Model.StartDate.ToString("dd/MM/yyyy") - @Model.EndDate.ToString("dd/MM/yyyy")</dd>

                                        <dt class="col-sm-5">Rent:</dt>
                                        <dd class="col-sm-7"><strong>$@Model.CurrentMonthlyRent.ToString("N0")/month</strong></dd>

                                        <dt class="col-sm-5">Deposit:</dt>
                                        <dd class="col-sm-7">$@Model.CurrentSecurityDeposit.ToString("N0")</dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- FORM GIA HẠN -->
                    <form asp-action="Renew" asp-route-id="@Model.LeaseId" method="post">
                        @Html.AntiForgeryToken()

                        <div class="card mb-3">
                            <div class="card-header bg-light">
                                <h5 class="mb-0"><i class="bi bi-pencil-square"></i> Renewal Information</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="ExtensionMonths" class="form-label fw-bold">
                                                <i class="bi bi-calendar-plus"></i>
                                                Extension Period (months) <span class="text-danger">*</span>
                                            </label>
                                            <input asp-for="ExtensionMonths" type="number" class="form-control" min="1" max="36" />
                                            <span asp-validation-for="ExtensionMonths" class="text-danger"></span>
                                            <small class="text-muted">From 1-36 months</small>
                                        </div>

                                        <div class="mb-3">
                                            <label asp-for="NewMonthlyRent" class="form-label fw-bold">
                                                <i class="bi bi-cash-coin"></i>
                                                New Rent (optional)
                                            </label>
                                            <input asp-for="NewMonthlyRent" type="number" class="form-control"
                                                   placeholder="@Model.CurrentMonthlyRent.ToString("N0")" />
                                            <span asp-validation-for="NewMonthlyRent" class="text-danger"></span>
                                            <small class="text-muted">Leave empty to keep: $@Model.CurrentMonthlyRent.ToString("N0")</small>
                                        </div>

                                        <div class="mb-3">
                                            <label asp-for="NewSecurityDeposit" class="form-label fw-bold">
                                                <i class="bi bi-shield-check"></i>
                                                New Security Deposit (optional)
                                            </label>
                                            <input asp-for="NewSecurityDeposit" type="number" class="form-control"
                                                   placeholder="@Model.CurrentSecurityDeposit.ToString("N0")" />
                                            <span asp-validation-for="NewSecurityDeposit" class="text-danger"></span>
                                            <small class="text-muted">Leave empty to keep: $@Model.CurrentSecurityDeposit.ToString("N0")</small>
                                        </div>

                                        <div class="form-check mb-3">
                                            <input asp-for="AutoRenew" class="form-check-input" type="checkbox" />
                                            <label asp-for="AutoRenew" class="form-check-label">
                                                Auto-renew
                                            </label>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="card bg-light">
                                            <div class="card-body">
                                                <h6 class="card-title"><i class="bi bi-calculator"></i> New Lease Information</h6>
                                                <dl class="row mb-0">
                                                    <dt class="col-sm-6">Start Date:</dt>
                                                    <dd class="col-sm-6"><strong id="newStartDate">@Model.NewStartDate.ToString("dd/MM/yyyy")</strong></dd>

                                                    <dt class="col-sm-6">End Date:</dt>
                                                    <dd class="col-sm-6"><strong id="newEndDate">@Model.NewEndDate.ToString("dd/MM/yyyy")</strong></dd>

                                                    <dt class="col-sm-6">Duration:</dt>
                                                    <dd class="col-sm-6"><strong id="duration">@Model.ExtensionMonths months</strong></dd>
                                                </dl>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="AdditionalTerms" class="form-label fw-bold">
                                        <i class="bi bi-chat-left-text"></i>
                                        Additional Terms (optional)
                                    </label>
                                    <textarea asp-for="AdditionalTerms" class="form-control" rows="4"
                                              placeholder="Enter additional terms for the renewed lease..."></textarea>
                                    <span asp-validation-for="AdditionalTerms" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-action="Details" asp-route-id="@Model.LeaseId" class="btn btn-secondary btn-lg">
                                <i class="bi bi-arrow-left"></i> Back
                            </a>
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-arrow-repeat"></i> Confirm Renewal
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script>
        // Update end date when months change
        $('#ExtensionMonths').on('input', function() {
            var months = parseInt($(this).val()) || 0;
            var startDate = new Date('@Model.NewStartDate.ToString("yyyy-MM-dd")');
            var endDate = new Date(startDate);
            endDate.setMonth(endDate.getMonth() + months);

            $('#newEndDate').text(formatDate(endDate));
            $('#duration').text(months + ' months');
        });

        function formatDate(date) {
            var day = String(date.getDate()).padStart(2, '0');
            var month = String(date.getMonth() + 1).padStart(2, '0');
            var year = date.getFullYear();
            return day + '/' + month + '/' + year;
        }
    </script>
}
