@model PropertyManagementSystem.BLL.DTOs.User.UserProfileDto
@{
    ViewData["Title"] = "Thông tin người dùng";
}

<h2>Thông tin người dùng</h2>

<a href="@Url.Action("Search", "Profile")">← Quay lại tìm kiếm</a>

<hr />

<table border="1" cellpadding="10">
    <tr>
        <td><strong>ID:</strong></td>
        <td>@Model.UserId</td>
    </tr>
    <tr>
        <td><strong>Họ tên:</strong></td>
        <td>@Model.FullName</td>
    </tr>
    <tr>
        <td><strong>Email:</strong></td>
        <td>@Model.Email</td>
    </tr>
    <tr>
        <td><strong>Số điện thoại:</strong></td>
        <td>@(Model.PhoneNumber ?? "Chưa cập nhật")</td>
    </tr>
    <tr>
        <td><strong>Ngày sinh:</strong></td>
        <td>@(Model.DateOfBirth?.ToString("dd/MM/yyyy") ?? "Chưa cập nhật")</td>
    </tr>
    <tr>
        <td><strong>Địa chỉ:</strong></td>
        <td>@(Model.Address ?? "Chưa cập nhật")</td>
    </tr>
    <tr>
        <td><strong>Vai trò:</strong></td>
        <td>@string.Join(", ", Model.Roles)</td>
    </tr>
    <tr>
        <td><strong>Trạng thái:</strong></td>
        <td>@(Model.IsActive ? "Hoạt động" : "Đã khóa")</td>
    </tr>
    <tr>
        <td><strong>Email xác thực:</strong></td>
        <td>@(Model.EmailVerified ? "Đã xác thực" : "Chưa xác thực")</td>
    </tr>
    <tr>
        <td><strong>Ngày tham gia:</strong></td>
        <td>@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
    </tr>
    @if (Model.LastLoginAt.HasValue)
    {
        <tr>
            <td><strong>Đăng nhập lần cuối:</strong></td>
            <td>@Model.LastLoginAt.Value.ToString("dd/MM/yyyy HH:mm")</td>
        </tr>
    }
</table>