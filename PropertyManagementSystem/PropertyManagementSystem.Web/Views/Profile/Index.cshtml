@model PropertyManagementSystem.BLL.DTOs.User.UserProfileDto
@{
    ViewData["Title"] = "Thông tin cá nhân";
}

<div class="profile-shell d-flex flex-column flex-lg-row gap-3">
    <!-- Sidebar -->
    <aside class="profile-sidebar">
        <div class="profile-sidebar-card p-3 h-100">
            <div class="d-flex align-items-center mb-3 gap-2">
                <div class="profile-nav-icon">
                    <i class="bi bi-building"></i>
                </div>
                <div>
                    <div class="fw-bold small text-muted">Property Manager</div>
                    <div class="fw-semibold">Tenant Portal</div>
                </div>
            </div>

            <div class="nav flex-column gap-1">
                <a class="profile-nav-item active" href="#">
                    <span class="profile-nav-icon bg-white">
                        <i class="bi bi-grid-1x2"></i>
                    </span>
                    <span>Dashboard</span>
                </a>
                <a class="profile-nav-item" href="#">
                    <span class="profile-nav-icon">
                        <i class="bi bi-search"></i>
                    </span>
                    <span>Search Properties</span>
                </a>
                <a class="profile-nav-item" href="#">
                    <span class="profile-nav-icon">
                        <i class="bi bi-star"></i>
                    </span>
                    <span>Favorites</span>
                </a>
                <a class="profile-nav-item" href="#">
                    <span class="profile-nav-icon">
                        <i class="bi bi-file-earmark-text"></i>
                    </span>
                    <span>My Contracts</span>
                </a>
                <a class="profile-nav-item" href="#">
                    <span class="profile-nav-icon">
                        <i class="bi bi-credit-card"></i>
                    </span>
                    <span>Payments</span>
                </a>
                <a class="profile-nav-item" asp-controller="Payment" asp-action="MakePayment">
                    <span class="profile-nav-icon">
                        <i class="bi bi-credit-card"></i>
                    </span>
                    <span>Payments</span>
                </a>
                <a class="profile-nav-item" href="#">
                    <span class="profile-nav-icon">
                        <i class="bi bi-calendar-event"></i>
                    </span>
                    <span>Viewing Schedule</span>
                </a>
                <a class="profile-nav-item" href="#">
                    <span class="profile-nav-icon">
                        <i class="bi bi-chat-dots"></i>
                    </span>
                    <span>Messages</span>
                </a>
            </div>
        </div>
    </aside>

    <!-- Main content -->
    <section class="flex-grow-1">
        <div class="d-flex justify-content-between align-items-start mb-3">
            <div>
                <h3 class="fw-bold mb-1">My Profile</h3>
                <div class="text-muted">Manage your account settings</div>
            </div>
        </div>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show mb-3" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show mb-3" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <!-- Top profile card -->
        <div class="card profile-card mb-4">
            <div class="card-body d-flex flex-column flex-md-row align-items-start align-items-md-center gap-3">
                <div class="profile-avatar">
                    @(string.IsNullOrWhiteSpace(Model.FullName) ? "U" : Model.FullName.Trim()[0].ToString().ToUpper())
                </div>
                <div class="flex-grow-1">
                    <div class="fw-bold fs-5">@Model.FullName</div>
                    <div class="text-muted small">
                        @(Model.Roles != null && Model.Roles.Any() ? string.Join(", ", Model.Roles) : "Tenant")
                    </div>
                    <div class="text-muted small mt-1">
                        Member since @Model.CreatedAt.ToString("MMM dd, yyyy")
                    </div>
                </div>
                <div class="d-flex flex-column flex-md-row gap-2">
                    <a href="@Url.Action("Edit", "Profile")" class="btn btn-outline-secondary btn-sm">
                        Change Photo
                    </a>
                </div>
            </div>
        </div>

        <div class="row g-3">
            <!-- Personal Information -->
            <div class="col-12 col-xl-7">
                <div class="card profile-card h-100">
                    <div class="card-body">
                        <h5 class="fw-bold mb-3">Personal Information</h5>
                        <form>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label small text-muted">Full Name</label>
                                    <input class="form-control" value="@Model.FullName" disabled />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label small text-muted">Email</label>
                                    <input class="form-control" value="@Model.Email" disabled />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label small text-muted">Phone Number</label>
                                    <input class="form-control" value="@(Model.PhoneNumber ?? "Chưa cập nhật")" disabled />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label small text-muted">Date of Birth</label>
                                    <input class="form-control" value="@(Model.DateOfBirth?.ToString("dd/MM/yyyy") ?? "Chưa cập nhật")" disabled />
                                </div>
                                <div class="col-12">
                                    <label class="form-label small text-muted">Address</label>
                                    <input class="form-control" value="@(Model.Address ?? "Chưa cập nhật")" disabled />
                                </div>
                            </div>

                            <div class="mt-4">
                                <a href="@Url.Action("Edit", "Profile")" class="btn btn-primary">
                                    <i class="bi bi-save me-1"></i> Save Changes
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Change Password -->
            <div class="col-12 col-xl-5">
                <div class="card profile-card h-100">
                    <div class="card-body">
                        <h5 class="fw-bold mb-3">Change Password</h5>
                        <div class="mb-3">
                            <label class="form-label small text-muted">Current Password</label>
                            <input type="password" class="form-control" placeholder="••••••••" disabled />
                        </div>
                        <div class="mb-3">
                            <label class="form-label small text-muted">New Password</label>
                            <input type="password" class="form-control" placeholder="••••••••" disabled />
                        </div>
                        <div class="mb-3">
                            <label class="form-label small text-muted">Confirm New Password</label>
                            <input type="password" class="form-control" placeholder="••••••••" disabled />
                        </div>
                        <a href="@Url.Action("ChangePassword", "Auth")" class="btn btn-primary w-100 mt-2">
                            Update Password
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>